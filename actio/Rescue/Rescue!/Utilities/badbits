NEWTYPE .pos
  x.b:y.b
End NEWTYPE
NEWTYPE .ovr
  x.w:y.w:tile.b
End NEWTYPE
NEWTYPE .map
  tile.b:otile.b:flip.b
  fx.q:fy.q:drag.q:drive.q
  act.b:level.b:collide.b:hit.b
  bonus.w:text.s
End NEWTYPE
NEWTYPE .bad
  movetot.b:movno.b:inc.w:badx.w:bady.w
End NEWTYPE
NEWTYPE .mov
  dirx.b:diry.b:image.b:inctot.w
End NEWTYPE

Dim baddy.bad(4)          ;baddy status
Dim badmv.mov(4,20)       ;baddy movement
Dim grid.b(#gridw,#gridh) ;the map
Dim map.map(#featn+#arrows)       ;map features
Dim driv.b(#gridw,#gridh) ;the drive control
