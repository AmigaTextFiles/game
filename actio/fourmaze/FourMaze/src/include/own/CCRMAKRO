
CARRYCLEAR	MACRO
	ANDI.B	#$FE,CCR
	ENDM

CARRYSET	MACRO
	ORI.B	#1,CCR
	ENDM

OVERFLOWCLEAR	MACRO
	ANDI.B	#%11111101,CCR
	ENDM

OVERFLOWSET	MACRO
	ORI.B	#2,CCR
	ENDM

ZEROCLEAR	MACRO
	ANDI.B	#%11111011,CCR
	ENDM

ZEROSET	MACRO
	ORI.B	#4,CCR
	ENDM

NEGATIVCLEAR	MACRO
	ANDI.B	#%11110111,CCR
	ENDM

NEGATIVSET	MACRO
	ORI.B	#8,CCR
	ENDM

EXTENDCLEAR	MACRO
	ANDI.B	#%11101111,CCR
	ENDM

EXTENDSET	MACRO
	ORI.B	#$10,CCR
	ENDM

