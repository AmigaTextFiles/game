#use this file with autoconf to produce a configure script.
AC_INIT(README)

# Setup for automake
AM_INIT_AUTOMAKE(lupengo,1.00)

# Check for tools
AC_PROG_MAKE_SET
AC_PROG_CC
AC_PROG_INSTALL

# Trick for alpha
AC_CANONICAL_HOST
AC_CANONICAL_TARGET
case "$target" in
	alpha*-*-linux*)
		CXXFLAGS="$CXXFLAGS -mcpu=ev4 -Wa,-mall"
		;;
esac

# Check for SDL
SDL_VERSION=1.0.8
AM_PATH_SDL($SDL_VERSION,
            :,
	    AC_MSG_ERROR([*** SDL version $SDL_VERSION not found!])
)
CFLAGS="$CFLAGS $SDL_CFLAGS"
LIBS="$LIBS $SDL_LIBS"

# Finally create all the generated files
AC_OUTPUT([Makefile picture/Makefile sound/Makefile])
