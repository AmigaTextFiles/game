; $VER: Payback Update Version 1.2 (23 February 2001)
; © James Daniels/Apex Designs

(set #installdrawer (cat "Kies a.u.b. de lade waar Payback is geeinstalleerd."))

(set #installdrawer-help (cat "Kies a.u.b. de lade waar de volledige versie van Paybackback bevind die u wilt bijwerken."))

(set #notfound (cat "\nDit is geen geldige Payback installatie.\nKies a.u.b. een andere lade."))

(set #install-all (cat "Bezig met bijwerken..."))

(set #finished-message (cat "\nPayback is succesvol bijgewerkt."))

(set destdir "RAM:")

(while (= (exists (tackon destdir "Payback.exe")) 0)
  (
    (set destdir
      (askdir
        (prompt #installdrawer)
        (help #installdrawer-help)
        (default "RAM:")
        (disk)
      )
    )

    (if (= (exists (tackon destdir "Payback.exe")) 0)
      (message #notfound)
    )
  )
)

(complete 10)

(copyfiles
    (prompt #install-all)
    (source "Files/")
    (pattern "#?")
    (dest destdir)
)

(complete 100)

(message #finished-message)

(set @default-dest destdir)
