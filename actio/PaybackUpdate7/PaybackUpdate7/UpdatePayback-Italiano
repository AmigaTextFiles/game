; $VER: Payback Update Version 1.2 (23 February 2001)
; © James Daniels/Apex Designs

(set #installdrawer (cat "Per favore scegli il cassetto in cui è stato installato Payback."))

(set #installdrawer-help (cat "Scegli la directory dove hai installato la versione completa di Payback che vuoi aggiornare."))

(set #notfound (cat "\nPayback non risulta installato correttamente.\nPer favore scegli un altro cassetto."))

(set #install-all (cat "Aggiornamento in corso..."))

(set #finished-message (cat "\nPayback è stato aggiornato con successo."))

(set destdir "RAM:")

(while (= (exists (tackon destdir "Payback.exe")) 0)
  (
    (set destdir
      (askdir
        (prompt #installdrawer)
        (help #installdrawer-help)
        (default "RAM:")
        (disk)
      )
    )

    (if (= (exists (tackon destdir "Payback.exe")) 0)
      (message #notfound)
    )
  )
)

(complete 10)

(copyfiles
    (prompt #install-all)
    (source "Files/")
    (pattern "#?")
    (dest destdir)
)

(complete 100)

(message #finished-message)

(set @default-dest destdir)
