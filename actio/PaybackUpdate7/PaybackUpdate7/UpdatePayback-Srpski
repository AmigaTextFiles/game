; $VER: Payback Update Version 1.2 (23 February 2001)
; © James Daniels/Apex Designs

(set #installdrawer (cat "Molim Vas, odaberite direktorijum gde je Payback instaliran."))

(set #installdrawer-help (cat "Molim Vas, odaberite direktorijum koji sadräi punu verziju Payback-a koju äelite da osveäite."))

(set #notfound (cat "\nIzgleda da ovo nije ispravno instaliran Payback.\nMolim Vas, odaberite drugi direktorijum."))

(set #install-all (cat "Osveäavam fajlove..."))

(set #finished-message (cat "\nPayback je uspeãno osveäen."))

(set destdir "RAM:")

(while (= (exists (tackon destdir "Payback.exe")) 0)
  (
    (set destdir
      (askdir
        (prompt #installdrawer)
        (help #installdrawer-help)
        (default "RAM:")
        (disk)
      )
    )

    (if (= (exists (tackon destdir "Payback.exe")) 0)
      (message #notfound)
    )
  )
)

(complete 10)

(copyfiles
    (prompt #install-all)
    (source "Files/")
    (pattern "#?")
    (dest destdir)
)

(complete 100)

(message #finished-message)

(set @default-dest destdir)
