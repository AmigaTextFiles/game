; $VER: Payback Update Version 1.2 (23 February 2001)
; © James Daniels/Apex Designs

(set #installdrawer (cat "Bitte das Payback-Verzeichnis auswählen."))

(set #installdrawer-help (cat "Bitte das Verzeichnis auswählen, das die Payback-Installation enthält, für die das Update bestimmt ist."))

(set #notfound (cat "\nDies scheint keine gültige Payback-Installation zu sein.\nBitte ein anderes Verzeichnis auswählen."))

(set #install-all (cat "Update der Dateien..."))

(set #finished-message (cat "\nDas Update der Payback-Installation wurde erfolgreich durchgeführt."))

(set destdir "RAM:")

(while (= (exists (tackon destdir "Payback.exe")) 0)
  (
    (set destdir
      (askdir
        (prompt #installdrawer)
        (help #installdrawer-help)
        (default "RAM:")
        (disk)
      )
    )

    (if (= (exists (tackon destdir "Payback.exe")) 0)
      (message #notfound)
    )
  )
)

(complete 10)

(copyfiles
    (prompt #install-all)
    (source "Files/")
    (pattern "#?")
    (dest destdir)
)

(complete 100)

(message #finished-message)

(set @default-dest destdir)
