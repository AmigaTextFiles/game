; $VER: Payback Update Version 1.2 (23 February 2001)
; © James Daniels/Apex Designs

(set #installdrawer (cat "Prosím zvolte zaêízení, kde je hra Payback nainstalována."))

(set #installdrawer-help (cat "Prosím zvolte adresáê, který obsahuje plnou verzi hry Payback pro její aktualizaci."))

(set #notfound (cat "\nTohle nepêísluîí platné instalaci hry Payback.\nProsím zvolte jiný adresáê."))

(set #install-all (cat "Aktualizuji soubory..."))

(set #finished-message (cat "\nPayback byl úspëînë aktualizován."))

(set destdir "RAM:")

(while (= (exists (tackon destdir "Payback.exe")) 0)
  (
    (set destdir
      (askdir
        (prompt #installdrawer)
        (help #installdrawer-help)
        (default "RAM:")
        (disk)
      )
    )

    (if (= (exists (tackon destdir "Payback.exe")) 0)
      (message #notfound)
    )
  )
)

(complete 10)

(copyfiles
    (prompt #install-all)
    (source "Files/")
    (pattern "#?")
    (dest destdir)
)

(complete 100)

(message #finished-message)

(set @default-dest destdir)
