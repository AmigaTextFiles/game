; © James Daniels/Apex Designs

(set #installdrawer (cat "Por favor, elija el directorio donde está instalado Payback."))

(set #installdrawer-help (cat "Por favor, elija el directorio donde se encuentra la versión completa de Payback que desea actualizar."))

(set #notfound (cat "\nEsto no parece ser una instalación válida de Payback.\nPor favor, elija otro directorio."))

(set #install-all (cat "Actualizando ficheros..."))

(set #finished-message (cat "\nPayback ha sido actualizado con éxito."))

(set destdir "RAM:")

(while (= (exists (tackon destdir "Payback.exe")) 0)
  (
    (set destdir
      (askdir
        (prompt #installdrawer)
        (help #installdrawer-help)
        (default "RAM:")
        (disk)
      )
    )

    (if (= (exists (tackon destdir "Payback.exe")) 0)
      (message #notfound)
    )
  )
)

(complete 10)

(copyfiles
    (prompt #install-all)
    (source "Files/")
    (pattern "#?")
    (dest destdir)
)

(complete 100)

(message #finished-message)

(set @default-dest destdir)
