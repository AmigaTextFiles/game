; $VER: Payback Update Version 1.2 (23 February 2001)
; © James Daniels/Apex Designs

(set #installdrawer (cat "S.V.P, choisissez le tiroir ou Payback est installé sur votre disque dur"))

(set #installdrawer-help (cat "S.V.P, choisissez le tiroir ou se trouve la version complète de Payback que vous souhaitez mettre à jour."))

(set #notfound (cat "\nCe tiroir n'est pas une installation de Payback.\nS.V.P, choisissez un autre tiroir."))

(set #install-all (cat "Mise à jour des fichiers..."))

(set #finished-message (cat "\nPayback a été mis à jour avec succès."))

(set destdir "RAM:")

(while (= (exists (tackon destdir "Payback.exe")) 0)
  (
    (set destdir
      (askdir
        (prompt #installdrawer)
        (help #installdrawer-help)
        (default "RAM:")
        (disk)
      )
    )

    (if (= (exists (tackon destdir "Payback.exe")) 0)
      (message #notfound)
    )
  )
)

(complete 10)

(copyfiles
    (prompt #install-all)
    (source "Files/")
    (pattern "#?")
    (dest destdir)
)

(complete 100)

(message #finished-message)

(set @default-dest destdir)

