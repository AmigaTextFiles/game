; $VER: Payback Update Version 1.2 (23 February 2001)
; © James Daniels/Apex Designs

(set #installdrawer (cat "Vennligst velg katalogen Payback er installert i."))

(set #installdrawer-help (cat "Vennligst velg katalogen som innneholder fullversjonen av Payback som du ønsker å oppdatere."))

(set #notfound (cat "\nFant ikke noen gyldig Payback-installasjon i denne katalogen.\nVennligst velg en annen."))

(set #install-all (cat "Oppdaterer filer..."))

(set #finished-message (cat "\nPayback har blitt oppdatert."))

(set destdir "RAM:")

(while (= (exists (tackon destdir "Payback.exe")) 0)
  (
    (set destdir
      (askdir
        (prompt #installdrawer)
        (help #installdrawer-help)
        (default "RAM:")
        (disk)
      )
    )

    (if (= (exists (tackon destdir "Payback.exe")) 0)
      (message #notfound)
    )
  )
)

(complete 10)

(copyfiles
    (prompt #install-all)
    (source "Files/")
    (pattern "#?")
    (dest destdir)
)

(complete 100)

(message #finished-message)

(set @default-dest destdir)
