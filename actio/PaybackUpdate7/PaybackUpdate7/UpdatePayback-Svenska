; © James Daniels/Apex Designs

(set #installdrawer (cat "Välj den låda du har installerat Payback i."))

(set #installdrawer-help (cat "Var god, välj lådan som innehåller den skarpa versionen av Payback som du vill uppdatera."))

(set #notfound (cat "\nDetta verkar inte vara en accepterad Payback installation.\nVar god, välj en annan låda."))

(set #install-all (cat "Uppdaterar filerna..."))

(set #finished-message (cat "\nPayback är nu uppdaterat."))

(set destdir "RAM:")

(while (= (exists (tackon destdir "Payback.exe")) 0)
  (
    (set destdir
      (askdir
        (prompt #installdrawer)
        (help #installdrawer-help)
        (default "RAM:")
        (disk)
      )
    )

    (if (= (exists (tackon destdir "Payback.exe")) 0)
      (message #notfound)
    )
  )
)

(complete 10)

(copyfiles
    (prompt #install-all)
    (source "Files/")
    (pattern "#?")
    (dest destdir)
)

(complete 100)

(message #finished-message)

(set @default-dest destdir)
