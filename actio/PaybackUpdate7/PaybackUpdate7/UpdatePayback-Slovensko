(set #installdrawer (cat "Izberite prosim imenik, v katerem imate name¹èeno igro Payback."))

(set #installdrawer-help (cat "Izberite prosim imenik, ki vsebuje polno razlièico igre Payback, ki jo ¾elite posodobiti."))

(set #notfound (cat "\nIzgleda, da ne gre za delujoèo namestitev igre Payback.\nIzberite prosim drug imenik."))

(set #install-all (cat "Posodabljam datoteke..."))

(set #finished-message (cat "\nIgro Payback sem uspe¹no posodobil."))

(set destdir "RAM:")

(while (= (exists (tackon destdir "Payback.exe")) 0)
  (
    (set destdir
      (askdir
        (prompt #installdrawer)
        (help #installdrawer-help)
        (default "RAM:")
        (disk)
      )
    )

    (if (= (exists (tackon destdir "Payback.exe")) 0)
      (message #notfound)
    )
  )
)

(complete 10)

(copyfiles
    (prompt #install-all)
    (source "Files/")
    (pattern "#?")
    (dest destdir)
)

(complete 100)

(message #finished-message)

(set @default-dest destdir)
