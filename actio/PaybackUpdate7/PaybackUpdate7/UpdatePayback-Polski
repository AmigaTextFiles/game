; Polish version Mariusz Danilewicz / ATO PL

(set #installdrawer (cat "Wybierz katalog, w którym zainstalowaîeô grë Payback."))

(set #installdrawer-help (cat "Wybierz katalog zawierajâcy peînâ wersjë gry Payback, którâ chcesz uaktualniê."))

(set #notfound (cat "\nTo nie wyglâda jak prawidîowo zainstalowany Payback.\nProszë wybraê inny katalog."))

(set #install-all (cat "Uaktualniam pliki..."))

(set #finished-message (cat "\nTwój Payback zostaî zaktualizowany pomyôlnie."))

(set destdir "RAM:")

(while (= (exists (tackon destdir "Payback.exe")) 0)
  (
    (set destdir
      (askdir
        (prompt #installdrawer)
        (help #installdrawer-help)
        (default "RAM:")
        (disk)
      )
    )

    (if (= (exists (tackon destdir "Payback.exe")) 0)
      (message #notfound)
    )
  )
)

(complete 10)

(copyfiles
    (prompt #install-all)
    (source "Files/")
    (pattern "#?")
    (dest destdir)
)

(complete 100)

(message #finished-message)

(set @default-dest destdir)
