
beach2:m       ;Menu

IF ${bh_quitgame} EQ 1 
SKIP ende
ENDIF

beach2:g ${bh_numplayers} 0 0 ${BH_DIFFICULTY} ${BH_MUSIC}

IF ${bh_numplayers} EQ 1

IF ${bh_winner} EQ 0
beach2:ywn
ELSE
beach2:yrd
ENDIF

ELSE 
IF ${bh_winner} EQ 0
beach2:p1wins
ELSE
beach2:p2wins
ENDIF


ENDIF


execute beach2:LOOP     ;Rekursion
LAB ende
set bh_quitgame 0
