CC			=	gcc
CXX		=	g++
CHMOD		=	chmod
RM			=	rm -f
STRIP		=	strip


CFLAGS	=	-g -Wall -O2 `sdl-config --cflags`
LDFLAGS	=	`sdl-config --libs` -lSDL_mixer


SRC		=	$(wildcard *.cc)
OBJ		=	$(SRC:.cc=.o)
BIN		=	Ri-li


all:	$(BIN)

$(BIN): $(OBJ)
		$(CXX) $(OBJ) -o $(BIN).db $(LDFLAGS)
		$(STRIP) --strip-unneeded --remove-section=.comment $(BIN).db -o $(BIN)
		$(CHMOD) u+x $(BIN)

%.o:	%.cc
		$(CXX) $(CFLAGS) -c $< -o $@

clean:
		$(RM) $(OBJ) $(BIN).db $(BIN)
