echo " "
echo "Swosted 3.2 Install2disk script"
echo " "
echo "Insert formatted disk in drive df0: and press mousebotton"
mouse
echo " "
makedir df0:s >nil:
makedir df0:c >nil:
echo "Making disk bootable"
install df0:
relabel df0: Swosted_3.2
echo "Copying RNCdepack utility & doc     (0 %)"
copy rncdepack df0:c/
copy rncdepack.doc df0:c/
echo "Copying SWOSTED 3.2 main executable (20%)"
copy SWOSTED_3.2 df0:
copy SWOSTED_3.2.info df0:
echo "Copying documentation               (40%)"
copy English.guide df0:
copy Italiano.guide df0:
copy English.guide.info df0:
copy Italiano.guide.info df0:
echo "Copying installation script         (60%)"
copy Install_3.2 df0:
copy Install_3.2.info df0:
echo "Copying datafiles                   (80%)"
copy logo.abk df0:
copy data.dat df0:
echo "Creating Startup sequence....       (99%)"
echo "swosted_3.2" >df0:s/startup-sequence
ask "Are you a registered user of Swosted 3.2 ?"
if warn
	echo "Copying personal registration keyfile"
	copy sw3.keyfile df0:
endif
echo " "
echo "Installation succesfully completed"
