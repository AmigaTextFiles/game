; $VER: SWOS Ed Install-Script v2.0 (10.02.99) by Piotr Bieniek


; przedstaw sië uûytkownikowi
(message "SWOS Ed © 1999 Piotr Bieniek\n\n\n"
         "This script will install SWOS Ed 1.85 "
         "on your hard disk drive.")
(welcome)

; spytaj uûytkownika o miejsce instalacji
(set default-dest
     (tackon (askdir (prompt "Where would you like to install SWOS Ed?\n"
                             "A drawer called 'SWOSEd' will be created there.")
                     (help @askdir-help)
                     (default @default-dest)
             )
     "SWOSEd"
     )
)
(set @default-dest default-dest)

; stworzenie potrzebnych katalogów
(makedir @default-dest
         (infos)
)

(complete 20)

; skopiuj odpowiednie pliki
(copyfiles (source "SWOSEd")
           (dest @default-dest)
           (infos)
)
(complete 40)

(copyfiles (source "Catalogs")
           (dest (tackon @default-dest "Catalogs"))
           (all)
)
(complete 60)

(copyfiles (source "Help")
           (dest (tackon @default-dest "Help"))
           (all)
)
(copyfiles (source "Help.info")
           (dest @default-dest)
)
(complete 80)

; zainstaluj ProPack Clone'a
(set instppclone (askoptions (choices "Install ProPack Clone")
                             (prompt "Would you like to install ProPack Clone\n"
                                     "(c) 1999 Paul Qureshi <paul@mc68k.demon.co.uk>\n"
                                     "on your hard disk drive?\n\n"
                                     "Installation of ProPack Clone is highly recommended\n")
                             (help @askoptions-help)
                             (default 1)
                 )
)
(if (= instppclone 1)
 (

  (set ppclone-dest
     (askdir (prompt "Where would you like to install ProPack Clone?\n"
                     "It should be somewhere in your C: directory.")
             (help @askdir-help)
             (default "C:")
     )
  )

  (copyfiles (source "Extras/PPClone/PPClone")
             (dest ppclone-dest)
  )

 )
)
