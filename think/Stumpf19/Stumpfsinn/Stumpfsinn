; Stumpfsinn Startscript

assign >NIL: SHOME: ""

IF `avail total` GT 700000 VAL

  makedir >NIL: ram:STEMP
  makedir >NIL: ram:STEMP/Data
  copy >NIL: Data/ to ram:STEMP/Data/ ALL
  cd ram:STEMP/Data
  smartplay stumpf15.data nowindow nomouse noerror loop
  cd /
  Data/stumpf.exe
  Data/smartplay stop
  cd SHOME:
  delete >NIL: ram:STEMP/ ALL FORCE
  assign >NIL: SHOME: dismount
  avail >NIL: flush
  quit

ELSE

  cd Data
  smartplay stumpf15.data nowindow nomouse noerror loop
  cd /
  Data/Stumpf.exe
  Data/smartplay stop
  quit

ENDIF
