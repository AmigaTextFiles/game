; Installationsdatei für Stumpfsinn 1.9

(message
        (cat "\nStumpfsinn wird auf Ihrer Festplatte ein "
                 "Verzeichnis namens \"Stumpfsinn\" einrichten "
   )
)

; Verzeichnisabfrage

(set robolocate
        (askdir
                (prompt "Wo soll das Verzeichnis erstellt werden?")
                (help @askdir-help)
                (default @default-dest)
        )
)

; Verzeichnis erstellen

(set robopath (tackon robolocate "Stumpfsinn"))

(makedir robopath (infos))

(makedir (tackon robopath "Data") )

(complete 10)

(set @default-dest robopath)

; Stumpfsinn in das Verzeichnis kopieren

(message "\nDie Dateien werden nun in das Verzeichnis kopiert."
         "\nBitte haben Sie etwas Geduld. ")

(working "Kopiervorgang läuft...")

(copyfiles
   (source "Stumpfsinn")
   (dest robopath)
   (infos)
)

(copyfiles
   (source "Anleitung")
   (dest robopath)
   (infos)
)

(copyfiles
   (source "Data")
   (dest (tackon robopath "Data"))
   (all)
)

(complete 80)

(complete 100)
(message " Die Installation wurde erfolgreich abgeschlossen!"
         " Sie können Stumpfsinn jetzt von Festplatte spielen."
         " Bitte lesen auch die mitgelieferte Anleitung!")
