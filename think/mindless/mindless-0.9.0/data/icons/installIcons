#!/bin/bash

	for path in /usr/share /usr/local/share /opt/share /opt/kde/share /opt/kde3/share /opt/kde3.1/share ; do
		if [ -d $path/applnk/Games/Arcade ]; then
			install mindless.desktop $path/applnk/Games/Board
		fi

		if [ -d $path/icons/default.kde/32x32/apps ]; then
			install mindless-32x32.png $path/icons/default.kde/32x32/apps/mindless.png
		fi

		if [ -d $path/icons/default.kde/48x48/apps ]; then
			install mindless-48x48.png $path/icons/default.kde/48x48/apps/mindless.png
		fi

		if [ -d $path/icons/default.kde/64x64/apps ]; then
			install mindless-64x64.png $path/icons/default.kde/64x64/apps/mindless.png
		fi
	done
