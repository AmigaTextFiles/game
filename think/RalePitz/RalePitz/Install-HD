; RalePitz Installation V1.0
; Thomas Howells
;---------------------------------------------------------------------------
(complete 0)
;---------------------------------------------------------------------------
(working "Die Installation von RalePitz begind jetzt")
;---------------------------------------------------------------------------
(set @default-source
  (askdir
    (prompt "Bitte wählen sie das Verzeichnis oder die Diskette"
	    "mit dem Programm RalePitz aus !")
      (help @askdir-help)
	(default "")
  )
)
;---------------------------------------------------------------------------
(set @default-dest
  (askdir
    (prompt "In welches Verzeichnis soll RalePitz kopiert werden ?")
      (help @askdir-help)
	(default @default-dest)
  )
)
;---------------------------------------------------------------------------
(if
  (= (exists "RalePitz") 0)
    (makedir @default-dest)
)
;---------------------------------------------------------------------------
(copyfiles
  (prompt "Ich kopiere jetzt RalePitz")
    (help @copyfiles-help)
      (source @default-source)
	(dest @default-dest)
	  (confirm)
	    (all)
)
;---------------------------------------------------------------------------
