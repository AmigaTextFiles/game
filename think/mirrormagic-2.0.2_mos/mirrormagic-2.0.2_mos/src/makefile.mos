CC			= gcc
RM			= rm
STRIP		= strip

CFLAGS	= -g -noixemul -Wall -O2 -I/usr/include -I/usr/include/SDL -DTARGET_SDL -DDEBUG
LDFLAGS	= -noixemul libgame/libgame.a -L/usr/lib -lSDL_ttf -lSDL -lSDL_image -lSDL_mixer -ljpeg -lvorbisfile -lvorbis -lpng -logg -lz -lfreetype

OBJS		= main.o init.o events.o tools.o screens.o game.o editor.o files.o cartoons.o
OUTPUT	= mirrormagic

all: $(OBJS)
		$(CC) $(OBJS) -o $(OUTPUT) $(LDFLAGS)

%.o:	%.cc 
		$(CC) ${CFLAGS} -c $<

clean:
		$(RM) $(OBJS) $(OUTPUT)
