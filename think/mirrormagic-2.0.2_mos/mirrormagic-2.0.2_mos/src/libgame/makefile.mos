AR			= ar
CC			= gcc
RANLIB	= ranlib
RM			= rm

CFLAGS	= -g -noixemul -Wall -O2 -I/usr/include -I/usr/include/SDL -DTARGET_SDL -DDEBUG

OBJS		= system.o gadgets.o text.o sound.o pcx.o image.o random.o misc.o msdos.o x11.o sdl.o
OUTPUT	= libgame.a

all: $(OUTPUT)

$(OUTPUT):	$(OBJS)
		$(AR) cru $(OUTPUT) $(OBJS)
		$(RANLIB) $(OUTPUT)

%.o:	%.c
		$(CC) ${CFLAGS} -c $<

clean:
		$(RM) $(OBJS) $(OUTPUT)
