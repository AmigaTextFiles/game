; $VER: Install Spheres of Influence 3.0
; © 1996 Ed Musgrove


(set OS_VER (/ (getversion) 65536) )

(if(< OS_VER 40)
  (abort MSG_wrong_OS)
)


(set #install-msg
(cat "\nThis script installs Spheres of Influence on your Amiga's hard drive.\n\n\n"
     "Spheres of Influence© 1991-1996 Ed Musgrove\n"
     "All rights reserved."
))

(set #done-msg
(cat "\nInstallation complete.\n\n"
     "Spheres of Influence© 1991-1996 Ed Musgrove\n"
     "All rights reserved."
))

(set MSG_wrong_OS (cat "You need at least OS V3.0 to run Spheres of Influence 3.0!\n\n"
   "Spheres of Influence will not run with your system configuration !"))
(set MSG_Installing "Installing Spheres of Influence now.")
(set MSG_SelectPath "Select path to Spheres of Influence")

(message #install-msg)

(copyfiles
  (prompt MSG_Installing)
  (help @copyfiles-help)
  (source "")
  (set soicomdir
              (askdir
                     (prompt MSG_SelectPath)
                     (help @askdir-help)
                     (newpath)
                     (default "SYS:Spheres of Influence")
              )
  )
  (dest soicomdir)
  (all)
  (infos)
  (confirm)
)
(complete 99)
(message #done-msg)
(exit (quiet))
