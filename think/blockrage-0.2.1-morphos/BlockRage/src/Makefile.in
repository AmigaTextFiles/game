OBJS    = main.o gfxout.o gfxlib.o menus.o keyboard.o bg.o sound.o global.o

$(PROGNAME)$(XSUF): $(OBJS)
	gcc -s -o $(PROGNAME)$(XSUF) $(OBJS) $(LIBS)

main.o: main.c global.h gfxlib.h gfxout.h menus.h bg.h keyboard.h sound.h main.h
gfxlib.o: gfxlib.c gfxlib.h gfxout.h global.h
gfxout.o: gfxout.c gfxout.h global.h
global.o: global.c global.h
menus.o: menus.c main.h global.h
keyboard.o: keyboard.c keyboard.h global.h
bg.o: bg.c bg.h global.h
sound.o: sound.c sound.h global.h

clean:
	rm -f *.o $(PROGNAME)$(XSUF)
