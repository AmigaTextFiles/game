;
; $VER: Guess Stress installation 1.0 (08.05.2000)
;
; Copyright (c) 2000 Kees Coenradi
;

;****************************************************************************
;
; English texts
;
(if (not (= @language "nederlands"))
  (
    (set #bad-kick "You must have AmigaOS 3.0 (V39) or newer to be able to use Guess_Stress.")
    (set #selectdir "Please select where to install Guess_Stress\nA directory 'Guess_Stress' will be created automatically")
    (set #makediracd "Creating directory 'Guess Stress'")
    (set #copymainprg "Copying Guess_Stress...")
    (set #copydocs "Copying documentation...")
    (set #copypuzzle "Copying puzzles...")
    (set #copyfonts "Copying Fonts...")
    (set #copycata "Copying Catalogs...")
  )
)

;****************************************************************************
;
; Nederlandse tekst
;
(if (= @language "nederlands")
  (
    (set #bad-kick "U heeft minimaal AmigaOS 3.0 (V39) of hoger nodig om Guess_stress te gebruiken.")
    (set #selectdir "Waar moet Guess_Stress geinstalleerd worden?\nEen lade voor 'Guess_stress' wordt automatisch gemaakt.")
    (set #makediracd "Ik maak lade 'Guess_Stress'")
    (set #copymainprg "Kopieer Guess_Stress...")
    (set #copydocs "Kopieer Handleiding...")
    (set #copypuzzle "Kopieer puzzels...")
    (set #copyfonts "Kopieer Fonts...")
    (set #copycata "Kopieer Catalogs...")
    
  )
)

;****************************************************************************
;
; Setup
;

(complete 0)

(if (< (/ (getversion) 65536) 39)
  (abort #bad-kick)
)



;****************************************************************************
;
; Welcome
;

(welcome)

(complete 10)

;****************************************************************************
;
; Setup directory
;

(set #destdir
  (askdir
    (prompt #selectdir)
    (help @askdir-help)
    (default @default-dest)
    (newpath)
  )
)


(set @default-dest (tackon #destdir "Guess_Stress"))


(complete 20)

(makedir @default-dest
  (prompt #makediracd)
  (help @makedir-help)
  (infos)
)

(complete 40)

;****************************************************************************
;
; Copy main program
;

(copyfiles
  (prompt #copymainprg)
  (help @copyfiles-help)
  (source "Guess_Stress")
  (dest @default-dest)
  (infos)
  (confirm)
)

(complete 50)

(copyfiles
  (prompt #copymainprg)
  (help @copyfiles-help)
  (source "bg")
  (dest @default-dest)
  (infos)
)

(complete 55)

(set catalog_dir (tackon @default-dest "Catalogs"))
(if (not (exists catalog_dir))
(makedir catalog_dir)
)

(copyfiles
  (prompt #copycata)
  (help @copyfiles-help)
  (source "Catalogs/")
  (dest catalog_dir)
  (all)
  (confirm)
 )

;****************************************************************************
;
; Copy puzzels
;

(set puzzle_dir (tackon @default-dest "Puzzles"))
(if (not (exists puzzle_dir))
(makedir puzzle_dir)
)

(copyfiles
  (prompt #copypuzzle)
  (help @copyfiles-help)
  (source "Puzzles/")
  (dest puzzle_dir)
  (all)
  (confirm)
 )

(complete 60)

;****************************************************************************
;
; Copy fonts
;

(set Fonts_dir (tackon @default-dest "Fonts:"))
(if (not (exists Fonts_dir))
(makedir Fonts_dir)
)

(copyfiles
  (prompt #copyfonts)
  (help @copyfiles-help)
  (source "Fonts/")
  (dest Fonts_dir)
  (all)
  (confirm)
 )

(complete 80)

;****************************************************************************
;
; Copy documentation
;

(copyfiles
  (prompt #copydocs)
  (help @copyfiles-help)
  (source "")
  (pattern "#?.(guide|readme)")
  (dest @default-dest)
  (infos)
  (confirm)
)

(complete 90)


;****************************************************************************
;
; Exit
;

(complete 100)
(exit)

