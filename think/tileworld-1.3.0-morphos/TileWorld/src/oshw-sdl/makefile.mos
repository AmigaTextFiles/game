AR			=	ar
CC			=	gcc
RANLIB	=	ranlib
RM			=	rm -f


CFLAGS	=	-g -O2 -Wall `sdl-config --cflags`


OBJ		=	sdloshw.o sdltimer.o sdlerr.o sdlin.o sdlout.o sdltext.o sdltile.o sdlsfx.o
BIN		=	liboshw.a


all: $(BIN)

$(BIN):	$(OBJ)
		$(AR) cru $(BIN) $(OBJ)
		$(RANLIB) $(BIN)

%.o:		%.c
		$(CC) $(CFLAGS) -c $<

clean:
		$(RM) $(OBJ) $(BIN)
