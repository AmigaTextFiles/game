CC				=	ppc-morphos-gcc
CXX			=	ppc-morphos-g++
CHMOD			=	chmod
RM				=	rm -f
STRIP			=	strip


CFLAGS	=	-g -Wall -O2 `sdl-config --cflags`
LDFLAGS	=	`sdl-config --libs`


SRC		=	$(wildcard *.cpp)
OBJ		=	$(SRC:.cpp=.o)
BIN		=	BeastieWorker


all:	$(BIN)

$(BIN): $(OBJ)
		$(CXX) $(OBJ) -o $(BIN).db $(LDFLAGS)
		$(STRIP) --strip-unneeded --remove-section=.comment $(BIN).db -o $(BIN)
		$(CHMOD) u+x $(BIN)

%.o:	%.cpp
		$(CXX) $(CFLAGS) -c $< -o $@

clean:
		$(RM) $(OBJ) $(BIN).db $(BIN)
