echo "     A directory in your DH0 partition will be created named 'Number100'"
echo "     and the game will be copied there.  You will need about 50k Free!"
echo ""
echo "     If you need to change the draw load HDInstaller into a text"
echo "     editor and edit the draws"
echo ""
ask "     Do you want to install Number100 ?"
if warn
   echo ""
   echo "     Creating DH0:Number100/..."
   makedir "DH0:Number100"
   copy "NumberV1" to "DH0:Number100/"
   copy "Number100.doc" to "DH0:Number100/"
   copy "NumberV1.info" to "DH0:Number100/"
   copy "Number100.doc.info" to "DH0:Number100/"
   copy "S/Lowscore" to "DH0:S/"
   echo ""
   echo "     Enjoy the game. Keep Guessing!"
endif
