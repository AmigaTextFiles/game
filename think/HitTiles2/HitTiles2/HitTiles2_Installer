; HIT TILES 2 Installer script
; $VER HIT TILES 2 Install 1.1  (works even on 1.3)
; written by HIT MAN

(set @new-dest
(askdir
(prompt "WARNING!\nIf you have an old version of HIT TILES 2, delete it "
 "before to install this version\nWhich Drive Did You Install To")
(help @askdir-help)
(default "SYS:")))

(makeassign "assigns" @new-dest)
(if (exists "assigns:HitTiles2") (
  (message "Directory already exists!!!")
  (exit (quiet)))
)

(makedir "assigns:HitTiles2")
(makedir "assigns:HitTiles2/Docs")
(makedir "assigns:HitTiles2/Gfx")
(makedir "assigns:HitTiles2/Mod")
(makedir "assigns:HitTiles2/Pics")
(makedir "assigns:HitTiles2/Sfx")
(makedir "assigns:HitTiles2/Tiles")
(makedir "assigns:HitTiles2/HitDemos")

(copyfiles
(source "GFX/Empty.info")
(dest "assigns:"))
(rename "assigns:Empty.info" "assigns:HitTiles2.info")

(copyfiles
(source "HT2")
(dest "assigns:HitTiles2"))

(copyfiles
(source "Docs.info")
(dest "assigns:HitTiles2"))

(copyfiles
(source "HitDemos.info")
(dest "assigns:HitTiles2"))

(copyfiles
(source "HighScore.HT2")
(dest "assigns:HitTiles2"))

(copyfiles
(source "HitTiles2")
(dest "assigns:HitTiles2"))

(copyfiles
(source "HitTiles2.info")
(dest "assigns:HitTiles2"))

(copyfiles
(source "IffToTiles")
(dest "assigns:HitTiles2"))

(copyfiles
(source "IffToTiles.info")
(dest "assigns:HitTiles2"))

(copyfiles
(source "ITT")
(dest "assigns:HitTiles2"))

(copyfiles
(source "Docs")
(dest "assigns:HitTiles2/Docs")
(all))

(copyfiles
(source "Gfx")
(dest "assigns:HitTiles2/Gfx")
(all))

(copyfiles
(source "Mod")
(dest "assigns:HitTiles2/Mod")
(all))

(copyfiles
(source "Pics")
(dest "assigns:HitTiles2/Pics")
(all))

(copyfiles
(source "Sfx")
(dest "assigns:HitTiles2/Sfx")
(all))

(copyfiles
(source "Tiles")
(dest "assigns:HitTiles2/Tiles")
(all))

(copyfiles
(source "HitDemos")
(dest "assigns:HitTiles2/HitDemos")
(all))

(delete "assigns:HitTiles2/Gfx/Empty.info")

