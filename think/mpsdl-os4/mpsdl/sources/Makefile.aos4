 all: mxsdl

sfont.o: SFont.c
	gcc -mcrt=newlib -c  SFont.c `sdl-config --cflags`

main.o: main.cpp
	g++ -mcrt=newlib -c  main.cpp `sdl-config --cflags`

mxsdl: main.o sfont.o
	g++ -mcrt=newlib `sdl-config --libs` main.o SFont.o -o mpsdl -lSDL_gfx -lSDL_net -lSDL_image -lpng -ljpeg -lz -lSDL_mixer -lsmpeg -lvorbisfile -lvorbis -logg -lstdc++ -lSDL_ttf -lfreetype -lz -lsdlmain -lsdl -lauto -lpthread -lm -lunix

clean:
	rm -rf *.o mpsdl
