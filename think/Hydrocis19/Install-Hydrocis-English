; $VER: Hydrocis_Installer_Version E 1.00 (01.01.96)
; © by Sebastian Winkel 1996

(set #introduction
(cat "\n\nThis program installs Hydrocis on your hard disk. If the sprites "
     "don't appear, for example in level 3, use the `InstallDisk-English`-script to "
     "create a Hydrocis boot disk.\n"
     "On an AGA-Amiga, you maybe also have to enable the ECS-mode in the boot"
     "menu - try it, if problems occur."))

(set #choosedir
(cat "Please choose a directory where the installer should create the "
     "Hydrocis drawer."))

;Start des Hauptprogramms

(complete 0)
(message #introduction)

(set @default-dest
 (askdir (prompt #choosedir)
         (help "Choose `Proceed`.")
         (default @default-dest)))

(set anleitungen
(askoptions (prompt "\nHydrocis is delivered with a german documentation as an "
                    "ASCII- or an amigaguide-file. Which do you want to install?"
                    "\n(Note: The english on-line help explains the most important "
                    "aspects of the game)")
(help "Click Proceed.")
(Choices "Hydrocis.dok"
         "Hydrocis.guide")
(default 2)))

(working "\n\nStarting the installation process...")

(set @default-dest
 (tackon @default-dest "Hydrocis"))

(makedir @default-dest (infos))

(if (= anleitungen 1)
(copyfiles (source "Hydrocis.dok") (dest @default-dest) (nogauge) (infos)))
(complete 2)

(if (= anleitungen 2)
(copyfiles (source "Hydrocis.guide") (dest @default-dest) (nogauge) (infos)))
(complete 10)

(if (= anleitungen 3)
(
(copyfiles (source "Hydrocis.dok") (dest @default-dest) (nogauge) (infos))
(copyfiles (source "Hydrocis.guide") (dest @default-dest) (nogauge) (infos))
(complete 10)
))

(copyfiles (source "level1") (dest @default-dest) (nogauge))
(complete 20)
(copyfiles (source "level19") (dest @default-dest) (nogauge))
(complete 30)
(copyfiles (source "level21") (dest @default-dest) (nogauge))
(complete 40)
(copyfiles (source "level2") (dest @default-dest) (nogauge))
(complete 50)
(copyfiles (source "level26") (dest @default-dest) (nogauge))
(complete 55)
(copyfiles (source "level16") (dest @default-dest) (nogauge))
(complete 60)
(copyfiles (source "DemoInfoE") (dest @default-dest) (nogauge))
(complete 65)
(copyfiles (source "level31E") (dest @default-dest) (nogauge))
(complete 70)
(copyfiles (source "level32E") (dest @default-dest) (nogauge))
(complete 75)

(copyfiles (source "HydrocisE") (dest @default-dest) (nogauge) (infos))
(complete 80)
(copyfiles (source "Registration Form") (dest @default-dest) (nogauge) (infos))
(complete 85)
(copyfiles (source "Icons") (dest @default-dest) (nogauge))
(complete 90)
(copyfiles (source "Intro") (dest @default-dest) (nogauge))
(complete 95)
(copyfiles (source "Pithecus") (dest @default-dest) (nogauge))
(complete 98)
(copyfiles (source "GUI") (dest @default-dest) (nogauge))
(complete 100)

