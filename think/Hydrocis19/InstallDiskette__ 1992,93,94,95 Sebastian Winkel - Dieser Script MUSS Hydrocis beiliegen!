; $VER: Hydrocis_DiskInstaller_Version 1.00 (03.01.95)
; von Sebastian Winkel

(set #introduction
(cat "\n\nMit diesem Programm können Sie das Spiel Hydrocis auf einer Diskette "
     "installieren. Sie benötigen hierzu eine formatierte und installierte "
     "Leerdiskette mit dem Namen ´Hydrocis´. "
     "Dieses Programm wird neben dem Inhalt dieses Archivs einige wichtige "
     "Dateien aus dem SYS: - Verzeichnis darauf kopieren. "))

(complete 0)
(message #introduction)

(set anleitungen
(askoptions (prompt "\nHydrocis liegt eine Anleitung als Text und als AmigaGuide "
                    "bei. Beide haben den gleichen Inhalt. Welche wollen Sie "
                    "installieren? ")
(help "Drücken Sie im Zweifelsfalle WEITER")
(Choices "Hydrocis.dok"
         "Hydrocis.guide")
(default 2)))

(working "\n\nIch beginne mit dem Kopieren...")

(set @default-dest "Hydrocis:")

(if (= anleitungen 1)
(copyfiles (source "Hydrocis.dok") (dest @default-dest) (nogauge) (infos)))
(complete 5)

(if (= anleitungen 2)
(copyfiles (source "Hydrocis.guide") (dest @default-dest) (nogauge) (infos)))
(complete 5)

(if (= anleitungen 3)
(
(copyfiles (source "Hydrocis.dok") (dest @default-dest) (nogauge) (infos))
(copyfiles (source "Hydrocis.guide") (dest @default-dest) (nogauge) (infos))
(complete 5)
))

(copyfiles (source "level1") (dest @default-dest) (nogauge))
(complete 10)
(copyfiles (source "level19") (dest @default-dest) (nogauge))
(complete 15)
(copyfiles (source "level21") (dest @default-dest) (nogauge))
(complete 20)
(copyfiles (source "level2") (dest @default-dest) (nogauge))
(complete 25)
(copyfiles (source "level26") (dest @default-dest) (nogauge))
(complete 30)
(copyfiles (source "level16") (dest @default-dest) (nogauge))
(complete 35)
(copyfiles (source "DemoInfo") (dest @default-dest) (nogauge))
(complete 40)
(copyfiles (source "level31") (dest @default-dest) (nogauge))
(complete 45)
(copyfiles (source "level32") (dest @default-dest) (nogauge))
(complete 40)

(copyfiles (source "Hydrocis") (dest @default-dest) (nogauge) (infos))
(complete 42)
(copyfiles (source "Registrationsformular") (dest @default-dest) (nogauge) (infos))
(complete 44)
(copyfiles (source "Icons") (dest @default-dest) (nogauge))
(complete 45)
(copyfiles (source "Intro") (dest @default-dest) (nogauge))
(complete 50)
(copyfiles (source "Pithecus") (dest @default-dest) (nogauge))
(complete 55)
(copyfiles (source "GUI") (dest @default-dest) (nogauge))
(complete 60)

(makedir "Hydrocis:Fonts")
(makedir "Hydrocis:Fonts/Ruby")
(makedir "Hydrocis:S")
(makedir "Hydrocis:Libs")
(complete 70)

(if (exists("SYS:L/Disk-Validator"))
 ((makedir "Hydrocis:L")
 (copyfiles (source "SYS:L/Disk-Validator") (dest "Hydrocis:L") (nogauge)))
)

(copyfiles (source "FONTS:ruby/15") (dest "Hydrocis:Fonts/Ruby") (nogauge))
(copyfiles (source "FONTS:ruby/8") (dest "Hydrocis:Fonts/Ruby") (nogauge))
(copyfiles (source "FONTS:Ruby.Font") (dest "Hydrocis:Fonts") (nogauge))
(complete 80)

(copyfiles (source "LIBS:diskfont.library") (dest "Hydrocis:Libs") (nogauge))

(if (exists("LIBS:lowlevel.library"))
 ((copyfiles (source "LIBS:lowlevel.library") (dest "Hydrocis:Libs") (nogauge)))
)

(complete 90)

(copyfiles (source "StaSequ.inst") (dest "Hydrocis:S") (nogauge))
(rename "Hydrocis:S/StaSequ.inst" "Hydrocis:S/Startup-Sequence")
(complete 100)

