; $VER: Hydrocis_Installer_Version 1.09 (13.12.94)
; von Sebastian Winkel

(set #introduction
(cat "\n\nMit diesem Programm können Sie das Spiel Hydrocis auf ihre Festplatte "
     "installieren. Es kann allerdings möglicherweise unter OS 3.00 zu Problemen "
     "mit den Hardwaresprites (Wasserbomben) kommen, z.B. in Level 3. Da der Fehler "
     "unter den Versionen 3.1 und 1.3 des Betriebsystems nicht auftritt, scheint ein "
     "Bug in der Systemsoftware von 3.00 die wahrscheinlichste Erklärung zu sein. "
     "Probieren Sie es aus - und starten Sie Hydrocis im Notfall eben von Diskette. "
     "Wie das geht, erklärt die Anleitung in diesem Verzeichnis."))
(set #choosedir
(cat "Wählen Sie bitte ein Verzeichnis aus, in das der Installer die "
     "Hydrocis-Schublade legt."))

;Start des Hauptprogramms

(complete 0)
(message #introduction)

(set @default-dest
 (askdir (prompt #choosedir)
         (help "Schauen Sie im Workbench-Handbuch unter <Dateiauswahlfenster> nach!")
         (default @default-dest)))

(set anleitungen
(askoptions (prompt "\nHydrocis liegt eine Anleitung als Text und als AmigaGuide "
                    "bei. Beide haben den gleichen Inhalt. Welche wollen Sie "
                    "installieren? ")
(help "Drücken Sie im Zweifelsfalle WEITER")
(Choices "Hydrocis.dok"
         "Hydrocis.guide")
(default 2)))

(working "\n\nIch beginne mit dem Kopieren...")

(set @default-dest
 (tackon @default-dest "Hydrocis"))

(makedir @default-dest (infos))

(if (= anleitungen 1)
(copyfiles (source "Hydrocis.dok") (dest @default-dest) (nogauge) (infos)))
(complete 2)

(if (= anleitungen 2)
(copyfiles (source "Hydrocis.guide") (dest @default-dest) (nogauge) (infos)))
(complete 10)

(if (= anleitungen 3)
(
(copyfiles (source "Hydrocis.dok") (dest @default-dest) (nogauge) (infos))
(copyfiles (source "Hydrocis.guide") (dest @default-dest) (nogauge) (infos))
(complete 10)
))

(copyfiles (source "level1") (dest @default-dest) (nogauge))
(complete 20)
(copyfiles (source "level19") (dest @default-dest) (nogauge))
(complete 30)
(copyfiles (source "level21") (dest @default-dest) (nogauge))
(complete 40)
(copyfiles (source "level2") (dest @default-dest) (nogauge))
(complete 50)
(copyfiles (source "level26") (dest @default-dest) (nogauge))
(complete 55)
(copyfiles (source "level16") (dest @default-dest) (nogauge))
(complete 60)
(copyfiles (source "DemoInfo") (dest @default-dest) (nogauge))
(complete 65)
(copyfiles (source "level31") (dest @default-dest) (nogauge))
(complete 70)
(copyfiles (source "level32") (dest @default-dest) (nogauge))
(complete 75)

(copyfiles (source "Hydrocis") (dest @default-dest) (nogauge) (infos))
(complete 80)
(copyfiles (source "Registrationsformular") (dest @default-dest) (nogauge) (infos))
(complete 85)
(copyfiles (source "Icons") (dest @default-dest) (nogauge))
(complete 90)
(copyfiles (source "Intro") (dest @default-dest) (nogauge))
(complete 95)
(copyfiles (source "Pithecus") (dest @default-dest) (nogauge))
(complete 98)
(copyfiles (source "GUI") (dest @default-dest) (nogauge))
(complete 100)

