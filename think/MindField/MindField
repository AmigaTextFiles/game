echo " "
echo "I will Now Format a Disk before I copy Files"

sys:system/format drive df0: name MindField
echo " "
echo " "
install df0:
echo " That was'nt to Painfull now ;-)"
echo "Copying Files, please Wait......"
copy >nil: mind/ all MindField:
echo ""
echo " All Done! Now reboot Your Amiga with MindField in DF0:"
Echo "HAVE FUN!"
wait 10 secs

