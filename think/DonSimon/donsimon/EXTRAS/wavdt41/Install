
(set @default-dest "SYS:classes/datatypes")

;--- check os version ---
(set #vernum (getversion "exec.library" (resident)))
(set #vernum (/ #vernum 65536))

(if(< #vernum 39)
	(abort "You need OS3.x")
)

;--- lets rock ---

(if (exists "LIBS:powerpc.library")
(
	(copyfiles
		(source "wav.datatype.WOS")
		(newname "wav.datatype")
		(dest @default-dest)
	)
)
(
	(copyfiles
		(source "wav.datatype")
		(dest @default-dest)
	)
)
)

(if (not (exists "DEVS:DataTypes/WAVE") )
(
	(copyfiles
		(source "WAVE")
		(dest "DEVS:DataTypes")
	)

	(copyfiles
		(source "WAVE.info")
		(dest "DEVS:DataTypes")
	)
)
)

;--- eof ---
