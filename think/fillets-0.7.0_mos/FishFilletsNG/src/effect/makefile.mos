AR			= ar
CC			= g++
RANLIB	= ranlib
RM			= rm

CFLAGS	= -g -O2 -Wall `sdl-config --cflags` -I../gengine

OBJ		= EffectDisintegrate.o EffectMirror.o EffectNone.o EffectReverse.o EffectZx.o Font.o \
				LayeredPicture.o Outline.o Picture.o PixelTool.o SurfaceLock.o TTFException.o \
				WavyPicture.o SurfaceTool.o PixelIterator.o
BIN		= libeffect.a

all: $(BIN)

$(BIN):	$(OBJ)
		$(AR) cru $(BIN) $(OBJ)
		$(RANLIB) $(BIN)

%.o:	%.cpp
		$(CC) $(CFLAGS) -c $<

clean:
		$(RM) -f $(OBJ) $(BIN)
