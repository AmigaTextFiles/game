AR			= ar
CC			= g++
RANLIB	= ranlib
RM			= rm

CFLAGS	= -g -O2 -Wall `sdl-config --cflags` -I../gengine -I../effect -I/usr/include/lua

OBJ		= CommandQueue.o ConsoleInput.o FishDialog.o GameState.o KeyConsole.o KeyDesc.o \
				Keymap.o Planner.o ScriptCmd.o StateInput.o StateManager.o SubTitleAgent.o Title.o \
				dialog-script.o
BIN		= libplan.a

all: $(BIN)

$(BIN):	$(OBJ)
		$(AR) cru $(BIN) $(OBJ)
		$(RANLIB) $(BIN)

%.o:	%.cpp
		$(CC) $(CFLAGS) -c $<

clean:
		$(RM) -f $(OBJ) $(BIN)
