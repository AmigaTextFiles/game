AR			= ar
CC			= g++
RANLIB	= ranlib
RM			= rm

CFLAGS	= -g -O2 -Wall `sdl-config --cflags` -I../gengine -I../effect -I/usr/include/lua

OBJ		= HBox.o IWidget.o Slider.o VBox.o WiBox.o WiPicture.o WiContainer.o WiButton.o \
				WiLabel.o Labels.o WiStatusBar.o WiPara.o
BIN		= libwidget.a

all: $(BIN)

$(BIN):	$(OBJ)
		$(AR) cru $(BIN) $(OBJ)
		$(RANLIB) $(BIN)

%.o:	%.cpp
		$(CC) $(CFLAGS) -c $<

clean:
		$(RM) -f $(OBJ) $(BIN)
