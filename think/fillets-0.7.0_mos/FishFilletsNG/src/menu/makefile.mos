AR			= ar
CC			= g++
RANLIB	= ranlib
RM			= rm

CFLAGS	= -g -O2 -Wall `sdl-config --cflags` -I../gengine -I../effect -I../widget -I../plan -I../option -I../state -I../level -I/usr/include/lua

OBJ		= LevelDesc.o LevelNode.o NodeDrawer.o PedoInput.o Pedometer.o WorldInput.o WorldMap.o \
				WorldBranch.o worldmap-script.o SolverDrawer.o
BIN		= libmenu.a

all: $(BIN)

$(BIN):	$(OBJ)
		$(AR) cru $(BIN) $(OBJ)
		$(RANLIB) $(BIN)

%.o:	%.cpp
		$(CC) $(CFLAGS) -c $<

clean:
		$(RM) -f $(OBJ) $(BIN)
