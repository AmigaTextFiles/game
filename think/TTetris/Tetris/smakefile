

OBJS = main.o Tetris.o TetrisImages.o key_input.o joy_input.o
TOBJS = TxtToBin.o
TIOBJS = TestImages.o TetrisImages.o

all: Tetris TestImages

Tetris: $(OBJS)
	slink lib:c.o $(OBJS) work:trevor/GamePort.o to Tetris LIB lib:sc.lib lib:scm.lib lib:amiga.lib SC SD

TxtToBin: $(TOBJS) 
	slink lib:c.o $(TOBJS) to TxtToBin LIB lib:sc.lib lib:amiga.lib

TestImages: $(TIOBJS)
	slink lib:c.o $(TIOBJS) to TestImages LIB lib:sc.lib lib:amiga.lib

main.o: main.c Tetris.h con_input.h
Tetris.o: Tetris.c Tetris.h
TetrisImages.o: TetrisImages.c Tetris.h
TxtToBin.o: TxtToBin.c Tetris.h
key_input.o: key_input.c con_input.h
joy_input.o: joy_input.c con_input.h

e:
	e main.c Tetris.c Tetris.h

edit:
	e main.c Tetris.c TetrisImages.c Tetris.h

