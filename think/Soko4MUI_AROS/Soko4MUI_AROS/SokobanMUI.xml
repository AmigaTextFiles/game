<?xml version="1.0" encoding="iso-8859-1"?>
<application base="Sokoban">
	<window title="Soko 4 MUI" id="WinMain" muiid="MAIN" notify="closerequest">
	<hgroup>
	  <hgroup>
			<hollywood display="1"/>
			<rectangle/>
	  </hgroup>
	  <hgroup>
		<vgroup VertSpacing="80">

<vgroup frame="group" VertSpacing="20" InnerBottom="15" InnerTop="15" frametitle="Level">
			<vgroup>
				<vgroup frame="group" frametitle="Movements" background="groupback">
					<hgroup HorizSpacing="10">
						<text id="TextMoves">Moves: 0</text>
						<text id="TextPushes">Pushes: 0</text>
					</hgroup>
					<hgroup>
						<button id="ButtonUndo" notify="pressed">_Undo</button>
						<button id="ButtonRedo" notify="pressed">_Redo</button>
					</hgroup>
				</vgroup>
			</vgroup>
			
			<vgroup frame="group" frametitle="Load / Save" background="groupback">
				<button id="ButtonLoad" notify="pressed">Load</button>
				<button id="ButtonSave" notify="pressed">Save</button>				
		        </vgroup>				
			
			<vgroup frame="group" frametitle="Give up" background="groupback">
				<vgroup>
					<button id="ButtonRestart" notify="pressed">Restart level</button>
					<button id="ButtonJumpLevel" notify="pressed">Jump To another level</button>
				</vgroup>
			</vgroup>
</vgroup>


<vgroup frame="group" VertSpacing="20" InnerBottom="15" InnerTop="15" frametitle="Configuration">

			<vgroup>
				<colgroup columns="2" frame="group" frametitle="Sound" background="groupback">
					<label>Music:</label>
					<cycle id="CycleMusic" notify="Active">
						<item>On</item>
						<item>Off</item>
					</cycle>
					<label>Soundeffects:</label>
					<cycle id="CycleSoundeffects" notify="Active">
						<item>On</item>
						<item>Off</item>
					</cycle>
				</colgroup>
			</vgroup>
</vgroup>

			<vgroup vertSpacing="100" frame="group" frametitle="Game" background="groupback">
				<button id="ButtonQuitGame" notify="pressed">Quit game</button>
			</vgroup>
		</vgroup>
	  </hgroup>
	</hgroup>
	</window>

	<window title="Jump to level" muiid="LEVS" id="WinLevelSelector" notify="closerequest" open="false">
		<vgroup VertSpacing="15" InnerBottom="5" InnerTop="5">
			<hgroup>
				<label>Select your target level set:</label>
				<cycle id="CycleLevelset" notify="Active">
					<item>Easy-Minicosmos</item>
					<item>Advanced-SasquatchRemix</item>
				</cycle>
			</hgroup>
			<hgroup>
				<label>Select your target level number:</label>
				<cycle id="CycleLevelnumber" notify="Active">
					<item>1</item>
					<item>2</item>
					<item>3</item>
					<item>4</item>
					<item>5</item>
					<item>6</item>
					<item>7</item>
					<item>8</item>
					<item>9</item>
					<item>10</item>
					<item>11</item>
					<item>12</item>
					<item>13</item>
					<item>14</item>
					<item>15</item>
					<item>16</item>
					<item>17</item>
					<item>18</item>
					<item>19</item>
					<item>20</item>
				</cycle>
			</hgroup>
			<button id="ButtonCloseLevelWin" notify="pressed">Close this window</button>
		</vgroup>
	</window>

</application>
