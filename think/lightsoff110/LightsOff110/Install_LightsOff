; Installation script for LightsOff

(transcript "Installing LightsOff...")


(set name
        (askdir
        (prompt "Where shall i install LightsOff ?")
        (help @askdir-help)
        (default "SYS:")
        )
)

(copyfiles
    (source "LightsOff")
    (infos)
    (dest name)
)

(set @default-dest name)

(exit)
