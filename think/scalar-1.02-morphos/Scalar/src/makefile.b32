INCLUDE_PATH = c:\work\sdl\include
LIB_PATH = c:\work\sdl\lib
BCC_PATH = c:\borland\bcc55

OBJECTS = scalar.obj hiscore.obj njamfont.obj njamutils.obj sdl_main.obj
PROGRAM = scalar

all:	$(PROGRAM)

$(PROGRAM):   $(OBJECTS) $(PROGRAM).res
	$(BCC_PATH)\bin\ilink32 -L$(LIB_PATH) -L$(BCC_PATH)\LIB -aa -Tpe -c $(OBJECTS) \
	sdl_main.obj, $(PROGRAM), , sdl.lib import32.lib c0w32.obj cw32.lib sdl_mixer.lib sdl_image.lib, , $(PROGRAM).res

.cpp.obj:
	$(BCC_PATH)\bin\bcc32 -DWIN32 -tW -I$(INCLUDE_PATH) -c $<

sdl_main.obj:
	$(BCC_PATH)\bin\bcc32 -M -DWIN32 -tW -w-par -w-aus -I$(INCLUDE_PATH) -c sdl_main.c

.rc.res:
	brcc32 -r $<

clean:
	del *.obj
	del *.exe
	del *.res
	del *.map
	del *.tds
	del *.rws
	del *.il?

run:	all
		$(PROGRAM)
