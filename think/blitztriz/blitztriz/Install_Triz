
;Installation Script for Triz by Tom Schönlau
;....27.04.1996

(WELCOME)

(MESSAGE  "\nTriz Installation"
          "\n\n"
          "This script will install Triz for you"
          "\non your HD ... "
)

(SET TargetDest
     (ASKDIR
         (PROMPT "Select or create the directory where you "
                 "would like to install Triz on. "
                 "A Drawer called `Blitztriz` will be created."
         )
         (HELP "\n"
         )
         (DEFAULT "Work:")
     )
)

(SET @default-dest TargetDest)
(SET TargetDrawer (TACKON TargetDest "Blitztriz"))

(IF (NOT (EXISTS TargetDrawer))
  (MAKEDIR TargetDrawer (INFOS))
)


(COMPLETE 0)

   (COPYFILES (SOURCE "soft-aztec.med")
              (DEST TargetDrawer)
)

(COMPLETE 10)

   (COPYFILES (SOURCE "Triz" (INFOS))
              (DEST TargetDrawer)
   )

(COMPLETE 20)

   (COPYFILES (SOURCE "Triz.DOK" (INFOS))
              (DEST TargetDrawer)
   )

(COMPLETE 30)

   (COPYFILES (SOURCE "Triz.GUIDE" (INFOS))
              (DEST TargetDrawer)
   )

(COMPLETE 40)

   (COPYFILES (SOURCE "Triz.levels")
              (DEST TargetDrawer)
   )

(COMPLETE 50)

   (COPYFILES (SOURCE "Triz.med")
              (DEST TargetDrawer)
   )

(COMPLETE 60)

   (COPYFILES (SOURCE "Triz.scores")
              (DEST TargetDrawer)
   )

(COMPLETE 73)

   (COPYFILES (SOURCE "TrizIntro" (INFOS))
              (DEST TargetDrawer)
   )

(SET LibsSelection (ASKOPTIONS
                      (PROMPT "\nPlease select if you want to install "
                              "medplayer.library in your LIBS: Directory."
                      )
                          (HELP @askoptions-help)
                          (CHOICES "medplayer.library (v6.0)"
                          )
                   )
)

(COMPLETE 87)

(IF (IN LibsSelection 0)

   (COPYFILES (SOURCE "libs/medplayer.library")
              (DEST "Libs:")
   )
)

(COMPLETE 100)
