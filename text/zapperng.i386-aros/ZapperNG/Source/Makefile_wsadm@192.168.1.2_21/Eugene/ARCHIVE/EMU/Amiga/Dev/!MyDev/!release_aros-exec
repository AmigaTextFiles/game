#Makefile for ZapperNG v1.1 (i386-aros) by Eugene aGGreSSor Sobolev

project = ZapperNG
file_out = ZapperNG
CC = i386-aros-gcc
STRIP=i386-aros-strip --strip-unneeded --remove-section .comment
version = 1.1
header = ZapperNG.h
libs = 
flags = -O3 -Wall -D__USE_INLINE__ -fsigned-char -w
c_files = ZapperNG.c
obj = ZapperNG.o


all : ${file_out} ${header}

${file_out}: ${obj} 
	@echo "Linking!"
	${CC} ${flags} -g ${obj} ${libs} -o ../${file_out}
	${STRIP} ../${file_out}
	@rm -f *.o

${obj}: ${c_files}
	@echo "Compiling!"
	${CC} ${flags} -c ${c_files}

clean: 
	@rm -f *.o ../${file_out}
	@echo "Deleting objects and output files"
	@echo "Objects: ${obj} | output file: ${file_out}"

clear: clean
