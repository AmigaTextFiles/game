if "$cr" eq "1"
echo "You are in the cabin."
setenv n 0
setenv e 0
setenv s 4
setenv w 0
endif
if "$cr" eq "2"
echo "You are at the foot of a steep cliff. Lots of stones of various sizes"
echo "are here, some eroded, some not."
setenv n 0
setenv e 0
setenv s 6
setenv w 12
endif
if "$cr" eq "3"
echo "You are at the garden of the cabin, where its former owner grew herbs."
echo "Of course, all the herbs have now gone wild and taken deep root."
setenv n 0
setenv e 4
setenv s 0
setenv w 0
endif
if "$cr" eq "4"
echo "You are in front of the cabin."
if "$do" eq "closed"
setenv n 0
else
setenv n 1
endif
setenv e 5
setenv s 0
setenv w 3
endif
if "$cr" eq "5"
echo "You are in the very center of the valley."
setenv n 0
setenv e 6
setenv s 8
setenv w 4
endif
if "$cr" eq "6"
echo "You are walking on an east-west path."
setenv n 2
setenv e 7
setenv s 17
setenv w 5
endif
if "$cr" eq "7"
echo "You are in front of the princess' dungeon."
setenv n 0
setenv e 0
setenv s 0
setenv w 6
endif
if "$cr" eq "8"
echo "You are at an opening in the valley."
setenv n 5
setenv e 0
setenv s 9
setenv w 13
endif
if "$cr" eq "9"
echo "You are walking on a north-south path."
setenv n 8
setenv e 10
setenv s 11
setenv w 0
endif
if "$cr" eq "10"
echo "You are at a small opening somewhere in the valley."
setenv n 0
setenv e 0
setenv s 0
setenv w 9
endif
if "$cr" eq "11"
echo "You are in a desert."
setenv n 9
setenv e 15
setenv s 0
setenv w 0
endif
if "$cr" eq "12"
echo "You are at a waterfall."
setenv n 0
setenv e 2
setenv s 0
setenv w 0
endif
if "$cr" eq "13"
echo "You are at the edge of a forest."
setenv n 0
setenv e 8
setenv s 14
setenv w 0
endif
if "$cr" eq "14"
echo "You are in the forest."
setenv n 13
setenv e 0
setenv s 0
setenv w 0
endif
if "$cr" eq "15"
echo "You are at an oasis."
setenv n 0
setenv e 16
setenv s 0
setenv w 11
endif
if "$cr" eq "16"
echo "You are in a city."
setenv n 0
setenv e 0
setenv s 0
setenv w 15
endif
if "$cr" eq "17"
echo "You are in a cave."
setenv n 6
setenv e 0
setenv s 0
setenv w 0
endif
if "$pistol" eq "$cr"
echo "There is a pistol here."
endif
if "$bookshelf" eq "$cr"
echo "There is a bookshelf here."
endif
if "$boulder" eq "$cr"
echo "There is a sharp boulder here."
endif
if "$moonroot" eq "$cr"
echo "There is a sprout of moonroot here."
endif
if "$powerplant" eq "$cr"
echo "There is a sprout of powerplant here."
endif
if "$dreamberry" eq "$cr"
echo "There is a sprout of dreamberry here."
endif
if "$door" eq "$cr"
echo "The cabin door is $do."
endif
if "$lock" eq "$cr"
echo "The dungeon lock is $lo."
endif
if "$princess" eq "$cr"
echo "The princess is here."
endif
if "$tourist" eq "$cr"
echo "There is a tourist here."
endif
if "$guard" eq "$cr"
echo "There is a guard here."
endif
if "$key" eq "$cr"
echo "There is a small key here."
endif
if "$rock" eq "$cr"
echo "There is a small, $sharp piece of rock here."
endif
if "$tree" eq "$cr"
echo "There is a big tree here."
endif
if "$water" eq "$cr"
echo "There is a large body of water here."
endif
echo "Possible exits:"
if not "$n" eq "0"
echo North
endif
if not "$e" eq "0"
echo East
endif
if not "$s" eq "0"
echo South
endif
if not "$w" eq "0"
echo West
endif
