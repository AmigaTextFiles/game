; $VER: Darkest Hour

FailAt 20
Version >NIL:

; SetFont isn't implemented in AROS yet
If $workbench not eq "40.0"
   SetFont topaz 14
EndIf

   Echo "*E[>1m"      ; back colour
   Echo "*E[32m"      ; ink colour
   Echo "*E[41m"      ; paper colour
   Echo "*E[0;0H*E[J" ; clear screen

   Echo "*N*N*N*N*N"
   Echo "      - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -"
   Echo "     :            *E[1m*E[33mAMiGA version, 31 October 2o21 , aGGreSSor*E[30m*E[22m           :"
   Echo "      = = = = = = = = = = = = = = = = = = = = = = = = = = = = = = = = =*N"
   Echo ""
   Echo "    (\_/)"
   Echo "    (O.O)"
   Echo "    (> <)"
   Echo  " "o_(")(")
   Ask "                 ... Press any key for *E[33mdarkest hour*E[32m ..."

   Echo "*E[>1m"      ; back colour
   Echo "*E[32m"      ; ink colour
   Echo "*E[41m"      ; paper colour
   Echo "*E[0;0H*E[J" ; clear screen

dhour_aros-i386.exe
EndCli

