; Script generated for Hollywood Pictures Cheat
; written by Sirko Kallinger 1996


(set @default-dest "Holly_A:SpDat")

(set #Intro-Txt
(cat "\nWillkommen zur Installation des\n"
     "Hollywood Pictures - Cheates\n\n\n\n"
     "© 22.07.1996 by Sirko Kallinger\n\n\n\n"
     "ACHTUNG! DIE INSTALLATION ÜBERSCHREIBT ALLE\n"
     "BISHERIGEN SPIELSTÄNDE AUF DEINER FESTPLATTE\n"
     "ODER DISKETTE VOLLSTÄNDIG! BITTE NUR AUF\n" 
     "EINER SICHERHEITSKOPIE VERWENDEN !!"
))

(set #Hinweis-Txt
(cat "\nNachdem Neustarten von Hollywood-Pictures\n"
     "befinden sich 3 neue Spielstände auf Deiner\n"
     "Festplatte/Diskette\n\n"
     "Spielstand 1: für Userlevel -> EASY\n"
     "Spielstand 2: für Userlevel -> NORMAL\n"
     "Spielstand 3: für Userlevel -> HEAVY\n\n"
     "Bei allen 3 Spielständen startet man nun mit\n"
     "einem Startkapital von 999.999.999 DM !!!"
))

(set #Path-Txt
(cat "Wähle das Verzeichnis aus, in dem die Spielstände von "
     "Hollywood-Pictures gespeichert sind, z.B. Holly_A:SpDat"
))

(set #Path-Help
(cat "\n    Wenn das Verzeichnis deiner Spielstände nicht\n"
     "   Holly_A:SpDat ist, dann gib mittels des Button\n"
     "  SHOW DRIVES dein aktuelles Spielstandsverzeichnis\n"
     "  von Hollywood Pictures ein. Auf einer Festplatte\n"
     "         könnte es zum Beispiel so heißen:\n\n"
     "             Work:Games/HollyPics/SpDat\n\n"
     "  Je nachdem, wo du Hollywood Pictures installiert\n"
     "       hast, kann es natürlich bei dir auch ein \n"
     "             anderes Verzeichnis sein !"
))


; Main 

(message #Intro-Txt)
(message #Hinweis-Txt)
(set target
(askdir (prompt #Path-Txt) (help #Path-Help) (default @default-dest) (newpath)
))
(set @default-dest target)
(copyfiles
(prompt "Kopiere jetzt neue Spielstandsdateien" #target)
(source "Spielstände/SD")
(dest target)
)
(copyfiles
(prompt "Kopiere jetzt neue Spielstandsdateien" #target)
(source "Spielstände/SD1")
(dest target)
)
(copyfiles
(prompt "Kopiere jetzt neue Spielstandsdateien" #target)
(source "Spielstände/SD2")
(dest target)
)
(copyfiles
(prompt "Kopiere jetzt neue Spielstandsdateien" #target)
(source "Spielstände/SD3")
(dest target)
)
