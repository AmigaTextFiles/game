echo ""
echo "Insert Body Blows Galactic disk 1 (Disk 3 or Boot Disk) into drive df0:"
ask  "Press <RETURN> to continue or y to abort."
if WARN
	skip abort
ENDIF

disk2file BodyBlowsG.Disk1
echo "Insert Body Blows Galactic disk 2 (Disk 1) into drive df0:"
ask  "Press <RETURN> to continue or y to abort."

if WARN
	skip abort
ENDIF

disk2file BodyBlowsG.Disk2
echo "Insert Body Blows Galactic disk 3 (Disk 2) into drive df0:"
ask  "Press <RETURN> to continue or y to abort."

if WARN
	skip abort
ENDIF

disk2file BodyBlowsG.Disk3

echo	"Installation complete. Click the BBG icon to run the game."
skip fin

else
lab abort
	echo "Installation aborted"
endif

lab fin
	wait 3
