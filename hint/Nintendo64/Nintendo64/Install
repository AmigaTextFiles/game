;**********************************************************
;*Beschreibung: Installationsskript für Nintendo 64 Guide *
;*Autor       : S. Ben Hassine © 1998                     *
;*Datum       : 18. März 1998                             *
;**********************************************************

;geübter Benutzer
(user 1)

;Namen der Quelldateien setzen
(set #nintendo64main "Nintendo64")
(set #nintendo64info "Nintendo64.info")
(set #nintendo64version "Nintendo64")
(set #vtcopy "vt")
(set #wcw "wcw.jpg")
(set #bomb "bomber.jpg")
(set #clay63 "clay63.jpg")
(set #dkr "dkr.jpg")
(set #ext "extreme-g.jpg")
(set #soccer "soccer64.jpg")
(set #maddon "football64.jpg")
(set #nba "nba.jpg")
(set #starwars "starwars.jpg")
(set #top "tgr.jpg")
(set #turok "turok.jpg")
(set #yosh "yoshstory.jpg")
(set #wgh "wgh.jpg")
(set #tetris "tetrisphere.jpg")
(set #fifa98 "fifa98.jpg")
(set #1 "aerorbox.jpg")
(set #2 "robotronbox.jpg")
(set #3 "hexenbox.jpg")
(set #4 "mario64box.jpg")
(set #5 "lambobox.jpg")
(set #6 "crusinusabox.jpg")
(set #7 "f1box.jpg")
(set #8 "darkriftbox.jpg")
(set #9 "kigoldbox.jpg")
(set #10 "macebox.jpg")
(set #11 "mariokartbox.jpg")
(set #12 "mrcbox.jpg")
(set #14 "nhlbreakawaybox.jpg")
(set #15 "nflqbbox.jpg")
(set #16 "pilotwingsbox.jpg")
(set #17 "naganoolympicbox.jpg")
(set #13 "13")
(set #logo "n64.iff")
(set #installation-done
 (cat "Die Installation des Nintendo 64 Tips &.\n"
      "Tricks Guide ist abgeschlossen.\n"
      "Ein Assign wurde in die user-startup hinzugefügt!\n\n\n\n"
      "Viel Spaß mit dem Nintendo64® und dem Nintendo64\n"
      "Tips & Tricks Guide wünscht Ihnen\n"
      "der Autor\n"
      "Bei Fragen stehe ich Ihnen unter\n"
      "der email Adresse : Ben-Hassine@t-online.de\n"
      "zur Verfügung !"))
(complete 0)

;Willkommenstext
(welcome "Nintendo 64 Installation\n\n©1998 by S. Ben Hassine\n\n")

;Installations-Ziel vom Nutzer erfragen
(set #destination
 (askdir
  (prompt "Wo soll das Nintendo 64 Guide installiert werden? Ein Verzeichnis"
          "\ "Nintendo64\" wird dort erstellt!")

  (help @askdir-help)
  (default "sys:")
 )
)

;Pfad und Name vom Ziel-Verzeichnis erstellen
(set #fulldestination (tackon #destination "Nintendo64"))

;Pfad und Namen von Unterverzeichnisse im Zielverzeichnis erstellen
(set #font (tackon #fulldestination "sys:fonts/courier"))
(set #cdir   (tackon #fulldestination "c"))
(set #pdir (tackon #fulldestination "pic"))

;Ziel-Verzeichnis erstellen
(makedir #fulldestination
 (infos)
)
;Unterverzeichnisse erstellen
(makedir #font)
(makedir #cdir)

;Dateien kopieren
(complete 0)
(copyfiles
 (source #nintendo64main)
 (dest #fulldestination)
)
(copyfiles
 (source #nintendo64info)
 (dest #fulldestination)
)
(complete 10)
(copyfiles
 (source #logo)
 (dest #pdir)
)
(copyfiles
 (source #bomb)
 (dest #pdir)
)
(complete 20)
(copyfiles
 (source #wcw)
 (dest #pdir)
)
(copyfiles
 (source #clay63)
 (dest #pdir)
)
(complete 30)
(copyfiles
 (source #dkr)
 (dest #pdir)
)
(copyfiles
 (source #ext)
 (dest #pdir)
)
(complete 40)
(copyfiles
 (source #soccer)
 (dest #pdir)
)
(copyfiles
 (source #maddon)
 (dest #pdir)
)
(complete 50)
(copyfiles
 (source #nba)
 (dest #pdir)
)
(copyfiles
 (source #starwars)
 (dest #pdir)
)
(complete 60)
(copyfiles
 (source #top)
 (dest #pdir)
)
(copyfiles
 (source #turok)
 (dest #pdir)
)
(complete 70)
(copyfiles
 (source #yosh)
 (dest #pdir)
)
(copyfiles
 (source #wgh)
 (dest #pdir)
)
(complete 80)
(copyfiles
 (source #tetris)
 (dest #pdir)
)
(copyfiles
 (source #1)
 (dest #pdir)
)
(copyfiles
 (source #2)
 (dest #pdir)
)
(copyfiles
 (source #fifa98)
 (dest #pdir)
)
(copyfiles
 (source #3)
 (dest #pdir)
)
(copyfiles
 (source #4)
 (dest #pdir)
)
(copyfiles
 (source #5)
 (dest #pdir)
)
(copyfiles
 (source #6)
 (dest #pdir)
)
(copyfiles
 (source #7)
 (dest #pdir)
)
(copyfiles
 (source #8)
 (dest #pdir)
)
(copyfiles
 (source #9)
 (dest #pdir)
)
(copyfiles
 (source #10)
 (dest #pdir)
)
(copyfiles
 (source #11)
 (dest #pdir)
)
(copyfiles
 (source #12)
 (dest #pdir)
)
(copyfiles
 (source #14)
 (dest #pdir)
)
(copyfiles
 (source #15)
 (dest #pdir)
)
(copyfiles
 (source #16)
 (dest #pdir)
)
(copyfiles
 (source #17)
 (dest #pdir)
)
(complete 90)
(copyfiles
 (source "courier.font")
 (dest "FONTS:")
)
(copyfiles
 (source "13")
 (dest #font)
)
(copyfiles
 (source #vtcopy)
 (dest #cdir)
)

;Assign setzen
(startup "Nintendo64"
 (help "")
 (prompt "")
 (command (cat "assign Nintendo64: " #fulldestination))
 (confirm)
)
(run (cat "assign Nintendo64: " #fulldestination))

(complete 100)

(user 1)
(message #installation-done)
(exit (quiet))