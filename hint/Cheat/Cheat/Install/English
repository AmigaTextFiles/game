; Cheat Installer script by Thorsten Martin
; Installation script for Cheat 1.0

(set @app-name "Cheat")

(set def_help "\n\nIf you need help so please read\"Cheat.guide\"\n\n")

(set my_level @user-level)
(user 2)

(set cheatdest
    ;get destination directory for "Cheat"
     (askdir (prompt "Choose your desired directory for Cheat.")
             (help   "This should be a directory in which you can easily start"
                     "Cheat from Workbench or CLI." "Work:"
                     @askdir-help)
             (default @default-dest)
             (disk)
     )
)


; Copy Cheat files
(
	(set @default-dest cheatdest)
	(set cheattacked (tackon cheatdest "Cheat"))

		; Copy the Cheat file
		(copyfiles (prompt ("\nCopy Cheat to %s." cheatdest))
			(help   def_help @copyfiles-help)
			(optional "oknodelete")
			(optional "askuser")
			(source "/Cheat")
			(choices  "Cheat")
			(dest     cheatdest)
			(infos)
			(confirm)
		)


		(set cheatdocs
			(askdir (prompt "Choose the directory for the dokumentation.\n")
				(help   "This should be your `normal` doc directory, e.g HELP:English.\n\n"
				def_help @askdir-help)
				(default @default-dest)
				(disk)
			)
		)

		(copyfiles (prompt ("\nCopy documentation"))
			(help   def_help @copyfiles-help)
			(optional "oknodelete")
			(optional "askuser")
			(source  "/Doc/english/Cheat.guide")
			(dest    cheatdocs)
			(infos)
			(confirm)
		)
)
