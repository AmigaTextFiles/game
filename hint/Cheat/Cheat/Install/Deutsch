; Cheat Installer script by Thorsten Martin
; Installation script for Cheat 1.0

(set @app-name "Cheat")

(welcome "       Willkommen zur Installation vom Cheat\n"
     "Ein Programm zur Manipulation von Spielen ab OS2.04\n\n"
     "        Copyright 1994-95 Thorsten Martin\n\n"
)

(set def_help "\n\nWenn Sie mehr Hilfe benötigen, sehen Sie in \"Cheat.guide\"\n\n")

(set my_level @user-level)
(user 2)

(set cheatdest
    ;get destination directory for "Cheat"
     (askdir (prompt "Wählen Sie das Verzeichnis für Cheat aus.")
             (help   "Dies sollte ein Verzeichnis sein, in dem Sie Cheat einfach von "
                     "der Workbench oder der Shell aus starten können." "Work:"
                     @askdir-help)
             (default @default-dest)
             (disk)
     )
)


; Copy Cheat files
(
	(set @default-dest cheatdest)
	(set cheattacked (tackon cheatdest "Cheat"))

		; Copy the Cheat file
		(copyfiles (prompt ("\nKopiere Cheat nach %s." cheatdest))
			(help   def_help @copyfiles-help)
			(optional "oknodelete")
			(optional "askuser")
			(source "/Cheat")
			(choices  "Cheat")
			(dest     cheatdest)
			(infos)
			(confirm)
		)

		; Copy the catalog for Cheat
		(copyfiles (prompt "\nKopiere Cheat.catalog nach LOCALE:catalogs/deutsch.")
			(help   def_help @copyfiles-help)
			(optional "oknodelete")
			(optional "askuser")
			(source  "/Catalogs/deutsch/Cheat.catalog")
			(dest    "LOCALE:catalogs/deutsch")
			(infos)
			(confirm)
		)

		(set cheatdocs
			(askdir (prompt "Wählen Sie das Verzeichnis für die Dokumentation aus\n.")
				(help   "Dies sollte das Verzeichnis sein, in dem Sie normalerweise Ihre Dokumentation aufbewahren.\n\n"
				def_help @askdir-help)
				(default @default-dest)
				(disk)
			)
		)

		(copyfiles (prompt ("\nKopiere Dokumentation"))
			(help   def_help @copyfiles-help)
			(optional "oknodelete")
			(optional "askuser")
			(source  "/Doc/deutsch/Cheat.guide")
			(dest    cheatdocs)
			(infos)
			(confirm)
		)
)
