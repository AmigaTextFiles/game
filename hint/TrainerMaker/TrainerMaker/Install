(complete 0)
(set name
        (askdir
                (prompt "Where do you want to install the Trainer Maker directory?")
                (help "Wählen Sie aus, wo das Trainer-Maker-Verzeichnis erstellt werden soll.")
                (default "SYS:")
        )
)
(set fullname (tackon name "TrainerMaker"))
(makedir fullname (infos))
(set fullname (cat fullname "/"))
(copyfiles
        (prompt "Copying data files to %s" fullname)
        (source "")
        (dest fullname)
        (all)
)
(complete 100)
(message "\nTrainer Maker has been installed in \"" fullname "\".\n\nCopyright © 1998/99 Frank Otto")
(exit (quiet))
