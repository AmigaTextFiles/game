exec cfgs/resetall
// 1fov=0.02 sensitivity in semimode atm
alias z1 "fov 15;sensitivity 0.30;bind ins z2;unbind end"
alias z2 "fov 22;sensitivity 0.44;bind end z1;bind ins z3"
alias z3 "fov 35;sensitivity 0.70;bind end z2;bind ins z4"
alias z4 "fov 60;sensitivity 1.20;bind end z3;unbind ins"
alias auto-auto "impulse 3;echo -AUTO-;echo -AUTO-;echo -AUTO-"
alias auto-ng "impulse 4;bind shift ng-ng;bind ctrl ng-auto;echo -NAILGUN-;echo -NAILGUN-;echo -NAILGUN-;echo -NAILGUN-"
alias auto-semi "impulse 2;+attack;sensitivity 2.0;bind mouse1 dotmb;crosshair 0;bind ctrl semi-auto;bind mouse3 semi-zoom;bind shift semi-ng"
alias auto-zoom "impulse 2;+attack;fov 60;sensitivity 1.20;bind mouse1 dotmb;crosshair 0;bind end z3;unbind ins;bind ctrl zoom-auto;bind mouse3 zoom-semi;bind shift zoom-ng;wait"
alias ng-auto "impulse 3;bind shift auto-ng;bind ctrl auto-auto;echo -AUTO-;echo -AUTO-;echo -AUTO-;echo -AUTO-"
alias ng-ng "impulse 4;echo -NAILGUN-;echo -NAILGUN-;echo -NAILGUN-;echo -NAILGUN-"
alias ng-semi "impulse 2;+attack;sensitivity 2.0;bind mouse1 dotmb;crosshair 0;bind ctrl semi-auto;bind mouse3 semi-zoom;bind shift semi-ng"
alias ng-zoom "impulse 2;+attack;fov 60;sensitivity 1.20;bind mouse1 dotmb;crosshair 0;bind end z3;unbind ins;bind ctrl zoom-auto;bind mouse3 zoom-semi;bind shift zoom-ng;wait"
alias semi-auto "-attack;wait;impulse 3;bind mouse1 +attack;sensitivity 3.5;crosshair 1;bind mouse3 auto-semi;bind shift auto-ng;bind ctrl auto-auto;echo -AUTO-;echo -AUTO-;echo -AUTO-;echo -AUTO-"
alias semi-ng "-attack;wait;impulse 4;bind mouse1 +attack;sensitivity 3.5;crosshair 1;bind mouse3 ng-semi;bind ctrl ng-auto;bind shift ng-ng;echo -NAILGUN-;echo -NAILGUN-;echo -NAILGUN-;echo -NAILGUN-"
alias semi-zoom "fov 60;sensitivity 1.20;bind end z3;unbind ins;bind ctrl zoom-auto;bind mouse3 zoom-semi;bind shift zoom-ng"
alias zoom-auto "-attack;wait;impulse 3;fov 100;sensitivity 3.5;bind mouse1 +attack;crosshair 1;bind end +movedown;bind ins +jump;bind mouse3 auto-semi;bind shift auto-ng;bind ctrl auto-auto;echo -AUTO-;echo -AUTO-;echo -AUTO-"
alias zoom-ng "-attack;wait;impulse 4;fov 100;sensitivity 3.5;bind mouse1 +attack;crosshair 1;bind end +movedown;bind ins +jump;bind mouse3 ng-semi;bind ctrl ng-auto;bind shift ng-ng;echo -NAILGUN-;echo -NAILGUN-;echo -NAILGUN-;echo -NAILGUN-"
alias zoom-semi "fov 100;sensitivity 2.0;bind end +movedown;bind ins +jump;bind mouse3 semi-zoom;bind ctrl semi-auto;bind shift semi-ng"
alias dotmb "-attack;wait;+attack"
//
alias sni-init "say_team Scriptmsg:I play sniper class;impulse 4;bind mouse3 ng-semi;bind ctrl ng-auto;bind shift ng-ng;echo -NAILGUN-;echo -NAILGUN-;echo -NAILGUN-;echo -NAILGUN-"
sni-init
