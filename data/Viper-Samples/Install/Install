;Installationsscript f¸r neue Samples zu Viper

echo "*n Wich drawer contains the executable Viper ? *n"
wait 2
assign arch: data
assign viper: ram:
if not exists C:reqask
 copy arch:reqask c: quiet
endif
if not exists c:requestfile
 copy arch:requestfile c: quiet
endif

lab weiter
requestfile drawersonly drawer dh1:games/Viper title Viper-Verzeichnis >env:verz
IF WARN
  reqask body="Installation abgebrochen..." gadget=":-("
  skip ende
endif
echo >env:vari $verz NOLINE
echo >>env:vari sounds

assign viper: "$vari" >NIL:

if not exists viper:/viper
  reqask body="Falsches Verzeichnis.." gadget=":-("
  skip weiter BACK
 endif

reqask body="Soll eine Sicherheitskopie der alten Samples erfolgen ?" title="Installationsanfrage..." gadget="Na sicher|Lieber nicht..." var=a1

if $A1 EQ "1"
   rename viper:background.snd viper:background.bak
   rename viper:bounce.snd viper:bounce.bak
   rename viper:button1.snd viper:button1.bak
   rename viper:button2.snd viper:button2.bak
   rename viper:button3.snd viper:button3.bak
   rename viper:button4.snd viper:button4.bak
   rename viper:credits.snd viper:credits.bak
   rename viper:doh1.snd viper:doh1.bak
   rename viper:doh2.snd viper:doh2.bak
   rename viper:doh3.snd viper:doh3.bak
   rename viper:doh4.snd viper:doh4.bak
   rename viper:doh5.snd viper:doh5.bak
   rename viper:doh6.snd viper:doh6.bak
   rename viper:fail.snd viper:doh7.bak
   rename viper:gameover.snd viper:gameover.bak
   rename viper:laugh.snd viper:laugh.bak
   rename viper:load.snd viper:load.bak
   rename viper:pause.snd viper:pause.bak
   rename viper:start.snd viper:start.bak
   rename viper:thread.snd viper:thread.bak
   rename viper:wohoo.snd viper:wohoo.bak
endif

copy arch:#? viper: quiet

reqask body="Alle Installationsvorg‰nge abgeschlossen" TITle="Nachricht" gadget=":-)"

reqask body="Soll Viper jetzt gestartet werden ?" title="Anfrage..." gadget="Na LOGO...|Bloﬂ nich.." var=a2

if $a2 eq "0"
   quit
  else
   Viper:/
   viper
endif

lab ende
assign arch: remove
assign viper: remove
