;Installationsscript f¸r neue Samples zu Knockout 2

echo "*n In welchem Verzeichnis befindet sich Knockout 2 ? *n"
wait 2
assign arch: data
assign knock: ram:
if not exists C:reqask
 copy arch:reqask c: quiet
endif
if not exists c:requestfile
 copy arch:requestfile c: quiet
endif

lab weiter
requestfile drawersonly drawer dh1:games/knockout2 title Knockout-Verzeichnis >env:verz
IF WARN
  reqask body="Installation abgebrochen..." gadget=":-("
  skip ende
endif
echo >env:vari $verz NOLINE
echo >>env:vari samples

assign knock: "$vari" >NIL:

if not exists knock:/knockout
  reqask body="Falsches Verzeichnis.." gadget=":-("
  skip weiter BACK
 endif

reqask body="Soll eine Sicherheitskopie der alten Samples erfolgen ?" title="Installationsanfrage..." gadget="Na sicher|Lieber nicht..." var=a1

if $A1 EQ "1"
   rename knock:crash Knock:crash.bak
   rename knock:falling Knock:falling.bak
   rename knock:fight Knock:fight.bak
   rename knock:win Knock:win.bak
endif

copy arch:crash knock: quiet
copy arch:falling knock: quiet
copy arch:fight knock: quiet
copy arch:win knock: quiet

reqask body="Alle Installationsvorg‰nge abgeschlossen" TITle="Nachricht" gadget=":-)"

reqask body="Soll Knockout2 jetzt gestartet werden ?" title="Anfrage..." gadget="Na LOGO...|Bloﬂ nich.." var=a2

if $a2 eq "0"
   quit
  else
   knock:/
   knockout
endif

lab ende
assign arch: remove
assign knock: remove
