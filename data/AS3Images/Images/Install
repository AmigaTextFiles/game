;;;; $VER: InstallImages 1.1 (17.8.96)


;;; Strings

(set #where-install
     (cat "Choose location where you want to install ASokoban"
		      "(Note that NO new drawer will be created)."))


;;; Main program

(set sourcedir (pathonly @icon))

(set prog-dest (askdir (prompt #where-install)
               (help @askdir-help)
							 (default @default-dest)))
(set @default-dest prog-dest)

(copyfiles (source (tackon sourcedir "JSoko16"))
           (pattern "#?.xpm")
					 (dest (tackon prog-dest "Images/JSoko16")))
(copyfiles (source (tackon sourcedir "JSoko2"))
           (pattern "#?.xpm")
					 (dest (tackon prog-dest "Images/JSoko2")))
(copyfiles (source (tackon sourcedir "XLarge"))
           (pattern "#?.xpm")
					 (dest (tackon prog-dest "Images/XLarge")))
(copyfiles (source (tackon sourcedir "XMedium"))
           (pattern "#?.xpm")
					 (dest (tackon prog-dest "Images/XMedium")))
(copyfiles (source (tackon sourcedir "XMono"))
           (pattern "#?.xpm")
					 (dest (tackon prog-dest "Images/XMono")))
(copyfiles (source (tackon sourcedir "XSmall"))
           (pattern "#?.xpm")
					 (dest (tackon prog-dest "Images/XSmall")))
