;***************************************************
;****                                           ****
;****  Instalador de la actualización del SWOS  ****
;****        Liga Española 2005-2006 por        ****
;****         Juan Carlos Herrán Martín         ****
;****        E-mail: morguesoft@yahoo.es        ****
;****                                           ****
;***************************************************
(set #unidad "Elige unidad de destino de la actualización:\n")
(set #disquete "DF0")
(set #duro "DH0")
(set #hola "Preactualización de la liga española 2005-06 para el SWOS")
(set #m3 "\n\nListos para la instalación.")
(set #m4 "\n\nRECUERDA instalarlo en una copia de tu disco original de datos.")
(set #m5 "\n\nEspero que disfrutes la actualización.")
(set #m6 "\n\nEsto y muchas cosas más puedes encontrar en:\n     http://geocities.com/morguesoft/")
(set #m7 "\nVamos a hacer la actualización en tú disco duro.")
(set #ayuda1 "\n\      Elige el lugar donde tienes el SWOS, en disquete o disco duro.")
(set #ayuda2 "\n       Indicar la ruta donde tienes instalado el SWOS\n      para copiar la actualización.")
(set #ayuda3 "\nEl fichero no tiene que estar protegido contra borrado.")
(set #destin "\nDime donde esta el directorio SWOS con los ficheros TEAM.")
(set #infor "\nCopiando fichero.")
(if (= @language "english")
  (set #nada "")
  (set #hola "Preupdate with spanish league 2005-06 for SWOS game")
  (set #unidad "You choose unit path for update:\n")
  (set #disquete "DF0")
  (set #duro "DH0")
  (set #m3 "\n\nYou are ready for the install.")
  (set #m4 "\n\nREMEMBER you install it on one copy of your original data disk.")
  (set #m5 "\n\nI hope that you enjoy this update.")
  (set #m6 "\n\nThis and other things more you'll can find in:\n     http://geocities.com/morguesoft/")
  (set #m7 "\nI doing the update on your hard disk.")
  (set #ayuda1 "\n      You choose where is the SWOS on harddisk or floppy.")
  (set #ayuda2 "\n      Give me the path where you have installed the SWOS\n      directory for copying the update.")
  (set #ayuda3 "\nThe file haven't been protect against delete.")
  (set #destin "\nTell me where are the SWOS directory with TEAM files.")
  (set #infor "\nCopying file.")
)
(if (= @language "hrvatski")
  (set #nada "")
  (set #hola "Preupadate sa Spanjolskom ligom 2005-2006 za SWOS.")
  (set #unidad "Izaberi path za update:\n")
  (set #disquete "DF0")
  (set #duro "DH0")
  (set #m3 "\n\nSpeman si za instaliranje.")
  (set #m4 "\n\nZAPAMTI instaliras je na jednu svoju SWOS data disketu.")
  (set #m5 "\n\nNadam se da ti se svida ovaj update.")
  (set #m6 "\n\nOvaj update i sve ostale stvari mozes naci ovdje:\n       http://geocities.com/morguesoft/")
  (set #m7 "\nUpravo stavljam update na tvoj hard disk.")
  (set #ayuda1 "\n Izaberi gdje ti stoji tvoj SWOS na hard disku ili na floppy-u.")
  (set #ayuda2 "\n Pokazi mi gdje imas intaliran SWOS direktori\n zbog kopiranja ovog update-a.")
  (set #ayuda3 "\n Ovaj file nije zasticen protiv izbrisavanja.")
  (set #destin "\n Pokazi mi gdje ti je SWOS direktori sa fajlovima TIMOVA.")
  (set #infor "\nKopiram file.")
)
(welcome #hola)
(complete 0%)
(set #eligedestino
  (askchoice
     (prompt #unidad)
     (help #ayuda1)
     (choices #disquete #duro)
     (default 0)
  )
)
(complete 25%)
(if (= #eligedestino 0)
   (
   (complete 50%)
   (message #m4 #m3)
   (copyfiles
     (source "data/TEAM.035")
       (prompt #infor)
       (dest "df0:data")
       (help #ayuda3)
   )
))
(if (= #eligedestino 1)
  (
  (complete 50%)
  (message #m7)
   (set #defdir @default-dest)
   (set #dest
     (expandpath
        (askdir
             (prompt #destin)
             (help #ayuda2)
             (default #defdir)
        )
     )
   )
  (complete 75%)
  (message #m3)
  (copyfiles
      (prompt #infor)
      (source "data/TEAM.035")
      (dest #dest)
      (help #ayuda3)
   )
))
(complete 100%)
(message #m5 #m6)
(exit (quiet))
