;;;; $VER: InstallLevels 1.0 (17.8.96)


;;; Strings

(set #where-install
     (cat "Choose location where you want to install ASokoban"
		      "(Note that NO new drawer will be created)."))


;;; Main program

(set sourcedir (pathonly @icon))

(set prog-dest (askdir (prompt #where-install)
               (help @askdir-help)
							 (default @default-dest)))
(set @default-dest prog-dest)

(copyfiles (source (tackon sourcedir "MoreLevels"))
           (pattern "screen.#?")
					 (dest (tackon prog-dest "Levels/MoreLevels")))
(copyfiles (source (tackon sourcedir "KidsLevels"))
           (pattern "screen.#?")
					 (dest (tackon prog-dest "Levels/KidsLevels")))

