echo ""
echo "--------------------------------------------"
echo "deleting obsolte mp3 files"
echo "--------------------------------------------"
echo ""
delete >NIL: qrdq_datq/sound/vocals/#?.mp3 force
delete >NIL: qrdq_data/sound/qrdq/#?.mp3 force
copy >NIL: amigastuff/fixloop qrdq_data/sound/qrdq/
cd qrdq_data/sound/qrdq/
fixloop
delete fixloop noreq quiet
cd ///

;now qtools come to action
echo ""
echo "--------------------------------------------"
echo "preparing Qtools"
echo "--------------------------------------------"
echo ""
copy amigastuff/qtools/qtools qrdq_data/
makedir t:qrdq
copy amigastuff/qtools/libs t:qrdq ALL noreq quiet
copy amigastuff/libs t:qrdq ALL noreq quiet
assign libs: t:qrdq add

echo ""
echo "--------------------------------------------"
echo "building Quake Pak-File"
echo "--------------------------------------------"
echo ""
cd qrdq_data/
List sound/qrdq/#?.wav TO T:wavein LFORMAT "qtools a sound/qrdq/%s -o pak0.pak"
execute t:wavein >NIL:
delete t:wavein >NIL:

echo ""
echo "--------------------------------------------"
echo "working on Pak-File: adding Vocale sounds"
echo "--------------------------------------------"
echo ""
List sound/vocals/#?.wav TO T:wavein LFORMAT "qtools a sound/vocals/%s -o pak0.pak"
execute t:wavein >NIL:
delete t:wavein >NIL:

echo ""
echo "--------------------------------------------"
echo "working on Pak-File: adding 1stperson Demos"
echo "--------------------------------------------"
echo ""
List first/#?.dem TO T:wavein LFORMAT "qtools a first/%s -o pak0.pak"
execute t:wavein >NIL:
delete t:wavein >NIL:

echo ""
echo "--------------------------------------------"
echo "working on Pak-File: adding recammed Demos"
echo "--------------------------------------------"
echo ""
List recam/#?.dem TO T:wavein LFORMAT "qtools a recam/%s -o pak0.pak"
execute t:wavein >NIL:
delete t:wavein >NIL:

echo ""
echo "--------------------------------------------"
echo "working on Pak-File: adding misc Demos"
echo "--------------------------------------------"
echo ""
List misc/#?.dem TO T:wavein LFORMAT "qtools a misc/%s -o pak0.pak"
execute t:wavein >NIL:
delete t:wavein >NIL:

echo ""
echo "--------------------------------------------"
echo "working on Pak-File: adding Maps"
echo "--------------------------------------------"
echo ""
List maps/#?.bsp TO T:wavein LFORMAT "qtools a maps/%s -o pak0.pak"
execute t:wavein >NIL:
delete t:wavein >NIL:

echo ""
echo "--------------------------------------------"
echo "working on Pak-File: adding Models"
echo "--------------------------------------------"
echo ""
List progs/#?.mdl TO T:wavein LFORMAT "qtools a progs/%s -o pak0.pak"
execute t:wavein >NIL:
delete t:wavein >NIL:

echo ""
echo "--------------------------------------------"
echo "working on Pak-File: adding necesary scripts"
echo "--------------------------------------------"
echo ""
qtools a dos.cfg -o pak0.pak
qtools a gl.cfg -o pak0.pak
qtools a mp3check.cfg -o pak0.pak
qtools a progs.dat -o pak0.pak
qtools a quake.rc -o pak0.pak

echo ""
echo "--------------------------------------------"
echo "finishing Drawer layout"
echo "--------------------------------------------"
echo ""
delete ~(#?.pak) all noreq quiet force
copy /qrdq.txt ""

echo ""
echo "--------------------------------------------"
echo "deleting temporary Data"
echo "--------------------------------------------"
echo ""
delete >NIL: t:qrdq all noreq quiet

;remove hidden flag from pak added by qtools (strange tool that is)
protect pak0.pak sub h
cd /
rename qrdq_data qrdq >NIL:

echo ""
echo "--------------------------------------------"
echo "supply full path to your Quake-Drawer"
echo "example: Games:Quake"
echo "--------------------------------------------"
echo ""
requestfile >t:path title "give me the position of your Quake folder!" savemode drawersonly
cd `type t:path`

if exists qrdq/pak0.pak
echo "Found old Installation, removing......"
delete >NIL: qrdq all force
else
endif

echo ""
echo "--------------------------------------------"
echo "Copying finished Movie into Quakedir"
echo "--------------------------------------------"
echo ""

makedir >nil: qrdq
copy from "qrdqddxstp:qrdq" to "qrdq" all
copy "qrdqddxstp:qrdq.txt" "qrdq/qrdq.txt"
copy "qrdqddxstp:qrdq.txt.info" "qrdq/qrdq.txt.info"
copy "qrdqddxstp:faq.txt" "qrdq/faq.txt"
copy "qrdqddxstp:faq.txt.info" "qrdq/faq.txt.info"
copy "qrdqddxstp:unixfaq.txt" "qrdq/unixfaq.txt"
copy "qrdqddxstp:qrdq_dx_amiga.readme" "qrdq/qrdq_dx_amiga.readme"
copy "qrdqddxstp:qrdq_dx_amiga.readme.info" "qrdq/qrdq_dx_amiga.readme.info"

;done! 
echo ""
echo "====================================================="
echo "   Quake redone Quick addon been installed on your system"
echo "====================================================="
echo ""
echo "run with quake.exe -game qrdq , have fun!"
echo ""

cd qrdqddxstp:
assign >NIL: qrdqddxstp: remove
cd /
delete >nil: qrdq_deluxe all force

wait 4