# Compiler
CC	=	gcc
# Parameters given to the compiler

CFLAGS	=	-Wall -O3 -ISDK:Local/clib2/include/SDL/
LDFLAGS	=	-lSDL_mixer -lSDL_image -lSDLmain -lSDL -ljpeg -lvorbisfile -lvorbis -lpng -logg -lz -lm -lAuto

STRIP	=	strip

FILES	=	aliens.c

OUTPUT	=	aliens

# Standard targets

all:
		$(CC) $(CFLAGS) $(FILES) -o $(OUTPUT) $(LDFLAGS)
		$(STRIP) $(OUTPUT)

clean:
	delete #?.o

mrproper: clean
