

assign defender: ""

echo "Input path you wish to install to (no draw will be created):"
lab lab0
requestfile >env:defpath drawer=SYS: title="Input path" drawersonly

requestchoice >env:defchoice "You selected :" $defpath "correct" "no"

if $defchoice eq "0"
	skip lab0 back
endif
assign defender: $defpath

copy #? defender: all

echo >>s:user-startup ""
echo >>s:user-startup ";BEGIN----Defender++----"
echo >>s:user-startup "ASSIGN Defender: " noline
echo >>s:user-startup $defpath
echo >>s:user-startup ";END -----Defender++----"

delete >nil: env:defpath

delete >nil: env:defchoice
