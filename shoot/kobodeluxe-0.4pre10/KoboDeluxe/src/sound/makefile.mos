AR			=	ar
CC			=	gcc
RANLIB	=	ranlib
RM			=	rm -f


CFLAGS	= -g -O2 -Wall `sdl-config --cflags` -I../ -I../eel/


SRC		=	$(wildcard *.c)
OBJ		=	$(SRC:.c=.o)
BIN		=	libsound.a


all: $(BIN)

$(BIN):	$(OBJ)
		$(AR) cru $(BIN) $(OBJ)
		$(RANLIB) $(BIN)

%.o:		%.c
		$(CC) $(CFLAGS) -c $< -o $@

clean:
		$(RM) $(OBJ) $(BIN)
