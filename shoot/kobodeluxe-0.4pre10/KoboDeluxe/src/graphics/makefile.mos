AR			=	ar
C++		=	g++
CC			=	gcc
RANLIB	=	ranlib
RM			=	rm -f


CFLAGS	=	-g -O2 -Wall `sdl-config --cflags` -I../


SRC		=	$(wildcard *.c *.cpp)
OBJ_		=	$(SRC:.c=.o)
OBJ		=	$(OBJ_:.cpp=.o)
BIN		=	libgraphics.a


all:		$(BIN)

$(BIN):	$(OBJ)
		$(AR) cru $(BIN) $(OBJ)
		$(RANLIB) $(BIN)

%.o:		%.c
		$(CC) $(CFLAGS) -c $< -o $@

%.o:		%.cpp
		$(C++) $(CFLAGS) -c $< -o $@

clean:
		$(RM) $(OBJ) $(BIN)
