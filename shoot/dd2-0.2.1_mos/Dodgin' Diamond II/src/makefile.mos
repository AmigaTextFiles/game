CC			= gcc
CHMOD		= chmod
RM			= rm
STRIP		= strip

CFLAGS	= -g -O2 -Wall `sdl-config --cflags` -DPACKAGE=\"dd2\" -DVERSION=\"0.2.1\"
LDFLAGS	= `sdl-config --libs` -lSDL_mixer

OBJ		= menu.o SDL_plus.o cfg.o engine.o control.o main.o
BIN		= dd2

all: $(BIN)

$(BIN): $(OBJ)
		$(CC) $(CFLAGS) $(OBJ) -o $(BIN).db $(LDFLAGS)
		$(STRIP) --strip-unneeded --remove-section=.comment $(BIN).db -o $(BIN)
		$(CHMOD) u+x $(BIN)

%.o:	%.c
		$(CC) $(CFLAGS) -c $<

clean:
		$(RM) -f $(OBJ) $(BIN).db $(BIN)
