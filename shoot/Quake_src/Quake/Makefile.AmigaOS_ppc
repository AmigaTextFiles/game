VERSION=1.09
ARCH=AmigaOS_ppc

BUILDDIR=$(ARCH)
CC=vc +aosppc
CFLAGS=-+ -O2 -speed -merge-constants -no-trigraphs -dontwarn=129 \
       -D__USE_INLINE__ -DCGFX_V4 -DPPCASM -DNO_PAULA -DNDEBUG -I.
CCNAT=vc
NETINC=-I:SDK/OS4/Include/netinclude
LDFLAGS=-lm
AS=pasm
ASFLAGS=-F1 -mo -D depth8

DO_CC=$(CC) $(CFLAGS) -o $@ -c $<
DO_CCNET=$(CC) $(CFLAGS) $(NETINC) -o $@ -c $<
DO_ASPPC=$(AS) $(ASFLAGS) -o $@ $<


