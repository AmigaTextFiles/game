IF exists active.mrk
  SKIP crashed
ENDIF
ECHO "" to active.mrk
IF exists defs.con
  RENAME defs.con AS defs.bakcon
ENDIF
IF exists game.con
  RENAME game.con AS game.bakcon
ENDIF
IF exists user.con
  RENAME user.con AS user.bakcon
ENDIF
DELETE megaton.mrk QUIET
IF not exists vacation.prg
  ECHO "" to megaton.mrk
  SKIP crashed
ENDIF
RENAME defs.noc AS defs.con
RENAME game.noc AS game.con
RENAME user.noc AS user.con
RENAME vacation.prg AS vacation.grp
LAB crashed
duke3d.040 -gVACATION.GRP
IF exists megaton.mrk
  SKIP cleanup
ENDIF
RENAME defs.con AS defs.noc
RENAME game.con AS game.noc
RENAME user.con AS user.noc
RENAME vacation.grp AS vacation.prg
LAB cleanup
IF exists defs.bakcon
  RENAME defs.bakcon AS defs.con
ENDIF
IF exists game.bakcon
  RENAME game.bakcon AS game.con
ENDIF
IF exists user.bakcon
  RENAME user.bakcon AS user.con
ENDIF
DELETE active.mrk QUIET
DELETE megaton.mrk QUIET
