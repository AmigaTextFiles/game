# Each record must have a next and depth item.
# The first level is record start.

record start =
	next = weapon
	depth = 0
endrecord

record weapon =
	next = wait_tickler
	depth = 0

	record weap_pickup =
		min = 1
		max = 1
	endrecord
endrecord

record wait_tickler =
	next = tickler
	depth = 1000
endrecord

record tickler =
	next = tickler_thrower
	depth = 6000

	record tickler =
		min = 20
		max = 25
	endrecord

	record shield_pickup =
		min = 2
		max = 3
	endrecord

	record weap_pickup =
		min = 1
		max = 1
	endrecord
endrecord

record tickler_thrower =
	next = tickler_thrower_pause
	depth = 0
	record tickler_thrower =
		min = 1
		max = 1
	endrecord
endrecord

record tickler_thrower_pause = 
	next = wait_punch
	depth = 1000
	repeat = true
endrecord

record wait_punch = 
	next = punch
	depth = 1000
endrecord

record punch =
	next = punch_thrower
	depth = 6000

	record tickler =
