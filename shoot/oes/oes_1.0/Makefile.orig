all:	clean
	g++ ${CXXFLAGS} -o bin/snipe2d.x86.dynamic src/snipe2d.cpp src/ai.cpp src/zooms.cpp src/render_ai.cpp src/logoscreen.cpp src/petopt.cpp src/target.cpp src/gameover.cpp src/prints.cpp src/pmanage.cpp src/highscores.cpp `sdl-config --cflags --libs` -lSDL_image -lSDL_mixer
irix:	clean
	g++ ${CXXFLAGS} -o bin/snipe2d.irx.dynamic src/snipe2d.cpp src/ai.cpp src/zooms.cpp src/render_ai.cpp src/logoscreen.cpp src/target.cpp src/gameover.cpp src/prints.cpp src/pmanage.cpp src/highscores.cpp `sdl-config --cflags --libs` -lSDL_image -lSDL_mixer -lgen 
clean: 
	rm -f bin/snipe2d*
install:
	mkdir -p /usr/local/games/orbital_eunuchs_sniper; cp bin/* /usr/local/games/orbital_eunuchs_sniper; chown root:root /usr/local/games/orbital_eunuchs_sniper/*; cp src/snipe2d.orig /usr/local/bin/snipe2d; chown root:root /usr/local/bin/snipe2d; chmod +x /usr/local/bin/snipe2d
