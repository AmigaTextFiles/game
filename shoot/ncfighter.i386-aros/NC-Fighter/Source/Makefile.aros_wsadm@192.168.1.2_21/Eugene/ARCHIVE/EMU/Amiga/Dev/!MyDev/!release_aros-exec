#Makefile for NC-Fighter
project = NCurses Fighter
file_out = NC-Fighter
CC = i386-aros-gcc
STRIP=i386-aros-strip --strip-unneeded --remove-section .comment

version = 0.1
header = main.h
libs  = -lpdcurses -lSDL_gfx -lSDL_image -ltiff -lpng -ljpeg -lz -lSDL_mixer -lsmpeg -lvorbisfile -lvorbis -logg -lstdc++ -lSDL -lm
flags = -m32 -O2 -w
dist = /usr/local/bin/
c_files = edges.c main.c objects.c
obj = edges.o main.o objects.o


all : ${file_out} ${header}

${file_out}: ${obj} 
	@echo "Linking!"
	${CC} ${flags} -g ${obj} ${libs} -o ../${file_out}
	@rm -f *.o
	${STRIP} ../${file_out}

${obj}: ${c_files}
	@echo "Compiling!"
	${CC} ${flags} -c ${c_files}

clean: 
	@rm -f *.o ../${file_out}
	@echo "Deleting objects and output files"
	@echo "Objects: ${obj} | output file: ${file_out}"

clear: clean
