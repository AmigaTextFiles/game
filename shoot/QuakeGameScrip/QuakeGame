/*
Run Quake with a TC
*/

if( ~show( 'l', "rexxreqtools.library" ) ) then
do
   if( ~addlib( "rexxreqtools.library", 0, -30, 0 ) )then
   do
      say "Could not open rexxreqtools.library! Aborting..."
      exit 10
   end
end

Dir = rtfilerequest('',,'Select TC directory',,'rtfi_flags = freqf_nofiles')
	if Dir = '' then
	do
		say "Requester aborted"
		exit 5
		end
	endif

Address COMMAND 'run >NIL: quake.exe -mmuhack -cddevice 1230scsi.device -cdunit 1 -fpu -game 'left(Dir,length(Dir)-1)''
EXIT
