; Installation script for Schlawiner


(transcript "Installiere Schlawiner...")


(set magicwb
	(askbool
      (prompt "Haben Sie MagicWB installiert?\n")
      (help "MagicWB © by Martin Huttenloher ist DER Ersatz\nfür die langweiligen Standard Icons der Workbench.")
      (choices "Yes" "No")
      (default 1)
	)
)


; Copy Schlawiner and the icon
(set name
	(askdir
   	(prompt "Bitte wählen Sie das Verzeichnis für Schlawiner.")
      (help @askdir-help)
      (default "SYS:Spiele")
   )
)
(copyfiles
	(source "Schlawiner")
   (infos)
   (dest name)
)
(if (= magicwb 1)
   (
      (copyfiles
         (source "Icons/Schlawiner.info")
         (infos)
         (dest name)
      )
   )
   (copyfiles
      (source "Schlawiner.info")
      (infos)
      (dest name)
   )
)


; Copy the Online - Help
(set helpdir
	(askdir
   	(prompt "Bitte wählen Sie das Verzeichnis für die Online - Hilfe.")
      (help @askdir-help)
      (default "HELP:deutsch")
   )
)
(copyfiles
	(source "Docs/Deutsch/Schlawiner.guide")
   (infos)
   (dest helpdir)
)
(if (= magicwb 1)
   (
      (copyfiles
         (source "Icons/Schlawiner.guide.info")
         (infos)
         (dest helpdir)
      )
   )
   (copyfiles
      (source "Docs/Deutsch/Schlawiner.guide.info")
      (infos)
      (dest helpdir)
   )
)


; Copy the catalog
(copyfiles
	(source "Locale/catalogs/deutsch/Schlawiner.catalog")
   (infos)
   (dest "LOCALE:catalogs/deutsch")
)


(set @default-dest name)


(exit)

