; Version Check for C:Installer
; Written by Alvaro Thompson ©1997. alvaro@enterprise.net

If not exists "C:Installer"
 echo >T:tmp "Installer NOT found in C:"
  c:more T:tmp
  Quit
Endif

c:version >T:tmp2 C:Installer

echo >T:tmp "The Current Version of Installer is:"

C:join T:tmp T:tmp2 AS T:tmp3

If exists "C:More"
 C:More T:tmp3
 C:delete T:tmp#?
 Quit
Endif

If Exists "C:PPMore"
 C:PPMore T:tmp3
 C:delete T:tmp#?
 Quit
Endif

C:delete T:tmp#?

echo >CON: "Couldn't find a text viewer!"
wait 5

Quit
