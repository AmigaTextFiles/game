##### options

CC =			SC:C/sc
ASM=			DEVPAC:GenAm -L -D -X -V O+,W- 
LD =			SC:C/slink

OBJECTS =		daleks.o extern.o graphics.o mbox.o Timer.o Arena.o

LIB =			LIB:sc.lib LIB:amiga.lib

DESTINATION = 	dist/Daleks/Daleks


##### main program

$(DESTINATION):	$(OBJECTS) $(LIB)
				$(LD) <with <
				FROM LIB:c.o $(OBJECTS)
				TO $(DESTINATION)
				LIBRARY $(LIB)
				SMALLCODE SMALLDATA NODEBUG
				<
#DoVer $(DESTINATION) FORCE QUIET

##### rules

.s.o:
		$(ASM) $*.s
