#!/bin/sh

# builds single rpm package ( dedicated or client )

# determine build version
VERSION=$( cat version )

RELEASE=1
if [ -r .release_$VERSION ]; then
    RELEASE=$(( $( cat .release_$VERSION ) + 1 ))
fi

echo $RELEASE > .release_$VERSION
echo RELEASE = $RELEASE
export RELEASE

#build spec
./buildspec

#build package
rpm -ba armagetron.spec


