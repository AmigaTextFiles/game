#!/bin/sh
#
# starts the @progtitle@ master server from the installation directory

echo $$ > $HOME/.@prognamebase@/@progname@-masterstarter.pid

INSTALL=@prefix@/games/@progname@

if [ ! -r $HOME/.@prognamebase@ ] ; then
   mkdir $HOME/.@prognamebase@
fi

if [  "x$1" = "x-h" ] ; then
    echo -e "\n\nTo uninstall @progtitle@, type @progname@ --uninstal."
fi

if [  "x$1" = "x--uninstall" ] ; then
    $INSTALL/uninstall
else
    while true; do
		echo "$INSTALL/bin/master --datadir $INSTALL @configdir@ --userdatadir $HOME/.@prognamebase@ $* 2>&1 & jobs -p > $HOME/.@prognamebase@/@progname@-master.pid ; wait; echo terminated" | bash -i 2>&1
    done
#    $INSTALL/bin/master --datadir $INSTALL --logdir $HOME/.@prognamebase@ $*
fi



