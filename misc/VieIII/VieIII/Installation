(COMPLETE 0)

(SET VieIII-Destination (ASKDIR (PROMPT "Choisissez OU VieIII va CREER SON TIROIR")
					  (DISK)
					  (HELP "Vous devez maintenant choisir l'endroit où le tiroir VieIII"
						   "contenant le logiciel du même nom va se placer.")
					  (DEFAULT "SYS:")
				)
)

(COPYFILES (INFOS) (SOURCE "VieIII") (DEST VieIII-Destination))
(COMPLETE 25)
(COPYFILES (INFOS) (SOURCE "VieIII.Guide") (DEST VieIII-Destination))
(COMPLETE 50)

(SET VieIII-Patterns (ASKBOOL (PROMPT "Voulez-vous installer les fichiers contenant des colonies déjà exsitantes ?")
					(HELP "Si vous choisissez d'installer les colonies, un "
						"nouveau tiroir va se créer dans lequel seront "
						"copiés les fichier de données contentant la définition "
						"de colonies de Cellules.\n"
						"Pour plus d'explication voyez le fichier VieIII.Guide.")
					(DEFAULT 1)
			   )
)

(SET @default-dest VieIII-Destination)

(IF VieIII-Patterns
	(
		(MAKEDIR (CAT VieIII-Destination "Patterns"))
		(COMPLETE 75)
		(COPYFILES (ALL) (SOURCE "Patterns/") (DEST (CAT VieIII-Destination "Patterns/")))
	)
)

(COMPLETE 100)
(EXIT "Installation terminée, merci de votre attention")
