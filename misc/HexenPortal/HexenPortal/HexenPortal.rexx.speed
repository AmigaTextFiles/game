Start:
address command "cls"
say "-) Getting info from GUI. (-"
address HexenPortal
cycle ID WPORT
WHICHPORT = result
if WHICHPORT = "Hexen" then do
popasl ID 1_PAT
FULLPATH = result
end
if WHICHPORT = "WarpHexen" then do
popasl ID 2_PAT
FULLPATH = result
end
if WHICHPORT = "VAxen" then do
popasl ID 3_PAT
FULLPATH = result
end
plats = pos(':',FULLPATH)
DIR = left(FULLPATH,plats)
FULLPATH = delstr(FULLPATH, 1, plats)
done = 0
do until done = 1
plats = pos('/',FULLPATH)
if plats ~= 0 then do
DIR = DIR||left(FULLPATH,plats)
FULLPATH = delstr(FULLPATH, 1, plats)
end
else do
FILE = delstr(FULLPATH, 1, plats)
done = 1
end
end
if WHICHPORT = "Hexen" then do
check ID 1_DIR
if result = 1 then FILE = FILE||" -directgfx"
check ID 1_FPU
if result = 1 then FILE = FILE||" -fpu"
check ID 1_NMO
if result = 1 then FILE = FILE||" -nomouse"
check ID 1_NSF
if result = 1 then FILE = FILE||" -nosfx"
check ID 1_NSO
if result = 1 then FILE = FILE||" -nosound"
check ID 1_SHA
if result = 1 then FILE = FILE||" -shareware"
check ID 1_CAM
if result = 1 then do
string ID 1_SAM
FILE = FILE||" -amfx "||result
end
check ID 1_CPL
if result = 1 then do
string ID 1_SPL
FILE = FILE||" -playdemo "||result
end
check ID 1_CSK
if result = 1 then do
string ID 1_SSK
FILE = FILE||" -skill "||result
end
check ID 1_CSM
if result = 1 then do
string ID 1_SSM
FILE = FILE||" -smgame "||result
end
check ID 1_CWA
