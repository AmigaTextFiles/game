options results
call Tags
SELECT
WHEN arg(1)="START" then call Start
WHEN arg(1)="CFGLOAD_HEXEN" then call Config("Load","Hexen")
WHEN arg(1)="CFGSAVE_HEXEN" then call Config("Save","Hexen")
WHEN arg(1)="CFGLOAD_WARPHEXEN" then call Config("Load","WarpHexen")
WHEN arg(1)="CFGSAVE_WARPHEXEN" then call Config("Save","WarpHexen")
WHEN arg(1)="CFGLOAD_VAXEN" then call Config("Load","VAxen")
WHEN arg(1)="CFGSAVE_VAXEN" then call Config("Save","VAxen")
WHEN arg(1)="LOADSETTINGS" then call LoadSettings
WHEN arg(1)="SAVESETTINGS" then call SaveSettings
OTHERWISE call Init
end
exit
