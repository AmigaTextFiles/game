; libinstall v1.0 by Peter Elzner

echo "Installing ptreplay.library"
echo " "
if exists libs:ptreplay.library
  version >nil: ptreplay.library version=6
  if not warn
    version >nil: ptreplay.library revision=6
    if not warn
      echo "There is already a version greater or equal to v6.6 installed"
      echo " "
      echo "The existing ptreplay.library has not been replaced"
    else
      echo "old version : " noline
      version ptreplay.library full
      echo "new version : " noline
      echo "ptreplay.library 6.6"
      echo "(1996-03-20)"
      echo " "
      ask "replace older version of ptreplay.library ? (y/n) "
      if warn
        copy libs/ptreplay.library libs:
        echo "ok"
      endif
    endif
  else
    echo "old version : " noline
    version ptreplay.library full
    echo "new version : " noline
    echo "ptreplay.library 6.6"
    echo "(1996-03-20)"
    echo " "
    ask "replace older version of ptreplay.library ? (y/n) "
    if warn
      copy libs/ptreplay.library libs:
      echo "ok"
    endif
  endif
else
  echo "ptreplay.library not installed,"
  echo "installing v6.6 ..."
  copy libs/ptreplay.library libs:
  echo "ok"
endif
echo " "
wait 5
