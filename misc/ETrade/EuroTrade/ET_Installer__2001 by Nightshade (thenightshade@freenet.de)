
;$VER: EuroTrade HD-Installer v1.0 (19.07.2001) - Written by Nightshade (thenightshade@freenet.de)

version exec.library 39 >NIL:
if not warn
   skip install
else
   echo "Dieses Skript erst ab OS 3.0 laufähig"
   endcli
endif

lab install
   assign ETInstall: ""
   requestchoice >ENV:inst "EuroTrade HD-Installer" "*n*nSoll EuroTrade auf Ihre Festplatte*ninstalliert werden?*n*n" "Ja, Bitte!|Nein, Danke!"
      if $inst EQ 1
         requestfile >ENV:target DRAWER=SYS: TITLE="Zielverzeichnis:" POSITIVE=Los NEGATIVE=Ende DRAWERSONLY
            if `getenv target`
               cd $target
               if not exists EuroTrade.info
                  makedir EuroTrade
                  copy clone SYS:System.info EuroTrade.info
                  cd EuroTrade
                  copy clone ETInstall:~(ET_Installer#?) "" all quiet
                  copy clone ETInstall:Fonts/#? Fonts: all quiet
                  delete Fonts/#? all quiet
                  delete Fonts all quiet
                  requestchoice >NIL: "EuroTrade HD-Installer" "EuroTrade wurde erfolgreich installiert!" "Danke!"
               else
                  requestchoice >NIL: "FEHLER" "Hier ist EuroTrade bereits installiert!" "Achso!"
               endif
               cd RAM:
            else
               requestchoice >NIL: "FEHLER" "Kein Zielverzeichnis gewählt!" "Upps!"
            endif
      else
         requestchoice >NIL: "ACHTUNG" "EuroTrade wurde nicht auf*nIhre Festplatte installiert!" "Gut!"
      endif
   skip end

lab end
   unsetenv inst
   unsetenv target
   assign ETInstall: remove
skip break

lab break
   wait 2
   endcli
