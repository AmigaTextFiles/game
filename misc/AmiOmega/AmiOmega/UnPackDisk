.K ""
echo "This script will use omega.lzh from this distribution, along"
echo "with a few files from your sys:c and sys:system directory to"
echo "create a bootable Omega game disk.  Once you have this game"
echo "disk you can also move Omega to your hard disk.  Be sure to"
echo "edit the omega.cnf file appropriately if you do install it"
echo "on a hard disk."
echo ""

ask "Do you have a blank disk ready?"
if not WARN
	echo "Try again when you do ..."
	echo "All Done.  Click close gadget to get rid of window."
	endcli
endif

ask "Is floppy drive df1: free?"
if not WARN
	echo "You will need to do the unpacking yourself."
	echo "All Done.  Click close gadget to get rid of window."
	endcli
endif

echo "Formatting and unpacking disk."

sys:system/format drive df1: name Omega noicons
install df1:
makedir Omega:c
if exists sys:c/Run
	copy sys:c/Run Omega:c/Run clone quiet
else
	echo "Hmmm, can't find sys:c/Run, must be AmigaDos 2.0 ..."
endif
if exists sys:c/Stack
	copy sys:c/Stack Omega:c/Stack clone quiet
else
	echo "Hmmm, can't find sys:c/Stack, must be AmigaDos 2.0 ..."
endif
copy sys:c/Copy Omega:c/Copy clone quiet
copy sys:c/Delete Omega:c/Delete clone quiet
if exists sys:system/FastMemFirst
	copy sys:system/FastMemFirst Omega:c/FastMemFirst clone quiet
else
	echo "Hmmm, can't find sys:system/FastMemFirst ..."
endif

:c/lharc -x -a -m x Omega.lzh Omega:

echo "All Done.  Click close gadget to get rid of window."
endcli
