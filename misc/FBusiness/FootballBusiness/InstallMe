.key idir
.bra {
.ket }
;$VER: Version 1.9

; FootballBusiness Installation Script V1.9

; Benutzung: von der shell aus starten mit: install <Schublade>
;            (z.B. install HD1:Spiele/Sport)

echo "*NFootballBusiness V1.9  Install-Programm*n"
if "{idir}" eq ""
  echo "ERROR: Zielschublade fehlt im Argument"
  skip ende
endif

if "{idir}" eq CHR$(63)
  echo "Name/M"
  skip ende
endif

if not exists "{idir}"
  echo "ERROR: Zielschublade existiert nicht! Bitte zuerst anlegen"
  skip ende
endif

echo "*NInstall-Programm eroeffnet eigene Schublade mit Namen 'FBusiness'"
ask "Soll diese Schublade in {idir} eroeffnet werden (y/n)?"
if not warn
 echo "*NInstallation abgebrochen"
 skip ende
endif

assign FB: "{idir}"

if exists FB:FBusiness
 ask "Schublade 'FBusiness' existiert bereits! Trotzdem weitermachen (y/n)?"
 if not warn
  echo "*NInstallation abgebrochen!"
  skip ende
 else
  skip weiter
 endif
endif

 
makedir FB:FBusiness
copy FBusinessINF FB:FBusiness.info nopro quiet

lab weiter
 echo "*NInstalliere.......Bitte warten!"
 if not exists FB:FBusiness/Games
   makedir FB:FBusiness/Games
 endif
 copy load FB:FBusiness nopro quiet

 if not exists FB:FBusiness/Pic
   makedir FB:FBusiness/Pic
 endif
 copy pic FB:FBusiness/pic nopro quiet
 copy dos.bmap FB:FBusiness nopro quiet
 copy exec.bmap FB:FBusiness nopro quiet
 copy graphics.bmap FB:FBusiness nopro quiet
 copy intuition.bmap FB:FBusiness nopro quiet
 copy FootballBusiness FB:FBusiness nopro quiet
 copy FootballBusiness.info FB:FBusiness nopro quiet
 copy FB1.9.main FB:FBusiness nopro quiet
 copy FB.highs0 FB:FBusiness nopro quiet
 copy FB.highs1 FB:FBusiness nopro quiet
 copy FB.data FB:FBusiness nopro quiet
 copy FBusiness.guide FB:FBusiness quiet
 copy FBusiness.guide.info FB:Fbusiness quiet
echo "*NInstallation fertig!"

lab ende
 echo ""

; ENDE *******

 
 
