CC=gcc 
LIBS=-L/usr/X11R6/lib -lm -lfltk -lX11 -lpng -ljpeg

all: casino

include	deps

CPPS=mainwindow.cpp main.cpp cards.cpp desk.cpp

OBJECTS=$(CPPS:.cpp=.o)

casino: $(OBJECTS)
	$(CC) -o $@ $(OBJECTS) $(LIBS)

.cpp.o:
	$(CC) -c $<

mainwindow.cpp mainwindow.h: mainwindow.fl
	fluid -c $<

deps:
	$(CC) -MM $(CPPS) > deps

clean:
	rm -f *.o casino mainwindow.cpp mainwindow.h


