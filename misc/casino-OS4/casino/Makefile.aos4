CC=g++ 
LIBS= -lfltk_images -lm -lfltk_forms -lfltk -lpng -lz -ljpeg -lauto -lnet -lunix

all: casino

include	deps

CPPS=mainwindow.cpp main.cpp cards.cpp desk.cpp

OBJECTS=$(CPPS:.cpp=.o)

casino: $(OBJECTS)
	$(CC) -o $@ $(OBJECTS) $(LIBS)

.cpp.o:
	$(CC) -c $<

mainwindow.cpp mainwindow.h: mainwindow.fl
	fluid -c $<

deps:
	$(CC) -MM $(CPPS) > deps

clean:
	delete *.o casino


