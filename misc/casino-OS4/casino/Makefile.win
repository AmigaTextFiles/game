CC=gcc -mno-cygwin -mwindows -DWIN32
LIBS=-lfltk -lgdi32 -lwsock32

all: casino.exe

include	deps

CPPS=mainwindow.cpp main.cpp cards.cpp desk.cpp

OBJECTS=$(CPPS:.cpp=.o)

casino.exe: $(OBJECTS)
	$(CC) -o $@ $(OBJECTS) $(LIBS)

.cpp.o:
	$(CC) -c $<

mainwindow.cpp mainwindow.h: mainwindow.fl
	fluid -c $<

deps:
	$(CC) -MM $(CPPS) > deps

clean:
	rm -f *.o casino.exe mainwindow.cpp mainwindow.h


