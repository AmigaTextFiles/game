; $VER: 0.01 (17-11-1998) 
(set #about (cat "\n\n\n\nWelcome to Hegemon's Arbiter ver.1.12 install script!\n\nCopyright ©1998 by\n\nMichaî Grzëdzicki\n<michal.grzedzicki@mi.ikp.pl>\n") )
(set #whattodo (cat "\n\n\n\n\nThis script will install Hegemon's Arbiter 1.12 on your HD."))
(set #Warning (cat "Warning !\n\n\n""HArbiter requires 350KB of free space on your disk! \n\n"))
(set #Path-Help(cat "\nThis section lets you choose the ""target directory to install Harbiter. \n\n""A directory HArbiter will be created there.\n\n""Default is Work:\n\n\n"@askdir-help))
(set #Path-Txt(cat "Select the target directory. A directory HArbiter will ""be created there."))
(set #papa (cat "\nHegemon's Arbiter installed\n Bye, bye!\n\nExtra icons are available in Icons sub-directory."))

;intro
(message #about)
(welcome) 
(message #whattodo)
(message #Warning)

;main

(set target(askdir (prompt #Path-Txt) (help #Path-Help) (default @default-dest) (newpath)))
(set targetr(tackon target "HArbiter"))

(makedir targetr
	(prompt "Making HA directory")
	(help "Just confirm it!")
)


(copyfiles
	(prompt "Copying files " #targetr)
	(source "")
	(help "Select files tocopy to" #targetr)
	(dest targetr)
	(all)
	(confirm)
)
(exit #papa)
