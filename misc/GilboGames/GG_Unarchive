echo "directory (they should all be there anyway)."
echo "Any problems contact....."
echo "martyn@enterprise.net"
echo ""
echo "Don't forget Gilbo's Excellent Homepage where you can play the" 
echo "games with other people and get more info on other discs!!"
echo "http://homepages.enterprise.net/martyn/gilbo.html"
echo ""
Ask "Do you want to install and unarchive Gilbo Games to DF0: now (y/n)?"
If warn
install DF0:
relabel DF0: GilboGames
lha -a x GG.lha Df0:
else
endif
echo " "
echo " "
