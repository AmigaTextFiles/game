# makefile for generating output files from BattleGuide.texi

SOURCE = BattleGuide

all: dvi guide doc ps

dvi:
    texi2dvi $(SOURCE).texi

guide:
    makeinfo --amiga-39 $(SOURCE).texi

doc:
    makeinfo --amiga-39 --no-headers -o $(SOURCE).doc $(SOURCE).texi

test:
    makeinfo --amiga-39 $(SOURCE).texi

ps:
   dvips $(SOURCE)
