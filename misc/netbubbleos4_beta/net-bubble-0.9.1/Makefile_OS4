CC = gcc
CFLAGS = -g -ansi -pedantic -W -Wall -ggdb -Wstrict-prototypes -Isdk:local/newlib/include/SDL 
OBJ = main.o display.o chargement.o utils.o paraboles.o fallen.o fonts.o network.o pix.o
LIBS= -lSDL_image -lpng -ljpeg -lSDL_net -lnet -lSDL -lm -lauto -lz -lpthread

net-bubble: $(OBJ)
	$(CC) $(OBJ) -o net-bubble $(LIBS)

main.o : main.c main.h display.h gamedefs.h chargement.h utils.h paraboles.h
display.o: display.c display.h gamedefs.h main.h chargement.h utils.h
chargement.o: chargement.c chargement.h
utils.o: utils.c utils.h gamedefs.h
paraboles.o: paraboles.c paraboles.h gamedefs.h main.h chargement.h utils.h display.h 
fallen.o: fallen.c fallen.h gamedefs.h main.h chargement.h utils.h display.h 
fonts.o: fonts.c fonts.h gamedefs.h display.h chargement.h main.h
network.o: network.c network.h
pix.o: pix.c pix.h gamedefs.h main.h utils.h

clean:
	rm -f $(OBJ) net-bubble 
