#!/bin/sh

# This file is part of Disk War, a game by Alessandro Pira

# This script creates the xpm files from the bitmap in the ../bitmaps
# directory.
# The debian package netpbm (or equivalent) is needed.

IMAGES="bar bill charmap colors disks"
for img in $IMAGES; do
	bmptoppm < ../bitmaps/$img.bmp | ppmquant 256 - | ppmtoxpm | sed -e "s/noname/$img/" - > $img.xpm
done

IMAGES="back wall control red green blue yellow purple"
for img in $IMAGES; do
	bmptoppm < ../bitmaps/backgrounds/$img.bmp | ppmquant 256 - | ppmtoxpm | sed -e "s/noname/$img/" - > $img.xpm
done

