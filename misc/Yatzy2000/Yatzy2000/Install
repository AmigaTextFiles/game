(set #dirname   	"Yatzy2000")

(set #destdir-prompt "Where should Yatzy2000 be installed? A drawer named 'Yatzy2000' will be created there.")

(set @default-dest
	(askdir
		(prompt #destdir-prompt)
		(help @makedir-help)
		(disk)
		(default "")
		(newpath)
	)
)

(set @default-dest	(tackon @default-dest #dirname))
(set #dir-anims		(tackon @default-dest "Animations"))
(set #dir-dice		(tackon @default-dest "Dice"))


(makedir @default-dest
	(infos)
)

(complete 20)

(copyfiles
	(source "")
	(dest   @default-dest)
	(pattern "Yatzy2000#?")
)

(complete 40)

(copyfiles
	(source "Animations")
	(pattern "#?")
	(dest	#dir-anims)
)

(complete 60)

(copyfiles
	(source "Dice")
	(pattern "#?")
	(dest	#dir-dice)
)

(complete 80)

(copylib
	(source	"imagepool.library")
	(dest	"LIBS:")
	(help	"No help...")
	(prompt	"Copying...")
	(confirm)
)

(copylib
	(source	"random250.library")
	(dest	"LIBS:")
	(help	"No help...")
	(prompt	"Copying...")
	(confirm)
)

(complete 100)
