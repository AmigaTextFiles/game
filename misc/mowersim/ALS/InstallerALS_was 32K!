;$VER: InstallerALS V2.0 for Installer 43.3
;much improved small version!
(set house "                  __  \n  /\\             /  \\ \n /  \\            \\  / \n|    |            ¯¯  \n|    |                \n")
(set grass "")
(set mown "......................................................................................................................................................................................................................................................................................................................................................................................................................................................................................")
(set bloke ",;")
(set mowseven "")
(set alsopts (getenv "InstallerALS"))
(set @abort-button "Quit")
(if (>= alsopts 1) (set mowseven "GIFTBOX MOWMASTER"))
(set #doforever 0)

(while (= #doforever 0)
	(

(until (>= mower 5)
	(
(set mower
	(askchoice
		(prompt 	"************************\n"
				"* LAWN MOWER SIMULATOR *\n"
				"************************\n\n"
				"THIS IS A POWERFUL AND\nACCURATE LAWN MOWING SIMULATION.\n"
				"CHOOSE FROM SEVERAL DIFFERENT MACHINES AND\n'GO GET THAT GRASS'")
		(help "InstallerALS by Chris Young\n© 1997 Unsatisfactory Software\n\nPlaying ALS\n\nSelect the mower that you want to use by clicking on the radio button to the left of its name, then Proceed.\n\n"
		"To mow, repeatedly click on \"Proceed\".  To quit, click on \"Quit\", or press Esc.")
		(choices "CAMPARI GRASSMASTER" "DAF TURFOMATIC" "ACME MEGA-CUT 3000" "ACME LAWNACE" "FLYMO GRASSCHUM" "PATIO SPRINTETTE" mowseven)
		(default 0)
	)
)

(select mower
	(message "I'M SORRY, I'M AFRAID THAT THE\nCAMPARI GRASSMASTER\nIS BROKEN AT THE MOMENT")
	(message "I'M SORRY, I'M AFRAID THAT THE\nDAF TURFOMATIC\nIS BROKEN AT THE MOMENT")
	(message "I'M SORRY, I'M AFRAID THAT THE\nACME MEGA-CUT 3000\nIS BROKEN AT THE MOMENT")
	(message "I'M SORRY, I'M AFRAID THAT THE\nACME LAWNACE\nIS BROKEN AT THE MOMENT")
	(message "I'M SORRY, I'M AFRAID THAT THE\nFLYMO GRASSCHUM\nIS BROKEN AT THE MOMENT")
	(message "THE\nPATIO SPRINTETTE\nIS WORKING WELL.\n\nCLICKING 'Proceed' WILL ENGAGE THE MOTOR\n\nCLICK 'Proceed' TO START...")
	(message "WELL DONE!\n\nYOU FOUND THE HIDDEN MOWER\n\nTHE\nGIFTBOX MOWMASTER\nIS WORKING WELL.\n\nCLICKING 'Proceed' WILL ENGAGE THE MOTOR\n\nCLICK 'Proceed' TO START...")
)
))
(set mower 0)
(message house grass bloke)
(IF (<> alsopts 2) (
(set #n 1)
(until (= #n 141)
(message house (substr grass #n) bloke (substr mown 1 #n))
(set #n (+ #n 1))
)

(run "ALSrnd 2 >ENV:ALSrnd")
(set die (getenv "ALSrnd"))
(if (= die 1)
	(exit "YOU HAVE BEEN KILLED" (quiet))
)

(until (= #n 467)
(message house (substr grass #n) bloke (substr mown 1 #n))
(set #n (+ #n 1))
)

(message house (substr grass 466) bloke (substr mown 1 466))

))
(message house (substr grass 467) bloke (substr mown 1 467))

(run "ALSrnd 8 >ENV:ALSrnd")

(set alsrnd (getenv "ALSrnd"))

(set #alsrnd (+ alsrnd))  ;(- alsrnd 1))

(select #alsrnd

	(message "A BIT OF A SHODDY JOB, THAT. DO IT AGAIN!")
	(message "YOU'VE BROKEN THE MOWER YOU STUPID LITTLE GIT. GO AWAY AND DON'T DARKEN MY DOOR AGAIN.")
	(message "TEA AND CAKES FOR YOU, MATEY. THAT WAS A SUPER BIT OF GRASSWORK. IN FACT, HERE'S A TENNER.")
	(message "MOWER TESTER CHUCK SAYS 'OH OH! YOU SURE BOUGHT THE LAWN THAT TIME! I DON'T KNOW YOU!'")
	(message "CALL THAT A MOW-JOB (oo-er)? I COULD DO BETTER WITH MY GRANNY'S NAIL CLIPPERS!")
	(message "WORRA CUT! VIDAL SASSOON'S NOT A PATCH ON YOUR GOOD SELF I'D SAY!")
	(message "THAT'S A BIT OF AN ERRATIC CUT. HELEN KELLER COULD HAVE DONE BETTER.")
	(message "GREAT. SMASHING. SUPER. BENDY BULLIES ALL ROUND. LOVELY. SMASHING.")
	(message "WELL DONE. YOU'VE EARNED YOURSELF A CORNED BEEF SANDWICH!")
)
))
(exit "It should never get here" (quiet))

(welcome)
