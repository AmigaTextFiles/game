/* Condenses a dungeon to its minimum possible dimensions
   (C) Zach Forsyth 1995
   $VER: 0.5
*/

options results
address IMPDUNGEON.1

FRAME f

xoffset = 0 - f.fx0
yoffset = 0 - f.fy0
xsize   = f.fx1 - f.fx0 + 1
ysize   = f.fy1 - f.fy0 + 1

if xsize < 10 then xsize = 10
if ysize < 10 then ysize = 10

SETOFFSET xoffset yoffset xsize ysize
