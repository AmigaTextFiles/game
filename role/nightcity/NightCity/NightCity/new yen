rem new yen
rem 8/18/2017

do Examine New Yen
 [
  ifitemin new yen,INV
   [
    ifflag newyenlook
     [
      print It's a new yen note, local currency, traded for goods in the black market zone.
      delflag newyenlook
     |
      print It's a new yen note, local currency, worth 5 American dollars.
      setflag newyenlook
     ]
   |
    ifflag newyen pickedup
    [
     ifin Coffin
      [
       print The new yen note sits on the bed.
      |
       ifin Cheap Hotel
        [
         print The new yen note sits on the ground.
        |
         ifin Metro Holografixs
          [
           print The new yen note sits on the ground.
          |
           print The new yen note sits on the ground, strangly enough no one picks it up.
          ]
        ]
      ]
    |
     print A crumpled up new yen note sits on the ground, someone angryly discarding it.
    ]
   ]
 ]
 
ifitemin new yen,INV
 [
  do Drop New Yen
   [
    ifin Ryders Alley
     [
      print You drop the new yen note as the bum rushes in to catch it.
      print 
      print "You could at least hand it to me, but thanks. Maybe I can help you out 
      print sometime."
      setflag bum happy
      setflag examine bum
      gone new yen
     |
      print You drop the new yen.
      move new yen,INV,ACTROOM
     ]
   ]
 |
  do Pickup New Yen
   [
    print You pick up the new yen.
    setflag newyen pickedup
    move new yen,ACTROOM,INV
   ]
 ]

ifin Ryders Alley
 [
  do Give To Bum
   [
    print You hand the bum the new yen note.
    print
    print "Thanks, times are tough, you know. Maybe I can help you out some time."
    setflag bum happy
    setflag examine bum
    gone new yen
   ]
 |]
 
