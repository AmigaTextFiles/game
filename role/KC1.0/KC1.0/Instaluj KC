(message "\n\nSkrypt ten instaluje program KC w wersji 1.0\n\n\nKC © 1996-2000 Kamil Nieôcioruk")

(complete 0)

(set DOCELOWY
 (askdir
  (prompt "Wybierz katalog, w którym chcesz zainstalowaê KC.\nZostanie tam utworzony nowy katalog.")
  (help @askdir-help)
  (default "KC1.0/")
 )
)

(makedir (tackon DOCELOWY "KC"))
(complete 10)

(copyfiles
 (source "")
 (dest (tackon DOCELOWY "KC"))
 (choices
  "KC"
  "KC.info"
  "KC.guide"
  "KC.guide.info"
 )
 (help @copyfiles-help)
)

(complete 100)

(exit "\n\nProgram KC w wersji 1.0 zostaî zainstalowany.\nÛyczë losowania prawdziwych herosów!"
 (quiet)
)
