;*
;* Install Script For Fate v 1.21
;*  
;* Made by GumBoy/X-Com
;*

(complete 0)

;*** Directory Select ***

(complete 50)

(set idir
  (askdir
    (prompt "Gdzie chcesz zainstalowaê Fate?"
            "\nKatalog Fate ZOSTANIE utworzony.")
    (help "Katalog o nazwie Fate zostanie utworzony we wskazanym przez Ciebie miejscu. Zostanâ do niego skopiowane wszystkie pliki z katalogu instalacyjnego")
    (default "Ram:")
  )
)

(complete 60)

(set idir (tackon idir "Fate"))

(makedir idir (infos))
  
(copyfiles
  (source "")
  (dest idir)
  (pattern "#?")
)

(complete 75)
(complete 100)


(exit "\nInstalacja zakoïczona pomyôlnie!\n\n(c) by Marcin GumBoy Grâziowski\n"
"sirhaker@interia.pl"
"\n\n X-Com 2000"
)
