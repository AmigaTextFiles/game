;*
;* Install Script For FatePL
;*  
;* Made by GumBoy/X-Com
;*

(complete 0)

;*** Directory Select ***

(complete 50)

(set idir
  (askdir
    (prompt "Gdzie chcesz zainstalowaê FatePL?"
            "\nKatalog FatePL ZOSTANIE utworzony.")
    (help "Katalog o nazwie FatePL zostanie utworzony we wskazanym przez Ciebie miejscu. Zostanâ do niego skopiowane wszystkie pliki z katalogu instalacyjnego")
    (default "Ram:")
  )
)

(complete 60)

(set idir (tackon idir "FatePL"))

(makedir idir (infos))
  
(copyfiles
  (source "")
  (dest idir)
  (pattern "#?")
)

(complete 75)
(complete 100)


(exit "\nInstalacja zakoïczona pomyôlnie!\n\n(c) by Marcin GumBoy Grâziowski\n"
"sirhaker@interia.pl"
"\n\n X-Com 2000"
)
