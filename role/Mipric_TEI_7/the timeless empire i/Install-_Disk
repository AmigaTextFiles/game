(PROCEDURE SysToRam
	(SET Arg (CAT "SYS:" Arg))
	(IF (= (EXISTS Arg (NOREQ)) 0)
	(
		(ABORT "Error: System file not found:\n\n" Arg "\n\nThis file is \
essential for a successful installation of MIPRIC.")
	))
	(COPYFILES (SOURCE Arg) (DEST "RAM:"))
)


(ASKDISK	(PROMPT	"Please insert a newly installed MIPRIC System disk.")
			(HELP	"For each new game, you'll have to run the installation \
script from the basic package to make a new system disk. You might also \
create one system disk and copy it using 'Diskcopy' or another diskcopy \
tool.")
			(DEST	"MIPRIC"))

(SET @default-dest "MIPRIC:")
(COPYFILES (SOURCE "Disk 00.Data") (DEST @default-dest))
(COPYFILES (SOURCE "Disk 01.Data") (DEST @default-dest))
(RUN "C:Relabel MIPRIC: \"Timeless Empire Disk 01\"")
(SET Arg "system/format")
(SysToRam)
(IF (ASKBOOL (PROMPT "I have to format another disk for the story now. Please \
insert the disk to format now in the internal disk drive. Was this disk already \
formatted as an AmigaDOS disk?")
				(HELP "If you select \"Yes\", the disk will be formatted much \
faster. However, this works only if this disk has been formatted before. If you're \
not sure, you'd better select \"No\"."))
(
	(TEXTFILE (DEST "RAM:FCall") (APPEND "RAM:Format DRIVE DF0: NAME \"Timeless Empire Disk 02\" NOICONS QUICK\nEndCLI\n"))
)
(
	(TEXTFILE (DEST "RAM:FCall") (APPEND "RAM:Format DRIVE DF0: NAME \"Timeless Empire Disk 02\" NOICONS\nEndCLI\n"))
))
(RUN "Execute RAM:FCall")
(ASKDISK (PROMPT "Please insert now your newly formatted MIPRIC disk in any drive.")
		 (HELP   "I need the disk to copy some data files to it!")
		 (DEST "Timeless Empire Disk 02"))
(DELETE "RAM:FCall")
(DELETE "RAM:format")
(COPYFILES (SOURCE "Disk 02.Data") (DEST "Timeless Empire Disk 02:"))
(EXIT "Done. You can now boot from this disk to play.")
