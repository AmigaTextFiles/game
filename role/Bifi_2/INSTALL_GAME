echo	""
IF EXISTS S/BATCH 
 echo	"FEHLER!!!!!!"
 echo	""
 echo	"BITTE SCHIEBEN SIE DAS INSTALL-PIKTOGRAMM IN DAS VERZEICHNIS, IN"
 echo	""
 echo	"DAS INSTALLIERT WERDEN SOLL. DANN STARTEN SIE DIE INSTALLATION"
 echo	""
 echo	"MIT EINEM DOPPELKLICK AUF DAS ICON."
 echo	""
 wait	8
ELSE
 echo	"KOPIERE DATEIEN BITTE WARTEN!"
 echo	"¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯"
 makedir >NIL: BIFI_II
 makedir >NIL: BIFI_II/DAT
 copy	BI2:S/ORDNER	BIFI_II.info
 copy	BI2:S/BATCH	BIFI_II/GAME
 copy	BI2:S/ICON	BIFI_II/GAME.info
 copy	BI2:MAIN	BIFI_II/MAIN
 copy	BI2:DAT/#?	BIFI_II/DAT
 delete	>NIL: INSTALL_GAME	QUIET
 delete	>NIL: INSTALL_GAME.info	QUIET
 echo	""
 echo	"INSTALLATION KOMPLETT!. BITTE ENTFERNEN SIE DIE DISKETTE"
 echo	"AUS DEM LAUFWERK, BEVOR SIE DAS SPIEL VON DER FESTPLATTE"
 echo	"STARTEN!!!"
 wait	5
ENDIF