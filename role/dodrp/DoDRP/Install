; $VER: DoDRP install script 1.0 (30.7.96)

(if (< (/ (getversion) 65536) 37)
  (abort "Beklager, men DoDRP krever AmigaOS 2.04 eller bedre")
)

(complete 0)

(set destdir
  (tackon
    (askdir
      (prompt "Hvor vil du ha DoDRP installert? En skuff ved navn DoDRP vil bli laget der.")
      (help @askdir-help)
      (default @default-dest)
    )
    "DoDRP"
  )
)

(set @default-dest destdir)

(copyfiles
  (source "")
  (choices "DoDRP" "DoDRP.prefs" "DoDRP.guide"
           "Yrkeliste" "Raseliste" "Yrkesferdigheter" "PrimæreFerdigheter")
  (dest destdir) (infos)
)

(complete 92)

(set libdest
  (askdir
    (prompt "Hvor vil du installere EAGUI.library?")
    (help "DoDRP krever EAGUI.library versjon 3 eller høyere for å virke. Det må ligge i LIBS:"
      " eller i samme skuff som DoDRP.\n\n" @askdir-help)
    (default destdir)
  )
)

(copylib
  (source "EAGUI.library")
  (dest libdest)
)

(complete 100)
