#INC=-I/usr/include/SDL -I. -I.. -I../../C-Nd_array
INC = -I/usr/include/SDL -I. -I~/projects/include
LIB=-lSDL -lSDL_image -L~/projects/lib
CC=gcc -Wall -g

OBJS=drawmap.o  genmap.o  ortho-interp.o cosmap.o

all: Makefile.dep  $(OBJS)
	$(CC) $(LIB) -o drmain $(OBJS) ../../C-Nd_array/C-2darray.o ../dXrng.o ../crash.o

testdraw: $(OBJS) testdraw.o
	$(CC) $(LIB) -o testdraw testdraw.o $(OBJS) ../../C-Nd_array/C-2darray.o ../dXrng.o ../crash.o

testcos:  cosmap.o testcos.o
	$(CC) $(LIB) -o testcos cosmap.o testcos.o

perlinify:  $(OBJS) perlinify.o
	$(CC) $(LIB) -o perlinify perlinify.o $(OBJS) ../../C-Nd_array/C-2darray.o ../dXrng.o ../crash.o



Makefile.dep depend: *.c
	for i in *.c; do $(CC) $(INC) -MM $$i;done >Makefile.dep

include Makefile.dep

.c.o:
	$(CC) $(INC) -c $<
