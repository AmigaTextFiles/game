.key dest
failat 21
copy items.data "<dest>"
copy frames.data "<dest>"
makedir "<dest>scripts"
makedir "<dest>maps"
makedir "<dest>mods"
makedir "<dest>levels"
copy scripts/#? "<dest>scripts/" clone all
copy maps/#? "<dest>maps/" clone all
copy mods/#? "<dest>mods/" clone all
copy levels/#? "<dest>levels/" clone all
Ask "Delete the current adventure, as well? (Y/N)"
if warn
  echo "Deleting Files..."
  delete scripts/#? all
  delete maps/#? all
  delete mods/#? all
  delete levels/#? all
  delete items.data
  delete frames.data
endif
