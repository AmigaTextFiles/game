echo	""
IF EXISTS S/BATCH 
 echo	""
 echo	"BITTE SCHIEBEN SIE DAS INSTALL-PIKTOGRAMM IN DAS VERZEICHNIS, IN DAS"
 echo	""
 echo	"TELEKOMMANDO_II INSTALLIERT WERDEN SOLL."
 echo	""
 echo	"ERST WENN SIE DAS GEMACHT HABEN, KÖNNEN SIE DIE INSTALLATION BEGINNEN!"
 echo	""
 wait	8
ELSE
 echo	"KOPIERE DATEIEN BITTE WARTEN!"
 echo	"¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯"
 makedir >NIL: TELEKOMMANDO_II
 makedir >NIL: TELEKOMMANDO_II/DAT
 copy	TK2:S/ORDNER	TELEKOMMANDO_II.info
 copy	TK2:S/BATCH	TELEKOMMANDO_II/GAME
 copy	TK2:S/ICON	TELEKOMMANDO_II/GAME.info
 copy	TK2:GAME	TELEKOMMANDO_II/GAME1
 copy	TK2:INTRO	TELEKOMMANDO_II/INTRO
 copy	TK2:DAT/#?	TELEKOMMANDO_II/DAT
 copy	TK2:FONTS FONTS: ALL	QUIET
 delete	>NIL: INSTALL_TK2	QUIET
 delete	>NIL: INSTALL_TK2.info	QUIET
 echo	""
 echo	"INSTALLATION KOMPLETT!. BITTE ENTFERNEN SIE DIE DISKETTE"
 echo	"AUS DEM LAUFWERK, BEVOR SIE DAS SPIEL VON DER FESTPLATTE"
 echo	"STARTEN!!!"
 wait	5
ENDIF