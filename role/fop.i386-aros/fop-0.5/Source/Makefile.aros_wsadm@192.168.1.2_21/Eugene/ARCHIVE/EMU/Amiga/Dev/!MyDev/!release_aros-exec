# Makefile for FOP: Fight or Perish
#
# Eugene aGGreSSor Sobolev
#
# 6 January 2021

VERSION=0.5
CC=i386-aros-gcc -v
SDL_CFLAGS = -lSDL
SDL_LIBS= -lstdc++ -lSDL_ttf -lSDL_gfx -lSDL_net -lSDL_image -lSDL -lpng_nostdio -limagedec -lwebp -ltiff -ljpeg -lz -lSDL_mixer -lsmpeg -lvorbisfile -lvorbis -logg -lft2 -lz -lm
CFLAGS=-Wall -O2 $(SDL_CFLAGS) -DVERSION="\"${VERSION}\""

all:	fop

clean:
	-rm fop
	-rm *.o

fop:	fop.o
	$(CC) -o ../fop fop.o $(SDL_LIBS) -lm

fop.o:	fop.c
	$(CC) -o fop.o fop.c -c $(CFLAGS)
