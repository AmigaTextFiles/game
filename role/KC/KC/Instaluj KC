(message "\n\nSkrypt ten instaluje program KC w wersji 2.0\n\n\nKC © 1996-2001 Kamil Nieôcioruk")

(complete 0)

(set DOCELOWY
 (askdir
  (prompt "Wybierz katalog, w którym chcesz zainstalowaê KC.\nZostanie tam utworzony nowy katalog.")
  (help @askdir-help)
  (default "KC")
 )
)

(makedir (tackon DOCELOWY "KC"))
(complete 10)

(copyfiles
 (source "")
 (dest (tackon DOCELOWY "KC"))
 (choices
  "Formularz"
  "KC"
  "KC.info"
  "KC.guide"
  "KC.guide.info"
  "bronie.kcd"
 )
 (help @copyfiles-help)
)

(complete 100)

(exit "\n\nProgram KC w wersji 2.0 zostaî zainstalowany.\nNie zapomnij zarejestrowaê sië!\n\nÛyczë losowania prawdziwych herosów!"
 (quiet)
)
