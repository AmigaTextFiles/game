run cm1:omp cm1:mod.music1 quiet mbexit
wait 6
makedir ram:libs
copy libs:diskfont.library ram:libs
copy cm1:libs/MedPlayer.library ram:libs
assign libs: ram:libs path
assign env: ram:env path
copy cm1:vt.defaults env:
copy cm1:show ram:
path ram:
cm1:cm
