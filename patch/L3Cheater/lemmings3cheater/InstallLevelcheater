;
; Installer by software failure/airsoft `97
; 

echo ""
echo "Welcome to Lemmings 3 Levelcheater installation"
echo ""
echo noline "Continue (y/n) ? "

Set >NIL: ques ?

If $ques EQ y
  skip yo
endif

echo ""
echo "CU"
quit

Lab yo

echo ""
C:Requestfile >ENV:af TITLE "Select Lemmings 3 drawer" DRAWERSONLY

Assign af: $af

if exists af:source/l3main
  skip ok
else
  echo "File source/l3main not found"
  quit
endif

Lab ok

Copy >NIL: lcheat $af all
Copy >NIL: levelcheater $af all
Copy >NIL: levelcheater.inf af:LevelCheater.info
Copy >NIL: delete C:
Copy >NIL: execute C:
Copy >NIL: rename C:

echo ""
echo "Finished!"
quit
 
 
