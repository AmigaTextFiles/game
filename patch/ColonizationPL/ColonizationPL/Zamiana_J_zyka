;(set @user-level 2)
(user 2)
(welcome "Witam w skrypcie instalacyjnym polskiej wersji jëzykowej do gry Colonization  - wersja finalna. Dedykowana jest ona osobie Marcina Matyli.")
(makeassign "!ML" "Exe/")

(message "Skrypt ten umoûliwa odzyskanie angielskiej wersji jëzykowej."
    " Jednoczeônie polskie tîumaczenie zostaje zachowane. Moûna je póúniej"
    " przywróciê.")

(message "\n"
        "\n\nTîumaczenie to naleûy do kategorii \n\n *** CARDWARE ***"
        "\n\nJeôli uûywasz go, lub uûyîeô, powinieneô wysîaê na mój adres"
        " pocztówkë z widokiem okolicy, w jakiej mieszkasz !!!" (all))

(if (= (getsize "!ml:GameSmallENG.txt") 6587)
    (set ENG
	(askchoice
        (prompt "Aktualna wersja jëzykowa to jëzyk polski. Czy chcesz mieê"
    " znowu jëzyk angielski, a polska wersja zostanie zachowana celem"
    " wykorzystania w przyszîoôci...")
        (help "Pliki polskiej wersji jëzykowej zostanâ przemianowane na"
    "`*._BPL', a angielskia wersja jëzykowa powróci na swoje miejsce.")
        (choices "Nie" "Tak"))
));koniec if-a
(if (= ENG 1)
(
;(message "PL: " PL "\nENG: " ENG)
(run "copy !ml:Colony.txt !ml:Colony.txt_BPL")
(run "copy !ml:Debug.txt !ml:Debug.txt_BPL")
(run "copy !ml:GAMEENG.Txt !ml:GAMEENG.Txt_BPL")
(run "copy !ml:GameSmallENG.txt !ml:GameSmallENG.txt_BPL")
(run "copy !ml:LabelsENG.txt !ml:LabelsENG.txt_BPL")
(run "copy !ml:MenuENG.txt !ml:MenuENG.txt_BPL")
(run "copy !ml:NamesENG.txt !ml:NamesENG.txt_BPL")
(run "copy !ml:PediaENG.txt !ml:PediaENG.txt_BPL")
(run "copy !ml:PediaSmallENG.txt !ml:PediaSmallENG.txt_BPL")
(run "copy !ml:WoodCutENG.txt !ml:WoodCutENG.txt_BPL")
        ;------------------------------------------ Angielski na miejsce
(run "copy !ml:Colony.txt_BAK !ml:Colony.txt")
(run "copy !ml:Debug.txt_BAK !ml:Debug.txt")
(run "copy !ml:GAMEENG.Txt_BAK !ml:GAMEENG.Txt")
(run "copy !ml:GameSmallENG.txt_BAK !ml:GameSmallENG.txt")
(run "copy !ml:LabelsENG.txt_BAK !ml:LabelsENG.txt")
(run "copy !ml:MenuENG.txt_BAK !ml:MenuENG.txt")
(run "copy !ml:NamesENG.txt_BAK !ml:NamesENG.txt")
(run "copy !ml:PediaENG.txt_BAK !ml:PediaENG.txt")
(run "copy !ml:PediaSmallENG.txt_BAK !ml:PediaSmallENG.txt")
(run "copy !ml:WoodCutENG.txt_BAK !ml:WoodCutENG.txt")
    ;----------------------------------- Kasowanie niepotrzebnych plików
    (delete "!ml:Colony.txt_BAK")
    (delete "!ml:Debug.txt_BAK")
    (delete "!ml:GAMEENG.Txt_BAK")
    (delete "!ml:GameSmallENG.txt_BAK")
    (delete "!ml:LabelsENG.txt_BAK")
    (delete "!ml:MenuENG.txt_BAK")
    (delete "!ml:NamesENG.txt_BAK")
    (delete "!ml:PediaENG.txt_BAK")
    (delete "!ml:PediaSmallENG.txt_BAK")
    (delete "!ml:WoodCutENG.txt_BAK")
(message "Angielska wersja jëzykowa przywrócona."
    "\nPliki polskiego tîumaczenia zostaîy przemienione na `*_BPL'"
    (all))
)
)


;****************** Tu sâ cuda. Dlaczego to nie dziaîa ??
