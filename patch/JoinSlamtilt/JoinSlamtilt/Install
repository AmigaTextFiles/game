echo "Installing JoinSlamtilt..."
requestfile drawersonly title="Destination for JoinSlamtilt:" >env:install
copy joinslamtilt#? to $install quiet
requestchoice Title="Which Icon?" Body="Would you like the default on alternative icon?" gadgets="Default" "Alternative" >env:iconchoice
if $iconchoice eq 0
copy alternative.info to $install quiet
cd $install
delete joinslamtilt.info quiet
rename alternative.info JoinSlamtilt.info
endif
delete env:install quiet
delete env:iconchoice quiet
echo "Finished"
