;
; Installer by software failure/airsoft `97
; 

echo ""
echo "Welcome to Speris Legacy Cheater installation"
echo ""
echo noline "Continue (y/n) ? "

Set >NIL: ques ?

If $ques EQ y
  skip yo
endif

echo ""
echo "CU"
quit

Lab yo

echo ""
C:Requestfile >ENV:af TITLE "Select Speris Legacy drawer" DRAWERSONLY

Assign af: $af

if exists af:speris-main
  skip ok
else
  echo "File Speris-main not found"
  quit
endif

Lab ok

Copy >NIL: scheat $af
Copy >NIL: Levelcheater $af
Copy >NIL: Levelcheater.inf af:Levelcheater.info
Copy >NIL: delete C:
Copy >NIL: execute C:
Copy >NIL: rename C:

echo ""
echo "Finished!"
quit
 
 
