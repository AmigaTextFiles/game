; Speris Installation Script by Software Failure/Airsoft
echo "Speris Legacy Installation by Software Failure/Airsoft"
echo ""
echo noline "Installing now to this directory! Continue? "

Set >NIL: ques ?

If $ques EQ "y"
  Skip yo
Else
  echo ""
  echo "Bye."
  quit
endif

Lab yo

echo ""
echo "Installing..."
Copy Speris-1: "" all
Copy Speris-2: "" all
Copy Speris-3: "" all
Copy Speris-4: "" all

echo ""
echo "Installation succesfully finished! Now doubleclick on the icon.Bye."
quit
