;$VER: Shadow of the Beast installation script 1.1 (17.5.97) ©1997, CdBS Software (MORB)
;Shadow of the Beast is ©1989, Psygnosis ltd.

(set @default-dest
    (tackon
	(askdir
	    (prompt "Where Shadow of the Beast should be installed ? \n(A new directory will be created there)")
	    (default @default-dest)
	    (help @askdir-help)
	)
     "Beast")
)

(makedir @default-dest
    (infos)
)

(makedir (tackon @default-dest "Data"))

(copyfiles (source "")
    (all)
    (dest @default-dest)
)

(run ("cd %s\nReadBB\nWHDLoad Install.slave" @default-dest)
    (prompt "Please insert your original Beast disk 1 in drive df0:, then hit Continue.\n\nThe screen will blank for some time, and you will be asked to insert disk 2.\n\nIf the screen becomes all red, it may be due to a read error on one of the disks. The only solution : reset, cry, and kill yourself...")
    (help @run-help)
    (confirm)
)
