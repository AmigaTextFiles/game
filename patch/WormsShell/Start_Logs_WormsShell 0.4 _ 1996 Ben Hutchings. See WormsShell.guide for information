assign >nil: exists env:
if warn
    assign env: ram:
endif
assign >nil: exists t:
if warn
    assign t: ram:
endif
assign >nil: exists log:
if warn
    echo >t:log "Device=ramdrive.device*nUnit=10*nFlags=0*nSurfaces=1*nBlocksPerTrack=100*nReserved=2*nInterleave=0*nLowCyl=0*nHighCyl=0*nBuffers=1*nBufMemType=1*nBootPri=-128"
    mount t:log
    delete t:log quiet
endif
which >nil: segtracker
if warn
    which >nil: requestfile
    if warn
	echo "Please enter the full path to SegTracker: " noline
	set >nil: segtracker ?
    else
	set segtracker `requestfile title "Please select the SegTracker executable" noicons`
    endif
else
    set segtracker segtracker
endif
run >nil: <nil: "$segtracker" >nil: <nil:
which >nil: enforcer
if warn
    which >nil: requestfile
    if warn
	echo "Please enter the full path to Enforcer: " noline
	set >nil: enforcer ?
    else
	set enforcer `requestfile title "Please select the Enforcer executable" noicons`
    endif
else
    set enforcer enforcer
endif
$enforcer >nil: off
run >nil: <nil: "$enforcer" >nil: <nil: showpc stdio file=log:enforcer.log
which >nil: snoopdos
if warn
    which >nil: requestfile
    if warn
	echo "Please enter the full path to SnoopDos: " noline
	set >nil: snoopdos ?
    else
	set snoopdos `requestfile title "Please select the SnoopDos executable" noicons`
    endif
else
    set snoopdos snoopdos
endif
run >nil: <nil: "$snoopdos" >nil: <nil: cx_popup=no lock opendevice openlibrary readtooltypes openlog=log:snoopdos.log
