.KEY dummy
if not exists icfd_fix
  skip fer
endif
if not exists extra/HDesert
  lab fer
  echo "Patch files missing..."
  echo "Please make sure that when you execute this script your Current Directory is the ICFDesert_fix drawer."
  skip entext
endif
echo ""
echo "It Came From The Desert - Bug Fix V1.3"
echo "By Spyridon Papakotsis"
echo ""
echo "This program fixes the Billy Bob Bug, which causes the game to crash if you"
echo "choose to Flee when Billy Bob Morse pulls out a knife."
echo ""
ask "Do you wish to continue? (y/n) ->"
if warn
  echo ""
  ask "Do you play ICFD from Hard Disk? (y/n) ->"
  if warn
    echo ""
    echo "HARD DISK PATCH"
    echo "Please enter the location of your ICFD game drawer, in the following manner:"
    echo "->PATCH: Path to game drawer"
    echo ""
    echo "For example, if your game is in DH1:Desert then enter:"
    echo "->PATCH: DH1:Desert"
    echo ""
    echo noline "->"
    assign >NIL: ?
    if NOT EXISTS PATCH:dshell
      echo "Game not found. Please make sure that the path you provided is correct."
      skip arem
    else
      echo "Running Patch..."
      echo ""
      icfd_fix PATCH:
      echo ""
      echo "EXTRA: Should I replace your HDesert with a new script that doesn't require"
      echo "Disk-1 to be inserted in order to play the game from Hard Disk?"
      echo ""
      ask "Enter your choice (y/n) ->"
      if WARN
        copy extra/HDesert PATCH:HDesert
        copy extra/HDesert.info PATCH:HDesert.info
        echo ""
        echo "New HDesert copied... To run the game, double-click on the HDesert icon."
        echo "To start from the Shell, CD to the game drawer and type: EXECUTE HDesert"
        skip arem
      else
        lab arem
        assign PATCH: remove
        skip entext
      endif
    endif   
  else
    echo ""
    echo "FLOPPY DISK PATCH"
    echo "Please insert disk Reel 2 into drive DF0: and press ENTER"
    echo >NIL: ?
    echo "Running Patch..."
    echo ""
    icfd_fix DF0:
    skip entext       
  endif
else
  lab entext
  echo ""
  echo "Press ENTER to exit"
  echo >NIL: ?
endif
