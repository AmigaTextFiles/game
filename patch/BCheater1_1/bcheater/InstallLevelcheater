;
; Installer by software failure/airsoft `97
; 

echo ""
echo "Welcome to Breathless Levelcheater installation"
echo ""
echo noline "Continue (y/n) ? "

Set >NIL: ques ?

If $ques EQ y
  skip yo
endif

echo ""
echo "CU"
quit

Lab yo

echo ""
C:Requestfile >ENV:af TITLE "Select Breathless drawer" DRAWERSONLY

Assign af: $af

if exists af:breathless.gld
  skip ok
else
  echo "File breathless.gld not found"
  quit
endif

Lab ok

Copy >NIL: bcheat $af
Copy >NIL: bcheater1.dat $af
Copy >NIL: bcheater2.dat $af
Copy >NIL: levelcheater $af all
Copy >NIL: levelcheater.inf af:LevelCheater.info
Copy >NIL: delete C:
Copy >NIL: execute C:
Copy >NIL: rename C:

echo ""
echo "Finished!"
quit
 
 
