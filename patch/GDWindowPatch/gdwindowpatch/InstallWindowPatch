;
; Installer by software failure/airsoft `97
; 

echo ""
echo "Welcome to Gloom Deluxe Window Patch installation"
echo ""
echo noline "Continue (y/n) ? "

Set >NIL: ques ?

If $ques EQ y
  skip yo
endif

echo ""
echo "CU"
quit

Lab yo

echo ""
C:Requestfile >ENV:af TITLE "Select Gloom Deluxe drawer" DRAWERSONLY

Assign af: $af

if exists af:playgloom
  skip ok
else
  echo "File playgloom not found"
  quit
endif

Lab ok

Copy >NIL: gpatch $af all
Copy >NIL: windowpatch $af all
Copy >NIL: windowpatch.inf af:WindowPatch.info
Copy >NIL: patch.con $af all

echo ""
echo "Finished!"
quit
 
 
