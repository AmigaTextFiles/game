;
; Installer by software failure/airsoft `97
; 

echo ""
echo "Welcome to Testament Levelcheater installation"
echo ""
echo noline "Continue (y/n) ? "

Set >NIL: ques ?

If $ques EQ y
  skip yo
endif

echo ""
echo "CU"
quit

Lab yo

echo ""
C:Requestfile >ENV:af TITLE "Select Testament drawer" DRAWERSONLY

Assign af: $af

if exists af:testament.exe
  skip ok
else
  echo "File testament.exe not found"
  quit
endif

Lab ok

Copy >NIL: tcheat $af all
Copy >NIL: levelcheater $af all
Copy >NIL: levelcheater.inf af:LevelCheater.info
Copy >NIL: delete C:
Copy >NIL: execute C:
Copy >NIL: rename C:

echo ""
echo "Finished!"
quit
 
 
