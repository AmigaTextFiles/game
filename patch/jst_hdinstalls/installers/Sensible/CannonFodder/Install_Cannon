; $VER: Cannon HD Install-Script V1.0 (25.02.97) by Jean-François Fabre
; Adapted from an installer from Sentinel
;
; CFRip has been programmed by Joel Pattey and JF Fabre

(set GameDir "CannonFodder")

;try to figure out a place where the user usually installs his games
(if (exists "Games:" (noreq) )
    (set @default-dest "Games:")
    (if (exists "SYS:Games" (noreq) )
        (set @default-dest "SYS:Games")
        (if (exists "Work:Games" (noreq) )
            (set @default-dest "Work:Games")
            (if (exists "JEUX:" (noreq) )
               (set @default-dest "JEUX:")
               (set @default-dest "SYS:")
            )
        )
    )
)

(set #game_ver
	(askchoice
		(prompt "Which version of Cannon Fodder\ndo you want to install")
		(help	@askoptions-help)
		(choices
		   "CD-32 version"
		   "Floppy version"
		)
	)
)

;ask the user to select a directory to install the game into
(set default-dest
     (tackon (askdir (prompt "Where would you like " @app-name " installed?\n"
                             "A drawer called " GameDir " will be created.")
                     (help @askdir-help)
                     (default @default-dest)
                     (newpath)
             )
     GameDir
     )
)

(set @default-dest default-dest)
(complete 5)

;create the selected directory
(makedir @default-dest
         (infos)
)

(set #dest (tackon @default-dest "data"))

(makedir #dest
         (infos)
)


;copy all extra files to this directory

(copyfiles (source "CannonFodder")
           (dest @default-dest)
)

(copyfiles (source "CannonFodder.icon")
           (dest @default-dest)
	   (newname "CannonFodder.info")
)

(copyfiles (source "fodder")
           (dest @default-dest)
)

(copyfiles (source "cfsdisk")
           (dest #dest)
)

(if (= #game_ver 1)
    (

(complete 10)

(message "\n\n\n\n\n\n\Please insert Cannon Fodder disk 3 in DF0:")

	(if
		(= 0 (run ("CFRip 3 %s" #dest)))
		("")
	)

(complete 30)

(message "\n\n\n\n\n\n\Please insert Cannon Fodder disk 2 in DF0:")

	(if
		(= 0 (run ("CFRip 2 %s" #dest)))
		("")
	)

(complete 60)


(message "\n\n\n\n\n\n\Please insert Cannon Fodder disk 1 in DF0:")
	(if
		(= 0 (run ("CFRip 1 %s" #dest)))
		("")
	)

(copyfiles (source "icebase.blk")
           (dest #dest)
)

))

(if (= #game_ver 0)
    (

(message "\n\n\n\n\n\n\Please insert Cannon Fodder CD32 in CD0:")

(copyfiles (source "CD0:fodder")
           (dest #dest)
           (all)
   )


))

(complete 100)
