; $VER: Puzznic HD Install-Script V1.0 by Jean-Francois Fabre


;try to figure out a place where the user usually installs his games
(if (exists "Games:" (noreq) )
    (set @default-dest "Games:")
    (if (exists "SYS:Games" (noreq) )
        (set @default-dest "SYS:Games")
        (if (exists "Work:Games" (noreq) )
            (set @default-dest "Work:Games")
            (if (exists "JEUX:" (noreq) )
               (set @default-dest "JEUX:")
               (set @default-dest "SYS:")
            )
        )
    )
)
(message "\n\n\nThis loader needs the JST program (NOT INCLUDED)\n to be copied in your path\n\n(if you don't have it already)\n\nJST is available from aminet (game/patch) or on my site")

(set GameDir "Puzznic")


;ask the user to select a directory to install the game into
(set default-dest
     (tackon (askdir (prompt "Where would you like " @app-name " installed?\n"
                             "A drawer called " GameDir " will be created.")
                     (help @askdir-help)
                     (default @default-dest)
             )
     GameDir
     )
)
(set @default-dest default-dest)

;	create the selected directory
(makedir @default-dest
         (infos)
)

        (message "\n\n\n\n\n\nPlease insert Puzznic disk in any drive")

        (copyfiles (source " :FATY.DAT")
                   (dest @default-dest)
		   (newname "FATY")
        )

        (copyfiles (source " :PTS.DAT")
                   (dest @default-dest)
		   (newname "PTS.")
        )

        (copyfiles (source " :PUZY")
                   (dest @default-dest)
        )

        (copyfiles (source " :scn1.pi1")
                   (dest @default-dest)
		   (newname "SCN1")
        )

        (copyfiles (source " :SPT0.")
                   (dest @default-dest)
		   (newname "SPT0")
        )

        (copyfiles (source " :SPT2.")
                   (dest @default-dest)
		   (newname "SPT2")
        )

        (copyfiles (source " :SPT4.")
                   (dest @default-dest)
		   (newname "SPT4")
        )

        (copyfiles (source " :SPT7.DAT")
                   (dest @default-dest)
		   (newname "SPT7")
        )

        (copyfiles (source " :ZCHR.")
                   (dest @default-dest)
		   (newname "ZCHR")
        )

        (copyfiles (source " :MUZ0")
                   (dest @default-dest)
        )

        (copyfiles (source " :scn0.pi1")
                   (dest @default-dest)
		   (newname "SCN0")
        )

        (copyfiles (source " :scn2.pi1")
                   (dest @default-dest)
		   (newname "SCN2")
        )

        (copyfiles (source " :SPT1.")
                   (dest @default-dest)
		   (newname "SPT1")
        )

        (copyfiles (source " :SPT3.")
                   (dest @default-dest)
		   (newname "SPT3")
        )

        (copyfiles (source " :SPT5.")
                   (dest @default-dest)
		   (newname "SPT5")
        )

        (copyfiles (source " :taito")
                   (dest @default-dest)
		   (newname "TAIT")
        )

	;copy all extra files to this directory

        (copyfiles (source "puzznichd.readme")
                   (dest @default-dest)
		   (infos)
        )

        (copyfiles (source "PuzznicHD")
                   (dest @default-dest)
		   (infos)
        )

