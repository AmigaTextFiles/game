; $VER: Walker HD Install-Script V1.0 by Jean-Francois Fabre


;try to figure out a place where the user usually installs his games
(if (exists "Games:" (noreq) )
    (set @default-dest "Games:")
    (if (exists "SYS:Games" (noreq) )
        (set @default-dest "SYS:Games")
        (if (exists "Work:Games" (noreq) )
            (set @default-dest "Work:Games")
            (if (exists "JEUX:" (noreq) )
               (set @default-dest "JEUX:")
               (set @default-dest "SYS:")
            )
        )
    )
)

(set GameDir "Walker")


(message "\n\n\nThis loader needs the JST program (NOT INCLUDED)\n to be copied in your path\n\n(if you don't have it already)\n\nJST is available from aminet (game/patch) or on my site")

;ask the user to select a directory to install the game into
(set default-dest
     (tackon (askdir (prompt "Where would you like " @app-name " installed?\n"
                             "A drawer called " GameDir " will be created.")
                     (help @askdir-help)
                     (default @default-dest)
             )
     GameDir
     )
)
(set @default-dest default-dest)

;	create the selected directory
(makedir @default-dest
         (infos)
)

        (message "\n\n\n\n\n\nPlease insert Walker disk 1 in any drive")

        (copyfiles (source "Walker_1:")
                   (dest @default-dest)
		   (pattern "#?")
		   (files)
        )

        (copyfiles (source "Walker_1:game")
                   (dest @default-dest)
		   (all)
        )

        (message "\n\n\n\n\n\nPlease insert Walker disk 2 in any drive")

        (copyfiles (source "Walker_2:disk2")
                   (dest @default-dest)
		   (pattern "#?")
		   (files)
        )

        (copyfiles (source "Walker_2:nwlev2")
                   (dest @default-dest)
		   (all)
        )

        (copyfiles (source "Walker_2:nwlev3")
                   (dest @default-dest)
		   (all)
        )

        (copyfiles (source "Walker_2:nwlev4")
                   (dest @default-dest)
		   (all)
        )

        (message "\n\n\n\n\n\nPlease insert Walker disk 3 in any drive")

        (copyfiles (source "Walker_3:disk3")
                   (dest @default-dest)
		   (pattern "#?")
		   (files)
        )

        (copyfiles (source "Walker_3:nwlev1")
                   (dest @default-dest)
		   (all)
        )

        (copyfiles (source "Walker_3:game")
                   (dest @default-dest)
		   (all)
        )


	;copy all extra files to this directory

        (copyfiles (source "walkerhd.readme")
                   (dest @default-dest)
		   (infos)
        )

        (copyfiles (source "WalkerHD")
                   (dest @default-dest)
		   (infos)
        )
