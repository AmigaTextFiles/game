; $VER: D-Generation CD32 HD Install-Script V1.0 by Jean-Francois Fabre


;try to figure out a place where the user usually installs his games
(if (exists "Games:" (noreq) )
    (set @default-dest "Games:")
    (if (exists "SYS:Games" (noreq) )
        (set @default-dest "SYS:Games")
        (if (exists "Work:Games" (noreq) )
            (set @default-dest "Work:Games")
            (if (exists "JEUX:" (noreq) )
               (set @default-dest "JEUX:")
               (set @default-dest "SYS:")
            )
        )
    )
)

(set GameDir "DGeneration")


;ask the user to select a directory to install the game into
(set default-dest
     (tackon (askdir (prompt "Where would you like " @app-name " installed?\n"
                             "A drawer called " GameDir " will be created.")
                     (help @askdir-help)
                     (default @default-dest)
             )
     GameDir
     )
)
(set @default-dest default-dest)

;	create the selected directory
(makedir @default-dest
         (infos)
)


(set #savetype
	(askchoice
		(prompt "Where do you want to save the games?")
		(help	@askoptions-help)
		(choices
		   (tackon @default-dest "saves/DGEN")
		   "ENVARC:Sys/DGEN"
		)
	)
)

(if (= #savetype 0)
	(
;	create the directory for saves

	(makedir (tackon @default-dest "saves")
	)

	(makedir (tackon (tackon @default-dest "saves") "DGEN")
	)

        (copyfiles (source "DGeneration")
                   (dest @default-dest)
        )

	

	)
	)

(if (= #savetype 1)
	(
        (copyfiles (source "DGeneration2")
                   (dest @default-dest)
		   (newname "DGeneration")
        )

	(makedir "ENVARC:Sys/Dgen")


	)	
	)

        (message "\n\n\n\n\n\nPlease insert D/Generation CD-ROM in any drive")

        (copyfiles (source "CDTV_TEST:")
                   (dest @default-dest)
		   (all)
        )

	;copy all extra files to this directory

        (copyfiles (source "dgen32hd.readme")
                   (dest @default-dest)
		   (infos)
        )

        (copyfiles (source "DGeneration.icon")
                   (dest @default-dest)
		   (newname "DGeneration.info")
        )

        (copyfiles (source "RunDGen")
                   (dest @default-dest)
        )


	(delete (tackon @default-dest "dgen.info"))
