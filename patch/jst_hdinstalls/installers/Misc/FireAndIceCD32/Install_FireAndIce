; $VER: Fire And Ice HD Install-Script V1.0 by Jean-Francois Fabre

(set GameDir "FireNIce")

;try to figure out a place where the user usually installs his games
(if (exists "Games:" (noreq) )
    (set @default-dest "Games:")
    (if (exists "SYS:Games" (noreq) )
        (set @default-dest "SYS:Games")
        (if (exists "Work:Games" (noreq) )
            (set @default-dest "Work:Games")
            (if (exists "JEUX:" (noreq) )
               (set @default-dest "JEUX:")
               (set @default-dest "SYS:")
            )
        )
    )
)

;ask the user to select a directory to install the game into
(set default-dest
     (tackon (askdir (prompt "Where would you like " @app-name " installed?\n"
                             "A drawer called " GameDir " will be created.")
                     (help @askdir-help)
                     (default @default-dest)
             )
     GameDir
     )
)
(set @default-dest default-dest)

;	create the selected directory
(makedir @default-dest
         (infos)
)
;	(message ("\"%s %s ram:patch.bin\"" (tackon @icon "patchexe") (tackon @default-dest "firepal")))

        (message "\n\n\n\n\n\nPlease insert Fire And Ice CD-ROM in any drive")

        (copyfiles (source "Fire:")
                   (dest @default-dest)
		   (all)
        )

	;copy all extra files to this directory

        (copyfiles (source "firehd.readme")
                   (dest @default-dest)
		   (infos)
        )

        (copyfiles (source "Fire&Ice")
                   (dest @default-dest)
        )

        (copyfiles (source "Fire&Ice.icon")
                   (dest @default-dest)
		   (newname "Fire&Ice.info")
        )

	(message "\n\n\n\n\n\nI will now patch the file \"FirePAL\"")

	; patch the executable (to remove the CD dependance)

        (if
	       	(= 0 (run ("\"%s\" \"%s\" \"%s\"" (tackon (pathonly @icon) "patchexe") (tackon @default-dest "firepal") (tackon (pathonly @icon) "patch.bin") ) ))
	        ("")
        	(abort "file \"patchexe\" not found !")
	)
