; $VER: Banshee HD Install-Script V2.0 (November 1997) by Jean-Francois Fabre
; Adapted from an installer from Sentinel

;try to figure out a place where the user usually installs his games
(if (exists "Games:" (noreq) )
    (set @default-dest "Games:")
    (if (exists "SYS:Games" (noreq) )
        (set @default-dest "SYS:Games")
        (if (exists "Work:Games" (noreq) )
            (set @default-dest "Work:Games")
            (if (exists "JEUX:" (noreq) )
               (set @default-dest "JEUX:")
               (set @default-dest "SYS:")
            )
        )
    )
)
(set GameDir "Banshee")


;ask the user to select a directory to install the game into
(set default-dest
     (tackon (askdir (prompt "Where would you like " @app-name " installed?\n"
                             "A drawer called " GameDir " will be created.")
                     (help @askdir-help)
                     (default @default-dest)
             )
     GameDir
     )
)


(set @default-dest default-dest)

;create the selected directory
(makedir @default-dest
         (infos)
)

(askdisk
	(prompt	"\n\n\n\n\n\nPlease insert Banshee disk 1 in any drive")
	(dest		"bans1")
	(help		"Insert disk 1 in any floppy drive\nor you'll wait for a while!")
)

(copyfiles (source "bans1:")
           (dest @default-dest)
           (all)
)

(askdisk
	(prompt	"\n\n\n\n\n\nPlease insert Banshee disk 2 in any drive")
	(dest		"bans2")
	(help		"Insert disk 2 in any floppy drive\nor you'll wait for a while!")
)

(copyfiles (source "bans2:")
           (dest @default-dest)
           (all)
)

(askdisk
	(prompt	"\n\n\n\n\n\nPlease insert Banshee disk 3 in any drive")
	(dest		"bans3")
	(help		"Insert disk 3 in any floppy drive\nor you'll wait for a while!")
)

(copyfiles (source "bans3:")
           (dest @default-dest)
           (all)
)

(askdisk
	(prompt	"\n\n\n\n\n\nPlease insert Banshee disk 4 in any drive")
	(dest		"bans4")
	(help		"Insert disk 4 in any floppy drive\nor you'll wait for a while!")
)

(copyfiles (source "bans4:")
           (dest @default-dest)
           (all)
)



;copy all extra files to this directory

(copyfiles (source "BansheeHD")
           (dest @default-dest)
)

(copyfiles (source "BansheeHD.icon")
           (dest @default-dest)
	   (newname "BansheeHD.info")
)

(copyfiles (source "bans.exe")
           (dest @default-dest)
)

(copyfiles (source "bansheehd.readme")
           (dest @default-dest)
	   (infos)
)
