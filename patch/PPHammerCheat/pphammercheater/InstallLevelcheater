;
; Installer by software failure/airsoft `98
; 

echo ""
echo "Welcome to PPHammer Levelcheater installation"
echo ""
echo noline "Continue (y/n) ? "

Set >NIL: ques ?

If $ques EQ y
  skip yo
endif

echo ""
echo "CU"
quit

Lab yo

echo ""
C:Requestfile >ENV:af TITLE "Select PPHammer drawer" DRAWERSONLY

Assign af: $af

if exists af:pphammer.slave
  skip ok
else
  echo "File PPHammer.slave not found"
  quit
endif

Lab ok

Copy >NIL: pcheat $af all
Copy >NIL: levelcheater $af all
Copy >NIL: levelcheater.inf af:LevelCheater.info
Copy >NIL: delete C:
Copy >NIL: execute C:
Copy >NIL: rename C:

echo ""
echo "Finished!"
quit
 
 
