;
; Installer by software failure/airsoft `97
; 

echo ""
echo "Welcome to Fire&Ice CD32 Levelcheater installation"
echo ""
echo noline "Continue (y/n) ? "

Set >NIL: ques ?

If $ques EQ y
  skip yo
endif

echo ""
echo "CU"
quit

Lab yo

echo ""
C:Requestfile >ENV:af TITLE "Select Fire&Ice drawer" DRAWERSONLY

Assign af: $af

if exists af:sets/set1.bin
  skip ok
else
  echo "File sets/Set1.bin not found"
  quit
endif

Lab ok

Copy >NIL: fcheat $af all
Copy >NIL: levelcheater $af all
Copy >NIL: levelcheater.inf af:LevelCheater.info
Copy >NIL: delete C:
Copy >NIL: execute C:
Copy >NIL: rename C:

echo ""
echo "Finished!"
quit
 
 
