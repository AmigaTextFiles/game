
	(askdisk
	  (prompt ("\n\n\n\n\n\nPlease insert %s disk %lc in any drive" @app-name #diskno))
	  (dest	  #currentdisk)
	  (help	  ("Insert disk %lc in any drive or you'll wait for a while!" #diskno) )
	)

	(copyfiles (source ("%s:%srcsubdir%" #currentdisk))
           (dest @default-dest)
	   (all)
	)


;; end copy floppies
