.KEY dummy
if not exists icfd_gr
  skip fer
endif
if not exists patch.dat
  skip fer
endif
if not exists extra/HDesert
  lab fer
  echo "Patch files missing..."
  echo "Please make sure that when you execute this script your Current Directory is the ICFDesert_Greek drawer."
  skip entext
endif
echo ""
echo "It Came From The Desert - Greek Translation V1.0"
echo "By Spyridon Papakotsis"
echo ""
echo "This program will translate your Hard Disk installed 'It Came From The Desert' to Greek."
echo "Supported versions are:"
echo "1. Original U.S. Release"
echo "2. Original European Release"
echo "3. Hyperion's release for AmigaOS4"
echo ""
ask "Do you wish to continue? (y/n) ->"
if warn
  echo ""
    echo "Please enter the location of your ICFD game drawer, in the following manner:"
    echo "->PATCH: Path to game drawer"
    echo ""
    echo "For example, if your game is in DH1:Desert then enter:"
    echo "->PATCH: DH1:Desert"
    echo ""
    echo noline "->"
    assign >NIL: ?
    if NOT EXISTS PATCH:dshell
      echo "Game not found. Please make sure that the path you provided is correct."
      skip arem
    else
      echo "Running Patch..."
      echo ""
      icfd_gr PATCH:
      echo ""
        copy extra/HDesert PATCH:HDesert
        copy extra/HDesert.info PATCH:HDesert.info
        echo ""
        echo "To run the game, double-click on the HDesert icon."
        echo "To start from the Shell, CD to the game drawer and type: EXECUTE HDesert"
        lab arem
        assign PATCH: remove
        skip entext
    endif   
else
  lab entext
  echo ""
  echo noline "Press ENTER to exit"
  echo >NIL: ?
endif
