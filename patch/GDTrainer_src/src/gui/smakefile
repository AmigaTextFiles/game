##### options

CC =			sc

LD =			slink

LIB =			lib:sc.lib lib:amiga.lib CDE:MyLib/gle.lib

OBJECTS =		trainer.o panel.o

DESTINATION = 	/dist/GDTrainer/GDTrainer


##### main program

$(DESTINATION):	$(OBJECTS) $(LIB)
				$(LD) <with <
				FROM LIB:c.o $(OBJECTS)
				TO $(DESTINATION)
				LIBRARY $(LIB)
				STRIPDEBUG SMALLCODE SMALLDATA
				<
				DoVer $(DESTINATION) FORCE QUIET


##### object files

trainer.o:		trainer.c
				$(CC) trainer.c

panel.o:		panel.c
				$(CC) panel.c

