.KEY dummy
if not exists dune_gr
  skip fer
endif
if not exists patch.dat
  lab fer
  echo "Patch files missing..."
  echo "Please make sure that when you execute this script your Current Directory is the Dune_Greek drawer."
  skip entext
endif
echo ""
echo "Dune - Greek Translation V1.0"
echo "By Spyridon Papakotsis"
echo ""
echo "This program will translate your Hard Disk installed 'Dune' to Greek."
echo "Supported versions are:"
echo "The Original English, French, German and Italian releases."
echo "IPF numbers: #1156, #2393, #459, #2594."
echo ""
ask "Do you wish to continue? (y/n) ->"
if warn
  echo ""
    echo "Please enter the location of your Dune game drawer, in the following manner:"
    echo "->PATCH: Path to game drawer"
    echo ""
    echo "For example, if your game is in DH1:Dune_Game then enter:"
    echo "->PATCH: DH1:Dune_Game"
    echo ""
    echo noline "->"
    assign >NIL: ?
    if NOT EXISTS PATCH:dir.0
      echo "Game not found. Please make sure that the path you provided is correct."
      skip arem
    else
      echo "Running Patch..."
      echo ""
      dune_gr PATCH:
      echo ""
        lab arem
        assign PATCH: remove
        skip entext
    endif   
else
  lab entext
  echo ""
  echo noline "Press ENTER to exit"
  echo >NIL: ?
endif
