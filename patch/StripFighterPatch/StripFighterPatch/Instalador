;****************************************************
;***                                              ***
;*** Instalador del parche para el Strip Fighter  ***
;***        (c) Morgue Soft Ltd. 2005-06          ***
;***                                              ***
;****************************************************
;## Mensajes en inglés por defeto
(set #men0 "\n You are install the patch for update the game Strip Fighter to the\n version 1.2.\n")
(set #men1 "\n This patch  permit select the graphic resolution,\nthe sound channel AHI, and its not need to have the CD game\ninsert in your CDROM drive.")
(set #men2 "\n Please indicate the drawer where you have installed the game.\n Exemple: Work:StripFighter/")
(set #men3 "\n NOTICE: The user that have installed the excutable\n StripFighterGFX already can to delete it for not be necessary.")
(set #icono1 "\n You choose if you want to put one new icon for the game")
(set #ayuda1 "\n Indicate to the installer the drawer where you have installed\nof the game for to copy the executable.")
(set #ayuda2 "\n Copying the new executable with the new options.")
(set #ayuda3 "\n New icons for the game and for the drawer")
(set #ayuda4 "\n Copying the font for that work the game.")
(set #ayuda5 "\n Copying the new files for the update.")
(set #fin "\n\n\n Congratulations now you can enjoy of the Strip Fighter\non your Amiga or UAE.")
;## Fin de los textos en inglés

;## Mensajes en español
(if (OR (= @language "español") (= @language "spanish"))
 (
   (set #men0 "\n Estas instalando el parche para actualizar el juego Strip Fighter a la\n versión 1.2.\n")
   (set #men1 "\n Este parche permite seleccionar la resolución de pantalla,\nel canal AHI y ya no es necesario tener insertado\nel CD con el juego en tú unidad de CDROM.")
   (set #men2 "\n Por favor, indicame el directorio donde tienes instalado el juego.\n Ejemplo: Work:StripFighter/")
   (set #men3 "\n AVISO: Los usuarios que tienen instalado el ejecutable\n StripFighterGFX ya lo pueden borrar por no ser necesario.")
   (set #icono1 "\n Elige si quieres poner un icono nuevo para el juego")
   (set #ayuda1 "\n Indica al instalador el directorio donde está instalado el juego\npara copiar el ejecutable.")
   (set #ayuda2 "\n Copiando el nuevo ejecutable con las nuevas opciones.")
   (set #ayuda3 "\n Nuevos iconos para el juego y para el directorio")
   (set #ayuda4 "\n Copiando la fuente para que funcione el juego.")
   (set #ayuda5 "\n Copiando los nuevos ficheros para la actualización.")
   (set #fin "\n\n\n Felicidades ahora ya puedes disfrutar del Strip Fighter\nen tú Amiga o UAE.")
 )
)
;## Fin de los textos en español
(set #fonts-dest "Fonts:")

(complete 0%)
(complete 0%)
;## Comprobando versión del installer
(if (>= #version 44)
  (
    (effect "center" "radial" $BA5247 $B85E6A)
  )
)
(message #men0 #men1 #men2)
;## Preguntando directorio destino
(complete 2%)
(set #defdir @default-dest)
(set #dest
        (expandpath
                (askdir
                        (prompt #destino)
                        (help #ayuda1)
                        (default #defdir)
                )
        )
)
(complete 10%)
(copyfiles
  (source "Datos/StripFighter")
  (dest #dest)
  (help #ayuda2)
)
(complete 30%)
(copyfiles
  (source "Datos/StripFighter.info")
  (dest #dest)
  (help #ayuda3)
)
(complete 40%)
(copyfiles
  (source "Datos/sfx")
  (dest (tackon #dest "sfx"))
  (all)
  (help #ayuda5)
)
(complete 50%)
(copyfiles
  (source "Datos/gfx")
  (dest (tackon #dest "gfx"))
  (all)
  (help #ayuda5)
)
(complete 90%)
(copyfiles
  (source "Datos/font")
  (dest #fonts-dest)
  (all)
  (fonts)
  (help #ayuda4)
)
(complete 98%)
(message #men3 #fin)
(complete 100%)
(exit (quiet))
