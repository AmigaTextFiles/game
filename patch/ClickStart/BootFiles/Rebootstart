;$ver: Reboot Script version 0.13
C:Mount MB0: from Devs/Min-Mountlist
C:Makedir MB0:S
C:Makedir MB0:T
C:Makedir MB0:C
C:Copy BootFiles/Startup-Sequence MB0:S/
C:Copy C:Remrad MB0:C/
C:Copy C:Reset MB0:C/
C:Copy C:Execute MB0:C/
C:Copy C:Assign MB0:C/
C:Copy C:DefsysDisk MB0:C/
C:Copy C:Copy MB0:C/
C:Copy C:SetPatch MB0:C/
Cd >MB0:S/PathFile
Assign EXISTS MB0:
If Warn
 Wait 1 sec
 Assign EXISTS MB0:
 If Warn
  requestchoice >env:operation "Made by Nils-Erik" "Device MB0 coluld not *nBe made!!!!!" "Ok!!!"
  If $operation EQ "0"
   EndCli
  EndIf
 Else
  Echo "*nRebooting System...."
  Echo ""
  Echo "Rebooting in 5 sec."
  echo ""
  echo "*e[0 p*e[33m*e[7m 0sec " noline
  wait 1
  echo "*e[6D      1 sec " noline
  wait 1
  echo "*e[6D      2 sec " noline
  wait 1
  echo "*e[6D      3 sec " noline
  wait 1
  echo "*e[6D      4 sec " noline
  wait 1
  echo "*e[6D      5 sec *e[0m" noline
  C:Reset
 EndIf
Else
 Echo "*nRebooting System...."
 Echo ""
 Echo "Rebooting in 5 sec."
 echo ""
 echo "*e[0 p*e[33m*e[7m 0sec " noline
 wait 1
 echo "*e[6D      1 sec " noline
 wait 1
 echo "*e[6D      2 sec " noline
 wait 1
 echo "*e[6D      3 sec " noline
 wait 1
 echo "*e[6D      4 sec " noline
 wait 1
 echo "*e[6D      5 sec *e[0m" noline
 C:Reboot
EndIf
