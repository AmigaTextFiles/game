; XTR Util v2.1 install script (c)1997 Iain Hammond

(set @default-dest
  (askdir
    (prompt "Select destination directory. A directory \"XTRU\" will be created.")
    (help @askdir-help)
    (default @default-dest)
  )
)
(set @default-dest (expandpath @default-dest))
(set destination (tackon @default-dest "XTRU"))

;(makedir destination
;   (prompt "I will now create the directory \"XTRU\"")
;   (help @makedir-help)
;   (infos)
;   (confirm)
;)

(copyfiles
   (prompt "Copying all files to XTRU")
   (help @copyfiles-help)
   (source "")
   (dest destination)
   (all)
   (infos)  
;   (confirm) 
)

(set pathname (pathonly destination))

(startup "XTRU"
   (prompt
      "Some instructions need to be added to the \"S:user-startup\" so that your system will be properly configured to use XTRU.")
   (help "No help for this function")
   (command (cat "Assign XTRU: " destination))
)

(exit)
