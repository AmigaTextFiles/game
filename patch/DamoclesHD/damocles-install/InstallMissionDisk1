
;----------------------------

;try to figure out a place where the user usually installs his games
(if (exists "Games:" (noreq) )
    (set @default-dest "Games:")
    (if (exists "SYS:Games" (noreq) )
        (set @default-dest "SYS:Games")
        (if (exists "Work:Games" (noreq) )
            (set @default-dest "Work:Games")
            (set @default-dest "RAM:")
        )
    )
)


(set @default-dest
(askdir
	(prompt ("Where should %s installed ?" @app-name @app-name))
	(help @askdir-help)
	(default @default-dest)
	(disk)
)
)

(set #dest (@default-dest))

(set #CI_drive "DF0:")

;----------------------------

(message ("\nInsert Damocles mission disk 1 into drive %s \n\nWARNING!!!\nThis will destroy your saved games!" #CI_drive))

	(if
		(= 0 (run ("MD1_extract")))
		("")
		(abort)
	)

(copyfiles
	(help @copyfiles-help)
	(source "Mercenary2.save1")
	(dest #dest)
	(infos)
)

(copyfiles
	(help @copyfiles-help)
	(source "Mercenary2.save2")
	(dest #dest)
	(infos)
)

(copyfiles
	(help @copyfiles-help)
	(source "Mercenary2.save3")
	(dest #dest)
	(infos)
)

(copyfiles
	(help @copyfiles-help)
	(source "Mercenary2.save4")
	(dest #dest)
	(infos)
)

(copyfiles
	(help @copyfiles-help)
	(source "Mercenary2.save5")
	(dest #dest)
	(infos)
)
