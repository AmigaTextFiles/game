
;----------------------------

;try to figure out a place where the user usually installs his games
(if (exists "Games:" (noreq) )
    (set @default-dest "Games:")
    (if (exists "SYS:Games" (noreq) )
        (set @default-dest "SYS:Games")
        (if (exists "Work:Games" (noreq) )
            (set @default-dest "Work:Games")
            (set @default-dest "RAM:")
        )
    )
)


(set @default-dest
(askdir
	(prompt ("Where should %s installed ?\nA drawer \"%s\" will automatically created." @app-name @app-name))
	(help @askdir-help)
	(default @default-dest)
	(disk)
)
)

(set #dest (tackon @default-dest @app-name))

(copyfiles
	(help @copyfiles-help)
	(source "Clown-o-maniaHD.readme")
	(dest #dest)
	(infos)
)

(copyfiles
	(help @copyfiles-help)
	(source "Clown-o-mania.info")
	(dest #dest)
	(infos)
)

(copyfiles
	(help @copyfiles-help)
	(source "Clown-o-mania.slave")
	(dest #dest)
	(infos)
)

(set #CI_drive "DF0:")

(makedir #dest
	(help @makedir-help)
	(infos)
)

;----------------------------

(message ("\nInsert Clown-o-mania disk into drive %s " #CI_drive))

	(if
		(= 0 (run ("disk2file 0 Disk.1")))
		("")
		(abort)
	)

(copyfiles
	(help @copyfiles-help)
	(source "Disk.1")
	(dest #dest)
	(infos)
)

