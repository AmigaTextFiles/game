Newshell "con:/11/640/200/          MALICE Patcher          "
echo "*N"
Requestfile >env:EXEname TITLE="Select PAK1 from malice-dir"
if warn
   echo >env:msg "Operation canceled....!"
   skip end
endif
if not exists $EXEname
   echo >env:msg "File does not exist....!"
   skip end
endif
Requestfile >env:PATCHname TITLE="Select patch (pak1.pch)"
if warn
   echo >env:msg "Operation canceled....!"
   skip end
endif
Requestfile >env:EXEdest TITLE="Choose output dir & filename (PAK1.NEW)"
if warn
   echo >env:msg "Operation canceled....!"
   skip end
endif
Wpatch $EXEname $EXEdest $PATCHname
echo "*N done!"
delete >nil: env:EXEname env:EXEdest env:PATCHname
endcli
