;
; Installer by software failure/airsoft `97
; 

echo ""
echo "Welcome to SSD Tunnelcheater installation"
echo ""
echo noline "Continue (y/n) ? "

Set >NIL: ques ?

If $ques EQ y
  skip yo
endif

echo ""
echo "CU"
quit

Lab yo

echo ""
echo "Which version do you want install? "
echo ""
echo noline "(C)D-ROM         (H)arddisk ? "

set >NIL: ver ?

if $ver EQ C
  skip cd
else
  skip hd
endif

Lab cd
C:Requestfile >ENV:af TITLE "Select destination" DRAWERSONLY

Assign af: $af

skip ok

Lab hd
C:Requestfile >ENV:af TITLE "Select SSD drawer" DRAWERSONLY

Assign af: $af

if exists af:loader
  skip ok
else
  echo "File loader not found"
  quit
endif

Lab ok

Copy >NIL: scheat $af
Copy >NIL: Tunnelcheater $af
Copy >NIL: Tunnelcheater.inf af:Tunnelcheater.info
Copy >NIL: delete C:
Copy >NIL: execute C:
Copy >NIL: rename C:

echo ""
echo "Finished!"
quit
 
 
