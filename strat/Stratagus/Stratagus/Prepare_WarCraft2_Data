assign wc2: cd0:

echo "This data extraction script is experimental and it's loosely based on 'build.sh' found on Wargus distro."

echo "It will only work if:"
echo "1. You have a WarpOS equipped Amiga and the PPC is already running"
echo "2. You must have a Warcraft 2 or expansion disk for DOS.  Battlenet edition will not work"
echo "3. Your WarCraft2 data is on CD0:.  If it isn't, amend the assign at the start of this script"

echo " "

ask "Should this script continue?"

IF WARN
echo "Extracting WarCraft2 data from 'WarCraft2:data/' using 'Wartool' ..."

echo " "

wartool WC2:data data.wc2

echo "Copying 'pud' files from WarCraft2: ..."

IF EXISTS WC2:puds

    echo "Copying WarCraft2:puds/ directory ..."

    copy WC2:puds/#? data.wc2/maps/ ALL

ENDIF

IF EXISTS WC2:alamo.pud

    echo "Copying WarCraft2:#?.pud files ..."

    copy WC2:#?.pud data.wc2/maps/

ENDIF

copy wargus/scripts/#? all data.wc2/scripts/

echo "Now to convert the audio.  This will take some time..."

Wait 5

copy FFMPEG.exe ram:FFMPEG

path ram: add

execute ConvertSound

echo "Done. If you didn't get serious errors, Wargus may be ready to play. HAVE FUN :)"

wait 5

ELSE

echo "Script exiting"
wait 1

ENDIF