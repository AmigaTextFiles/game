.key language
.bra {
.ket }

if "{language}" eq ""
  set language "Languages/"
  set language `requestfile Languages title "Select IT2 language" noicons`
  if "$language" eq "Languages/"
    quit
  endif
else
  set language "{language}"
endif

copy "$language" "Language.txt"
if not warn
  if not warn
    requestchoice >NIL: "IT2 language" "Language '$language' installed." "OK"
    quit
  endif
endif
