; Update ST
; Imperium Terranum 2 -> STAR TREK - Special Edition -

(set def-dest
   (askdir
      (prompt "Wo befindet sich das bereits installierte Spiel IMPERIUM TERRANUM 2 - War Of The Worlds?")
      (help "Hier ist der komplette Pfad zur IMPERIUM-TERRANUM-Schublade anzugeben."
            "Das Update auf die STAR TREK Special Edition ist nur mit der Version 2 möglich!")
      (default "WORK:")))

(set my-dest (tackon def-dest "IT"))
(if (= 0 (exists my-dest))
    ((set def-dest (tackon def-dest "IMPERIUM TERRANUM"))
     (set my-dest (tackon def-dest "IT"))
     (if (= 0 (exists my-dest))
         (abort "Ich kann bereits installierte Spiel hier nicht finden!"))))
(set @default-dest (def-dest))

(copyfiles (source "FONTS/") (dest "FONTS:") (all))
(message "Es werden jetzt alle neuen Dateien der Special Edition auf die Festplatte kopiert!")

(set my-dest (tackon def-dest "DATA"))
(copyfiles (source "DATA/") (dest my-dest) (all))
(set my-dest (tackon def-dest "INTRO"))
(copyfiles (source "INTRO/") (dest my-dest) (all))
(set my-dest (tackon def-dest "SFX"))
(copyfiles (source "SFX/") (dest my-dest) (all))
(set my-dest (tackon def-dest "SHIPS"))
(copyfiles (source "SHIPS/") (dest my-dest) (all))
(copyfiles (source "STAR_TREK") (dest def-dest) (infos))
(copyfiles (source "IT_ST") (dest def-dest))



















