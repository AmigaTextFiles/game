.key nix
.bra {
.ket }

; InstallXPM - Sebastian Huebner <cyco@gmx.de> 28-Aug-1998
; Install libXpm.ixlibrary to GG:Sys/libs
; NOTE: Xpm is included in the GeekGadgets distribution, but as src only.
; $VER: 0.1

SetEnv GGSYSLIBS "GG:Sys/libs"
SetEnv LIBNAME   "libXpm.ixlibrary"
SetEnv GGSYSLIBSLIBNAME $GGSYSLIBS/$LIBNAME
SetEnv VERSION `Version $LIBNAME`

;Echo $GGSYSLIBS
;Echo $LIBNAME
;Echo $GGSYSLIBSLIBNAME
;Echo $VERSION

If EXISTS $GGSYSLIBSLIBNAME
  Echo "`Version $GGSYSLIBSLIBNAME` found in $GGSYSLIBS !"
Else
  Echo "No $LIBNAME found in $GGSYSLIBS."
EndIf

Ask "Install $VERSION to $GGSYSLIBS ? (Y)es/(N)o:"
If WARN
  ;Do it
  Echo "Copy $LIBNAME TO $GGSYSLIBS"
  Copy $LIBNAME TO $GGSYSLIBS
  Echo "Installation completed."
Else
  ;Don't do it
  Echo "Installation aborted."
EndIf
