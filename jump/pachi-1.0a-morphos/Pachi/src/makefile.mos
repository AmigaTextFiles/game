CC			=	ppc-morphos-gcc
CHMOD		=	chmod
RM			=	rm -f
STRIP		=	strip


CFLAGS	=	-g -O2 -Wall `sdl-config --cflags`
LDFLAGS	=	`sdl-config --libs` -lSDL_mixer


OBJ		= faes.o
BIN		= Pachi


all: $(BIN)

$(BIN): $(OBJ)
		$(CC) $(OBJ) -o $(BIN).db $(LDFLAGS)
		$(STRIP) --strip-unneeded --remove-section=.comment $(BIN).db -o $(BIN)
		$(CHMOD) u+x $(BIN)

%.o:	%.cpp
		$(CC) $(CFLAGS) -c $<

clean:
		$(RM) $(OBJ) $(BIN).db $(BIN)
