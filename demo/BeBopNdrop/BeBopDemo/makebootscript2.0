resident c:copy
resident c:assign
resident c:makedir
resident c:delete
copy c:install ram:
copy c:loadwb ram:
copy sys:system/fixfonts ram:
makedir ram:temp
makedir ram:temp/fonts
makedir ram:temp/fonts/diamond
makedir ram:temp/fonts/garnet
makedir ram:temp/libs
copy fonts:diamond ram:temp/fonts/diamond all
copy fonts:diamond.font ram:temp/fonts
copy fonts:garnet ram:temp/fonts/garnet all
copy fonts:garnet.font ram:temp/fonts
copy libs:diskfont.library ram:temp/libs
copy ram:temp BB&D: all
makedir BB&D:c
copy ram:loadwb BB&D:c
assign fonts: BB&D:fonts
fixfonts
IF EXISTS df0:blitter_piece_images
  install df0:
ELSE
  IF EXISTS df1:blitter_piece_images
    install df1:
  ELSE
    IF EXISTS df2:blitter_piece_images
      install df2:
    ELSE
      IF EXISTS df3:blitter_piece_images
        install df3:
      ENDIF
    ENDIF
  ENDIF
ENDIF
assign fonts: sys:fonts
delete ram:temp all
delete ram:fixfonts
