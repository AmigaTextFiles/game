.key a
.bra {
.ket }
ECHO "Making the BeBop 'N Drop Demo Disk bootable requires a disk"
ECHO "named BB&D in df0:, df1:, df2:, or df3: that contains the"
ECHO "unarc'ed files from bebop.lzh !"
ECHO " "
ECHO "Click on 'Cancel' if System prompts for non-existent disk drive"
ECHO " "
ASK "*nDo you wish to continue? [y|*e[1m*e[33mn*e[0m]  "
IF NOT WARN
  ECHO "*nExiting without building boot disk....."
ELSE
  cd ram:
  copy BB&D:makebootscript ram:
  execute makebootscript
ENDIF
