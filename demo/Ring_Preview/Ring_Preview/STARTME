echo   "Starte das Spiel..."

assign "FONTS:"    "fonts" ADD
assign "LIBS:"     "libs" ADD

assign "DerRing:"  ""
assign "RingSave:" "save"
assign "RingMisc:" "misc"

copy "RingMisc:" TO ram: CLONE
copy "DerRing:tuere.brush" TO ram: CLONE
makedir "ram:dungeon"
makedir "ram:dungeon/tueren"
copy "DerRing:dungeon/tueren" TO "ram:dungeon/tueren" ALL
type file_id.diz
wait 3

derring

delete "ram:dungeon/tueren" ALL
delete "ram:dungeon" ALL

assign "FONTS:"    "fonts" REMOVE
assign "LIBS:"     "libs" REMOVE

wait 3
echo   "Ende."

