(set @default-dest "Libs:")

	(set #t_copylib "Copying bgui.library to Libs:")

	(set #t_welcome		(cat
		" This script will install the BGUI library"
		" in your Libs: drawer.\n"
		" BGUI is required by the preferences program."
	))

(message #t_welcome)

(copylib
	(prompt #t_copylib)
	(help @copylib-help)
	(source "bgui.library")
	(dest "Libs:")
	(confirm)
)
