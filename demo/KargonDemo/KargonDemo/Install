TITEL "Kargon-Installation"
TEXT "      Achtung: Die Installation verbraucht ca. 1 MB"
TEXT "                auf Deiner Festplatte !"
TEXT " "
TEXT "                     Weitermachen ?"
TEXT " "
TEXT " "
TEXT " "
TEXT " "
ASK
IFG "1"
CLEAR
ASKDIR ""
TEXT "Kopiere Diskette !"
COPY "KargonDemo:AllFonts.fpp" "AllFonts.fpp"
COPY "KargonDemo:AllIntern.fpp" "AllIntern.fpp"
COPY "KargonDemo:AllofTitle.fpp" "AllofTitle.fpp"
COPY "KargonDemo:SkriptExt.sct" "SkriptExt.sct"
SETPROC "20"
COPY "KargonDemo:ExtraItems.sct" "ExtraItems.sct"
COPY "KargonDemo:KargonDEMO" "KargonDEMO"
COPY "KargonDemo:KargonDEMO.info" "KargonDEMO.info"
SETPROC "40"
COPY "KargonDemo:MenueItems.sct" "MenueItems.sct"
COPY "KargonDemo:Music.dat" "Music.dat"
COPY "KargonDemo:MusicTitle.dat" "MusicTitle.dat"
COPY "KargonDemo:PlSkript13.sct" "PlSkript13.sct"
SETPROC "60"
COPY "KargonDemo:SamplesList.lst" "SamplesList.lst"
COPY "KargonDemo:Skript3.sct" "Skript3.sct"
COPY "KargonDemo:TitlePages.demo.fpp" "TitlePages.demo.fpp"
COPY "KargonDemo:VorGfx.demo.fpp" "VorGfx.demo.fpp"
SETPROC "80"
COPY "KargonDemo:level.dat" "level.dat"
COPY "KargonDemo:CharAnim.sct" "CharAnim.sct"
COPY "KargonDemo:Marmor.dat" "Marmor.dat"
COPY "KargonDemo:Players.demo.sct" "Players.demo.sct"
SETPROC "100"
TEXT "Korrigiere ToolType 'GamePath' !"
OPENFILE "RAM:Kargon_Temp"
WRITEFILELN "%s"
CLOSEFILE ""
CALLPRG "KargonDemo:ChangeIcon.exe"
CLEAR
TEXT "Installation erfolgreich abgeschlossen !"
SHOWTEXT
ENDIF
