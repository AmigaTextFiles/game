.key dest

FAILAT 	20
 IF "<dest>" NOT EQ ""
  ASK "install links in <DEST>LINKS?"
  IF WARN
    makedir <dest>LINKS
    lharc -x -a x links.lzh <dest>LINKS/
    copy /LINKS.info to <dest>
  ELSE
    ECHO "INSTALL CANCELED!"
  ENDIF
 ELSE
  ASK "Do you wish to install links in the current directory/Drawer?"
  IF WARN
    lharc -x -a x links.lzh
    ECHO " Now you may remove links.lzh from your links directory."
    ECHO " Close and re-open the links drawer to see the links game ICON."
    ASK "Hit return to continue."
  ELSE
    ECHO "INSTALL CANCELED!"
  ENDIF
 ENDIF
