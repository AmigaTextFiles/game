#EX_OPTS = DEBUG=LINE
EX_OPTS = OPTIMIZE OPTCOMP=9 OPTDEP=9 OPTSCHED CPU=020 IGN=304,306
SC_OPTS = NOICONS ERRORREXX NOCHECKABORT NOSTACKCHECK MEMORYSIZE=HUGE \
          PARAMETERS=REGISTERS STRINGMERGE $(EX_OPTS)
SL_OPTS = NOICONS SMALLCODE SMALLDATA

OBJS = BulletMe.o
LIBS = LIB:sc.lib LIB:amiga.lib LIB:debug.lib

BulletMe: $(OBJS)
	slink $(SL_OPTS) FROM LIB:c.o $(OBJS) LIB $(LIBS) TO $@

.c.o:
	sc $(SC_OPTS) $<

clean:
	delete $(OBJS)
