;
; Albatross Antics Installation Script
; Anthony Roberts 1996
; anthonyr@pavilion.co.uk
;


(set @default-dest "Work:")




(if (exists "LIBS:amos.library")
	(
     ; find amos.library installed version
	 (set vernum-amos-inst (getversion "libs:amos.library"))
	 (set ver-amos-inst (/ vernum-amos-inst 65536))
	 (set rev-amos-inst (- vernum-amos-inst (* ver-amos-inst 65536) ) )
	 )
)
; find reqtools.library in alb distribution
(set vernum-reqt-alb (getversion "libs/amos.library"))
(set ver-amos-alb    (/ vernum-amos-alb 65536))
(set rev-amos-alb    (- vernum-amos-alb (* ver-amos-alb 65536) ) )


 (set #install-msg
	(cat ("\n\n Albatross Antics\n\n\n")
 		" This script installs Albatross Antics and related files on your Amiga.\n\n"
		)
)

(set #install-a-msg
	(cat 
		"Please select the directory where you want"
		" Albatross Antics.\n"
	)
)




(set #install-amos-msg
		(cat "\n\n  \n"
			"Do you want to install amos.library 2.0 in LIBS: ?"
		)
)

(set #help
	(cat ("\n\n Eh?\n")
	)
)

(set #ramnotice
		(cat "\n\n"
			"If you have only 2Mb of Ram or less, \n you MUST assign T: to your hard drive. \n\n eg. type `Assign T: Work:' \n in a shell window"
		)
)

; *****************************************************************

(message #install-msg)

(set @default-dest
(askdir
   (prompt #install-a-msg)
   (help @askdir-help)
   (default "Work:")
   )
)

	( copyfiles 
		(help @copyfiles-help)
		(source "AAntics")
		(dest @default-dest)
		(infos)
	)
	
	( copyfiles
		(help @copyfiles-help)
		(source "AAntics.guide")
		(dest @default-dest)
		(infos)
	)


	( copyfiles
		(help @copyfiles-help)
		(source "data")
		(dest (tackon @default-dest "Data"))
		(all)
	)



	


; SHOULD WE INSTALL AMOS.LIBRARY ?


(if (exists "LIBS:amos.library")
  (
	
	( copyfiles
	    (prompt #install-amos-msg)
		(help @copyfiles-help)
		(source "libs/amos.library")
		(dest "LIBS:")
		(confirm)
    	)
  )
)

(message #ramnotice)

(exit "\n\n" "Please read the document before complaining that its a stupid game and you can't be bothered to play it !!")