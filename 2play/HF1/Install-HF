; $VER: Helsinki Force Installer script 1.0 (5.5.95)
(set app-name ("Helsinki Force"))

(set destdir
  (askdir
    (prompt ("Please select a directory where Helsinki Force  should be copied\nNo directory will be created by the script."))
    (help @askdir-help)
    (default @default-dest)
  )
)
(copyfiles 
  (prompt ("Copying Helsinki Force disk 1\nto \"%s\"" destdir))
  (source "HF1:")
  (pattern "~(CD|L|Devs|s/startup-sequence|Install-HF|Install-HF.info|DiskinVaihto#?|HFlatauskuva diskinv.anim8)")
  (dest destdir)
)
(rename (tackon destdir "HF-Icon") (tackon destdir "HF.info"))
(rename (tackon destdir "Ass") (tackon destdir "HF"))
(askdisk
  (prompt ("Please insert\nHelsinki Force disk 2\n in any drive"))
  (help @askdisk-help)
  (dest "HF2")
)
(copyfiles 
  (prompt ("Copying Helsinki Force disk 2\nto \"%s\"" destdir))
  (source "HF2:")
  (pattern "~(DiskinVaihto#?|HFlatauskuva diskinv.anim8)")
  (dest destdir)
)
(askdisk
  (prompt ("Please insert\nHelsinki Force disk 3\n in any drive"))
  (help @askdisk-help)
  (dest "HF3")
)
(copyfiles 
  (prompt ("Copying Helsinki Force disk 3\nto \"%s\"" destdir))
  (source "HF3:")
  (pattern "~(DiskinVaihto#?|HFlatauskuva diskinv.anim8)")
  (dest destdir)
)
(set @default-dest destdir)
