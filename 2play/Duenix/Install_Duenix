; Duenix
; Installation Script - 5/9/97

(set LANG
	(askchoice
		(prompt " Select the language of the game\nZvol jazyk hry")
		(help @askchoice-help)	
		(choices "English   =   Angli√tina" "Czech     =   „e”tina")
		(default 0)
	)
)

(if (= LANG 0)
   (
	(set WHERE_TO_INSTALL  "Where do you wish to install Duenix?\n")
	(set NEW_DIR_CREATED "A directory named 'Duenix' will be created there")
	(set INSERT_DUENIX "Please insert volume Duenix:")
	(set CHECKING_VER "Checking version of ")
	(set COPYING_AMOS_LIB "Copying amos.library\n  (really strange 'library')")
	(set INSTALLING_DATA "Installing data files")
	(set INSTALLING_FONT "Installing font")
	(set LOCALIZING "Localizing")
	(set LANGUAGE_SOURCE "Dx/english_files")
	(set GUIDE_FILENAME "Duenix_guide.txt")
   )
)

(if (= LANG 1)
   (
	(set WHERE_TO_INSTALL  "Kam si preje” Duenix nainstalovat?\n")
	(set NEW_DIR_CREATED "Bude zde vytvo“en adres¡“ 'Duenix'")
	(set INSERT_DUENIX "Vlo⁄ pros…m disk Duenix:")
	(set CHECKING_VER "Ov≈“uji verzi ")
	(set COPYING_AMOS_LIB "Kop…ruji amos.library\n  (podivn¡ 'knihovna')")
	(set INSTALLING_DATA "Installuji datov◊ soubory")
	(set INSTALLING_FONT "Installuji font")
	(set LOCALIZING "Po√e”‘uji ...")
	(set LANGUAGE_SOURCE "Dx/czech_files")
	(set GUIDE_FILENAME "Duenix_pruvodce.txt")
   )
)

(if (= @default-dest "Duenix:")
   (set @default-dest "Ram:")
)
(set MAINPATH
	(askdir
		(prompt WHERE_TO_INSTALL NEW_DIR_CREATED)
		(help @askdir-help)
		(default @default-dest)
		(newpath)
	)
)

(set MAINPATH (tackon MAINPATH "Duenix"))
(makedir MAINPATH(infos))

(set @default-dest MAINPATH)

(copylib
	(prompt CHECKING_VER "diskfont.library" )
	(help @copylib-help)
	(source "libs/diskfont.library")
	(dest "libs:")
	(confirm)
)

(copylib
	(prompt CHECKING_VER "mathtrans.library")
	(help @copylib-help)
	(source "libs/mathtrans.library")
	(dest "libs:")
	(confirm)
)

(complete 7)

(copyfiles
	(prompt COPYING_AMOS_LIB)
	(help @copyfiles-help)
	(source "libs/amos.library")
	(dest "libs:")
	(confirm)
)

(complete 10)

(copyfiles
	(prompt INSTALLING_DATA)
	(source "Dx")
	(help @copyfiles-help)
	(dest MAINPATH)
	(all)
)

(complete 95)

(copyfiles
	(prompt INSTALLING_FONT)
	(source "Fonts")
	(help @copyfiles-help)
	(dest "Fonts:")
	(all)
)



(copyfiles
	(prompt LOCALIZING)
	(source LANGUAGE_SOURCE)
	(pattern "Language")
        (help @copyfiles-help)	
	(dest MAINPATH)
)
(copyfiles
	(prompt LOCALIZING)
	(source "")
	(pattern GUIDE_FILENAME)
        (help @copyfiles-help)	
	(dest MAINPATH)
 )

(complete 100)

(exit)
