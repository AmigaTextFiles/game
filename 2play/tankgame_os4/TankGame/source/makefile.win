CC = g++
CFLAGS = -O2 -Wall
LDFLAGS = -mwindows -lalleg
OBJ = Arena.o GameState.o logfile.o myMath.o Particles.o Player.o Scoreboard.o Shot.o Tank.o main.o
MAINBIN = ../TankGame.exe

tankgame: $(OBJ)
	$(CC) -o $(MAINBIN) $(OBJ) $(LDFLAGS)

%.o: %.cpp
	$(CC) $(CFLAGS) -c $<

clean:
	del $(OBJ)
	del ..\TankGame.exe