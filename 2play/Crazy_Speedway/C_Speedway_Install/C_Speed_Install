(set @app-name "Crazy Speedway 1.0 Installer")
(set @pretend 0)
(set @user-level 2)

(welcome #MSG_WELCOME)
(set #default-dest (askdir (prompt #MSG_ASKDIR) (default @default-dest) (help #HELP_ASKDIR) (disk)))
 (
  (working #MSG_UNPACK)
  (run ("lhex >CON: -fw= \"%s\" x C_Speed.lha" #default-dest))
  (run "avail >NIL: flush")
  (complete 100)
  (exit #MSG_COMPLETE (quiet))
 )
