ECHO "*Ec"
ask "Do you want to run the German installation (y/n)?"
IF WARN
 skip German
ENDIF

ECHO ""
ECHO ""
ECHO "Installing font (LS.font)..." NOLINE

copy >NIL: fonts fonts: ALL
IF Exists libs
 ECHO "*NInstalling libraries..." NOLINE
 copy >NIL: libs LIBS: ALL
ENDIF

ECHO ""
ECHO ""
ECHO "Installation complete. Please make sure that the Reqtools.library is"
ECHO "installed to the LIBS:-directory."
ECHO ""
ECHO "If you want to install LS-Tron to your HD just drag the LS-Tron"
ECHO "directoryicon into your games directory."
ECHO ""
ECHO "Press <RETURN>" NOLINE
Skip End

lab german

ECHO ""
ECHO ""
ECHO "Installiere den Zeichensatz LS.font..." NOLINE

copy >NIL: fonts fonts: ALL
IF Exists libs
 ECHO "*NInstalliere Libraries..." NOLINE
 copy >NIL: libs LIBS: ALL
ENDIF

ECHO ""
ECHO ""
ECHO "Installation beendet."
ECHO ""
ECHO "LS-Tron kann jetzt gestartet werden. Beachten Sie aber, daß die"
ECHO "Reqtools.library im Verzeichnis libs: benötigt wird."
ECHO ""
ECHO "Wenn Sie LS-Tron auf ihre Festplatte installieren wollen, müssen"
ECHO "Sie jetzt nur noch, das LS-Tron-Verzeichnisicon in Ihr Spiele-"
ECHO "verzeichnis ziehen."
ECHO ""
ECHO "<Return> drücken" NOLINE

lab End

Readln
ECHO "*N*N*N*N*N*N*N*N*N*N*N*N*N*N*N*N*N*N*N*N*N*N*N*N*N*N*N*N*N*N*N*N*N*N*N*N*N*N*N*N*Ec" NOLINE
