; Script de instalacion
;

(if (= @language "Español")
(
   (set #default_language
      (cat  "0")
   )
   (set #WhereOnDisk
      (cat  "¿En que unidad debe ser instalado el juego Bomb?\nEl Programa creara un directorio, pero no icono del directorio.")
   )
   (set #DiskInsert
      (cat  "Por favor inserta el disco de Bomb\".")
   )
   (set #DiskInsert1Help
      (cat  "El disco de Bomb sera instalado al . "
         "directorio especificado.")
   )


)
)

(set bomb_dest
   (tackon
      (askdir
         (prompt #WhereOnDisk)
         (help @askdir-help)
         (default @default-dest)
      )
      "Bomb"
   )
)



(askdisk
   (prompt #DiskInsert)
   (help #DiskInsertHelp)
   (dest "Bomb")
   (newname "Bomb")
)

(set @default-dest Bomb_dest)

(copyfiles
   (source "Bomb:")
   (pattern "#?")
   (dest Bomb_dest)
)


(copyfiles
    (source "Bomb:libs")
    (pattern "#?")
    (dest "libs:")
)

(copyfiles
    (source "Bomb:c")
    (pattern "#?")
    (dest "c:")
)


(exit)
