;
; ©Bomb,By Balrog
; Script de instalacion
;

(if (= @language "Español")
(
   (set #default_language
      (cat  "0")
   )

)
)

(set #InstallationComplete
      (cat  "\n\nLibrerias instaladas, ya puedes jugar."  )
   )                                 

(copyfiles
    (source "Bomb:libs")
    (pattern "#?")
    (dest "libs:")
)

(copyfiles
    (source "Bomb:c")
    (pattern "#?")
    (dest "c:")
)

(message
   #InstallationComplete

)

(exit)
