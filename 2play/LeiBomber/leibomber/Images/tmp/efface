#!/bin/sh

for I in *.gif 
do
    echo "Pour Manu : "$I
    X=$(echo $I | cut -b 6)
    echo "X = "$X
    if [ $(expr $X % 2) = "0" ]
    then
	echo "Fichier "$I" effacé"
	rm $I
    else
	V=$(expr $(expr $X - 1) / 2)
	echo "Nouveau nom : "$(echo $I | cut -b -5)$V".gif"
	mv $I $(echo $I | cut -b -5)$V".gif"
    fi
    echo 
done
    

