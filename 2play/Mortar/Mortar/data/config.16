#
# MORTAR configuration file for 16-color mode (Atari TOS)
#
# Format:
# - Everything on line after '#' character is ignored.
# - Configurations are set with: 'variable=value'.
# - Maximum line lenght is 255 characters.
#
# Notes:
# - Command line options override options here.
# - An additional GUI program for setting these and then running
#   Mortar might be nice...

# message language
language = english

# enable screen snapshot
snapshot = snapshot.pic

# rounds to play
rounds = 3

# player with least wins / money starts next round
reverse = 1

# money at startup, you'll need it to buy utils and better ammo
money = 2000

# bonus money amounts
winner_bonus = 2000
kill_bonus = 100
hit_bonus = 10

# how much less than you paid yourself selling an item gives you (percentage)
discount = 10

# base shield price
shield_price = 1000

# ------ options below this line *have to* be present ---------

# max. shield energy, related to damage
shield = 120

# initial tank energy (which damage will decrease)
energy = 400

# explosion damage factor (1->), related to radius and energy
damage = 10

# explosion size (1->), related to damage and energy
radius = 2

# object downforce scaler (0.2 - 5.0), related to shot power
gravity = 1.0

# at most 1/8 pixel sidewise in one move
max_wind  = 32

# play area ground 'raggedness' (0.5 - 4.0)
jaggedness = 1.0

# game timeouts in milliseconds
frame_time = 16		# screen update interval (~60Hz)
input_time = 200	# key repeat interval

# in which steps you can change the shot power
power_inc = 5

# -- game images --
width  = 320
height = 200

sky    = sky.16
ground = ground.16

font    = font.16
first   = 32
columns = 16
rows    = 14

player = cannon.16
frames = 17

shot = shot.16

