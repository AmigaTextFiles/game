OBJS = game.o gameMode.o general.o mainMode.o mindless.o setupMode.o
CFLAGS = -newlib -O2 -Wall -g -c
LDFLAGS = -newlib -o
LDLIBS = -lSDL_Image -lpng -ljpeg -lz -lSDL_ttf  -lfreetype -lSDL -lauto -lpthread
DEFINES = -DSHARE_DIR="data"
mindless: $(OBJS)
	g++ $(LDFLAGS) $@ $(OBJS) $(LDLIBS)
%.o : %.cc
	g++ $(CFLAGS) $(DEFINES) $<
clean:
	delete #?.o
