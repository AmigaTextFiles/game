;**************************************************************************** 
;
; $Source: MASTER:TRC/Tools/Install,v $
; $Revision: 1.0 $
; $Date: 1997/04/26 12:50:27 $
;
; Installer script to install HexagonII-The Russian Campaign.
;
;****************************************************************************

; Find out where TRC should be installed.

(set appdir
   (askdir
      (prompt 
         (cat "Where should HexagonII-The Russian Campaign be installed? "
              "A drawer named TRC will be created."
         )
      )
      (help @askfile-help)
      (default @default-dest)
      (newpath)
   )
)

(set @default-dest (tackon appdir "TRC"))


; Install TRC stuff.

(copyfiles 
   (source "")
   (dest @default-dest)
   (choices "Copyright" "TRC.guide" "TRC" "map.ilbm" "AtStart.trc")
   (infos)
   (optional "force")
)


; Install required libraries. 

(copylib 
   (prompt "Where should garbagecollector.library go?")
   (help @copylib-help)
   (source "libs/garbagecollector.library")
   (dest "LIBS:")
   (confirm)
)

(copylib 
   (prompt "Where should iff.library go?")
   (help @copylib-help)
   (source "libs/iff.library")
   (dest "LIBS:")
   (confirm)
)
