DEFINITION MODULE FileSystemSupport;

FROM FileSystem IMPORT
  File;

(* ReadString strips evt. trailing CR's (used in PCs TEXT files) *)
PROCEDURE ReadString(VAR f:File; VAR st:ARRAY OF CHAR);

PROCEDURE WriteString(VAR f:File; st:ARRAY OF CHAR); (* with linefeed *)

PROCEDURE WriteStr(VAR f:File; st:ARRAY OF CHAR);    (* No Linefeed *)

END FileSystemSupport.
