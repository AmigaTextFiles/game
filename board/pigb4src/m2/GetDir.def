DEFINITION MODULE GetDir;

TYPE
  DirArray=ARRAY[1..256] OF RECORD
                              Type:LONGINT; (* <0 file, >0 (2) dir *)
                              Size:LONGINT;
                              Name:ARRAY[0..31] OF CHAR;
                            END;
  DirArrayPtr=POINTER TO DirArray;

PROCEDURE ScanDir(path:ARRAY OF CHAR; dap:DirArrayPtr):INTEGER;

END GetDir.
