# makefile for AddTraction
# see README for everything you may want to know ;)
 
INSTALL_PATH = /usr/bin
INSTALL_EXEC = cp

all:
	gcc `sdl-config --cflags --libs` addt.c -o addt -lSDL

install:
	mkdir -p $(BITMAP_PATH)
	$(INSTALL_EXEC) bmps/* $(BITMAP_PATH)
	$(INSTALL_EXEC) addt $(INSTALL_PATH)

clean:
	rm addt
