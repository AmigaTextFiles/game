;start script for õzemÉ (HDD support)
;$VER:Start-script 1.0 (20.07.97)

;exists needed fonts?

if exists "fonts:"
    if not exists "fonts:MK_LightP"
        copy >NIL: fonts/#? fonts: all noreq
    endif
endif

;exists Amos_system?

cd >RAM:cp
iascom >ram:drv `cd`
cd >NIL: <RAm:drv ?
if not exists "AMOS_SYSTEM"
    cd >NIL: <RAM:cp ?
    copy >NIL: amos_sys#? <ram:drv all noreq ?
endif
cd >nil: <RAM:cp ?
delete >NIL: ram:cp
delete >NIL: ram:drv

;go
Ramos Loader.amos

