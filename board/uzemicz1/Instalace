(complete 0)

(message
    "\n\nızem… je shareware.\n\nPodrobnosti naleznete v souboru `Registrace'"
)

(complete 3)

(set #DEST0
    (askdir
        (prompt "Kam si p“ejete instalovat `ızem…'? Vytvo“… se zde adres¡“ pojmenovanŸ `Uzemi'.")
        (help @askdir-help)
        (default "Work:")
    )
)


(set #DEST (tackon #DEST0 "Uzemi"))
(makedir #DEST (infos))
(set #HDD (tackon #DEST "HDD"))


(complete 7)

(copyfiles (dest #DEST) (source "Uzemi_A:Ramos"))
(copyfiles (dest #DEST) (source "Uzemi_A:Loader.amos"))
(copyfiles (dest #DEST) (source "Uzemi_A:Intro2.amos"))
(copyfiles (dest #DEST) (source "Uzemi_A:Uzemi8.amos"))
(copyfiles (dest #DEST) (source "Uzemi_A:zoom.abk"))
(copyfiles (dest #DEST) (source "Uzemi_A:Intro.mus"))
(copyfiles (dest #DEST) (source "Uzemi_A:Uzemi"))
(copyfiles (dest #DEST) (source "Uzemi_A:Uzemi.Info"))
(copyfiles (dest #DEST) (source "Uzemi_A:IASCom"))
(copyfiles (dest #DEST) (source "Uzemi_A:Read_me"))
(copyfiles (dest #DEST) (source "Uzemi_A:Read_me.info"))
(copyfiles (dest #DEST) (source "Uzemi_A:Registrace"))
(copyfiles (dest #DEST) (source "Uzemi_A:Registrace.info"))

(complete 27)

(makedir (tackon #DEST "AMOS_SYSTEM"))
(copyfiles
    (dest (tackon #DEST "AMOS_SYSTEM"))
    (source "Uzemi_A:Amos_system/")
    (pattern "#?")
    (files)
)

(complete 34)

(set #FONTDEST
    (askdir
        (prompt "Instalace pot“ebnŸch font ")
        (help @askdir-help)
        (default "Fonts:")
    )
)

(complete 42)

(copyfiles
    (source "Uzemi_A:fonts")
    (dest #FONTDEST)
    (all)
)

(complete 51)

(copyfiles
    (prompt "Kop…ruj… se soubory z datov◊ diskety")
    (help @copyfiles-help)
    (source "Uzemi_B:")
    (dest #DEST)
    (all)
)

(complete 94)

(textfile
    (dest #HDD)
    (append "HDD\n")
)

(complete 100)

(exit "D≈kuji za instalov¡n…")

