.key dest
Echo " "
Echo "This script will copy 'Solitaire Sampler' on to a new disk"
if "<dest>" eq ""
	echo "To use this script, please supply a destination drive/directory"
	echo "that you want the program copied to, e.g. "
	echo "EXECUTE INSTALL DH0/Games/' ... "
else
   ask "Ok to copy to <dest> (Y/N) ?"
	if WARN
		echo "Copying ..."
		Copy "Tower Software:Solitaire Sampler" <dest>
		echo "<dest>Solitaire Sampler..copied"
		Copy "Tower Software:Solitaire Sampler.info" <dest>
		echo "<dest>Solitaire Sampler.info..copied"
		Copy "Tower Software:SolitaireFiles" <dest>SolitaireFiles
		echo "The main program files have now been copied."
		echo "Solitaire Sampler also requires two fonts: topaz/11 and Times/24"
		ask "Do you want to copy these to 'fonts:' (Y/N) ?"
		if WARN
			echo "Copying ..."
			copy "Tower Software:Fonts/" Fonts: all
		else
			echo "Fonts have not been copied!"
		endif
		echo "Copy operation completed!"
		echo "Solitaire Sampler should now work from <dest>"
		echo "BUT you must add the line "
		echo "'ASSIGN Solitaire: <dest>SolitaireFiles/'"
		echo "to your 's/startup-sequence' file, to use the"
		echo "program all the time!"
		echo " "
		echo "Enjoy!"
		assign Solitaire: <dest>SolitaireFiles/
	else
		echo "Copy operation aborted!"
	endif
endif

