echo "Kopiere Risiko Zusatzdateien:"
echo " "
echo "LIBS:  ptreplay.library"
echo "FONTS: risiko/8"
echo "FONTS: risiko.font"
echo " "

echo "Kopiere PTReplay.library..."
copy libs ALL to SYS:LIBS/ >NIL:

echo "Kopiere Risiko.font..."
copy fonts ALL to SYS:FONTS/ >NIL:

echo "Installation abgeschlossen."
echo " "
wait 3
